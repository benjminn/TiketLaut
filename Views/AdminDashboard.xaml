<Window x:Class="TiketLaut.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Tiket Laut" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MinHeight="800" 
        MinWidth="1200"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <!-- Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Sidebar Button -->
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#267DAE"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E8EDF2"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D8E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#011C4B">
            <StackPanel>
                <!-- Logo & Header -->
                <Border Margin="20" Background="#00658D" Padding="15">
                    <StackPanel>
                    <TextBlock Text="ADMIN DASHBOARD" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtAdminName" 
                              Text="Admin Name" 
                              FontSize="12" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtAdminRole" 
                              Text="Role" 
                              FontSize="11" 
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <Button x:Name="btnMenuDashboard" 
                       Style="{StaticResource ActiveSidebarButton}"
                       Click="BtnMenuDashboard_Click"
                       Margin="10,20,10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuKapal" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuKapal_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸš¢" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Kapal" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuPelabuhan" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuPelabuhan_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš“" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Pelabuhan" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuJadwal" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuJadwal_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“…" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Jadwal" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuTiket"
                        Style="{StaticResource SidebarButtonStyle}" 
                        Click="BtnMenuTiket_Click"
                        Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽ«" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Tiket" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuPembayaran" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuPembayaran_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’³" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Pembayaran" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuNotifikasi" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuNotifikasi_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ””" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Notifikasi" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Admin Management (SuperAdmin Only) -->
                <Button x:Name="btnMenuAdmin" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuAdmin_Click"
                       Margin="10,5"
                       Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘¤" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Admin" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Test Marine Weather API -->
                <Button x:Name="btnTestWeather" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnTestWeather_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŒŠ" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Cek Cuaca" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Border Height="1" Background="#2AFFFFFF" Margin="20,20"/>

                <!-- Logout -->
                <Button Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnLogout_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸšª" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Logout" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Header -->
                <TextBlock x:Name="txtPageTitle" 
                          Text="Dashboard" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#011C4B"
                          Margin="0,0,0,20"/>

                <!-- Content Frame (akan di-switch berdasarkan menu yang dipilih) -->
                <ContentControl x:Name="contentArea">
                    <!-- Default: Dashboard Stats -->
                    <StackPanel x:Name="pnlDashboard">
                        <!-- Stats Cards Row 1 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Pengguna -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Total Pengguna" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalPengguna" Text="0" FontSize="32" FontWeight="Bold" Foreground="#00658D" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Tiket -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Total Tiket" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalTiket" Text="0" FontSize="32" FontWeight="Bold" Foreground="#28A745" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Kapal -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Total Kapal" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalKapal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FFC107" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Pelabuhan -->
                            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Total Pelabuhan" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalPelabuhan" Text="0" FontSize="32" FontWeight="Bold" Foreground="#DC3545" Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Stats Cards Row 2 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Pembayaran Menunggu -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Pembayaran Menunggu" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPembayaranMenunggu" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FD7E14" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Pendapatan Hari Ini -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Pendapatan Hari Ini" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPendapatanHariIni" Text="Rp 0" FontSize="24" FontWeight="Bold" Foreground="#20C997" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Pendapatan Bulan Ini -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Pendapatan Bulan Ini" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPendapatanBulanIni" Text="Rp 0" FontSize="24" FontWeight="Bold" Foreground="#17A2B8" Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Insights Row (NEW) -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Pengguna Baru 7 Hari -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Pengguna Baru (7 Hari)" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPenggunaBaru" Text="0" FontSize="32" FontWeight="Bold" Foreground="#6F42C1" Margin="0,5"/>
                                    <TextBlock Text="ðŸ“ˆ Minggu ini" FontSize="10" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>

                            <!-- Tiket Hari Ini -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Tiket Hari Ini" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTiketHariIni" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FF6B6B" Margin="0,5"/>
                                    <TextBlock Text="ðŸŽ« Hari ini" FontSize="10" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>

                            <!-- Jadwal Minggu Depan -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Jadwal Minggu Depan" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtJadwalMingguDepan" Text="0" FontSize="32" FontWeight="Bold" Foreground="#4ECDC4" Margin="0,5"/>
                                    <TextBlock Text="ðŸ“… 7 hari ke depan" FontSize="10" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>

                            <!-- Rata-rata Pendapatan Per Hari -->
                            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Rata-rata Pendapatan/Hari" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtRataPendapatan" Text="Rp 0" FontSize="24" FontWeight="Bold" Foreground="#F39C12" Margin="0,5"/>
                                    <TextBlock Text="ðŸ’° Bulan ini" FontSize="10" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Tabel Detail Pendapatan Per Rute & Kapal -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,30,0,0">
                            <StackPanel>
                                <!-- Header Tabel dengan Filter Bulan -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Detail Pendapatan per Rute &amp; Kapal" 
                                                  FontSize="18" 
                                                  FontWeight="Bold" 
                                                  Foreground="#011C4B"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,20,0"/>
                                        
                                        <!-- Filter Bulan -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="Bulan:" 
                                                      FontSize="13" 
                                                      Foreground="#6C757D"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0"/>
                                            <ComboBox x:Name="cmbBulanFilter"
                                                     Width="150"
                                                     SelectionChanged="CmbBulanFilter_SelectionChanged"
                                                     FontSize="13"
                                                     Padding="8,6">
                                                <!-- Items akan di-generate otomatis dari code-behind -->
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2"
                                           Click="BtnExportExcel_Click"
                                           Background="#28A745"
                                           Foreground="White"
                                           Padding="15,8"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           BorderThickness="0"
                                           Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Views/Assets/Icons/iconExport.png" 
                                                   Width="16" 
                                                   Height="16" 
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                                            <TextBlock Text="Export ke Excel" 
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   CornerRadius="8"
                                                                   Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#218838"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <!-- Pesan ketika tidak ada data -->
                                <TextBlock x:Name="txtNoPendapatan"
                                          Text="Belum ada pendapatan pada bulan ini"
                                          FontSize="14"
                                          Foreground="#6C757D"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Padding="0,40"
                                          Visibility="Collapsed"/>

                                <!-- DataGrid -->
                                <DataGrid x:Name="dgPendapatanDetail"
                                         AutoGenerateColumns="False"
                                         IsReadOnly="True"
                                         CanUserAddRows="False"
                                         CanUserDeleteRows="False"
                                         CanUserReorderColumns="False"
                                         CanUserResizeRows="False"
                                         SelectionMode="Single"
                                         GridLinesVisibility="None"
                                         HeadersVisibility="Column"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="13"
                                         RowHeight="50">
                                    
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="Foreground" Value="#011C4B"/>
                                            <Setter Property="Background" Value="#F8F9FA"/>
                                            <Setter Property="Padding" Value="12,10"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="BorderBrush" Value="#DEE2E6"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#F3F3F3"/>
                                                    <Setter Property="Foreground" Value="#011C4B"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F8F9FA"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="No" Width="60" Binding="{Binding No}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="Pelabuhan Asal" Width="*" MinWidth="150" Binding="{Binding PelabuhanAsal}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="12,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="Pelabuhan Tujuan" Width="*" MinWidth="150" Binding="{Binding PelabuhanTujuan}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="12,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="Nama Kapal" Width="*" MinWidth="150" Binding="{Binding NamaKapal}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="12,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="Jumlah Tiket" Width="120" Binding="{Binding JumlahTiket}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="Total Pendapatan" Width="180" Binding="{Binding TotalPendapatanFormatted}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="#28A745"/>
                                                    <Setter Property="Padding" Value="0,0,12,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Total Pendapatan Footer -->
                                <Border Background="#F3F3F3" 
                                       Padding="15,12" 
                                       Margin="0,1,0,0"
                                       CornerRadius="0,0,8,8">
                                    <Grid>
                                        <TextBlock x:Name="txtPeriodePendapatan"
                                                  Text="Total Pendapatan NOVEMBER 2025" 
                                                  FontWeight="Bold" 
                                                  FontSize="14"
                                                  Foreground="Black"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalPendapatanTable" 
                                                  Text="Rp 0"
                                                  FontWeight="Bold" 
                                                  FontSize="18"
                                                  Foreground="#00658D"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Refresh Button -->
                        <Button Style="{StaticResource SecondaryButton}"
                               Click="BtnRefreshDashboard_Click"
                               HorizontalAlignment="Left"
                               Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Views/Assets/Icons/iconRefreshHitam.png" 
                                       Width="16" 
                                       Height="16" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Refresh Data" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ContentControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

