<Window x:Class="TiketLaut.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Tiket Laut" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MinHeight="800" 
        MinWidth="1200"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <!-- Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Sidebar Button -->
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#267DAE"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E8EDF2"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D8E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#011C4B">
            <StackPanel>
                <!-- Logo & Header -->
                <Border Margin="20" Background="#00658D" Padding="15">
                    <StackPanel>
                    <TextBlock Text="ADMIN DASHBOARD" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtAdminName" 
                              Text="Admin Name" 
                              FontSize="12" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtAdminRole" 
                              Text="Role" 
                              FontSize="11" 
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <Button x:Name="btnMenuDashboard" 
                       Style="{StaticResource ActiveSidebarButton}"
                       Click="BtnMenuDashboard_Click"
                       Margin="10,20,10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuTiket"
                        Style="{StaticResource SidebarButtonStyle}" 
                        Click="BtnMenuTiket_Click"
                        Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽ«" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Tiket" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuKapal" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuKapal_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸš¢" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Kapal" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuPelabuhan" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuPelabuhan_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš“" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Pelabuhan" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuJadwal" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuJadwal_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“…" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Jadwal" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuPembayaran" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuPembayaran_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’³" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Pembayaran" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuNotifikasi" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuNotifikasi_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ””" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kirim Notifikasi" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Admin Management (SuperAdmin Only) -->
                <Button x:Name="btnMenuAdmin" 
                       Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnMenuAdmin_Click"
                       Margin="10,5"
                       Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘¤" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Kelola Admin" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Border Height="1" Background="#2AFFFFFF" Margin="20,20"/>

                <!-- Logout -->
                <Button Style="{StaticResource SidebarButtonStyle}"
                       Click="BtnLogout_Click"
                       Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸšª" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Logout" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Header -->
                <TextBlock x:Name="txtPageTitle" 
                          Text="Dashboard" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#011C4B"
                          Margin="0,0,0,20"/>

                <!-- Content Frame (akan di-switch berdasarkan menu yang dipilih) -->
                <ContentControl x:Name="contentArea">
                    <!-- Default: Dashboard Stats -->
                    <StackPanel x:Name="pnlDashboard">
                        <!-- Stats Cards Row 1 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Pengguna -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Total Pengguna" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalPengguna" Text="0" FontSize="32" FontWeight="Bold" Foreground="#00658D" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Tiket -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Total Tiket" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalTiket" Text="0" FontSize="32" FontWeight="Bold" Foreground="#28A745" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Kapal -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Total Kapal" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalKapal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FFC107" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Pelabuhan -->
                            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Total Pelabuhan" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtTotalPelabuhan" Text="0" FontSize="32" FontWeight="Bold" Foreground="#DC3545" Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Stats Cards Row 2 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Pembayaran Menunggu -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Pembayaran Menunggu" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPembayaranMenunggu" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FD7E14" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Pendapatan Hari Ini -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Pendapatan Hari Ini" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPendapatanHariIni" Text="IDR 0" FontSize="24" FontWeight="Bold" Foreground="#20C997" Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- Pendapatan Bulan Ini -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Pendapatan Bulan Ini" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock x:Name="txtPendapatanBulanIni" Text="IDR 0" FontSize="24" FontWeight="Bold" Foreground="#17A2B8" Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Refresh Button -->
                        <Button Content="ðŸ”„ Refresh Data" 
                               Style="{StaticResource SecondaryButton}"
                               Click="BtnRefreshDashboard_Click"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </ContentControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
