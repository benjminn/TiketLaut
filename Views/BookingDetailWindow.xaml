                                      Tag="1"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Click="BtnTogglePassenger_Click"
                                      Cursor="Hand"
                                      HorizontalContentAlignment="Stretch"
                                      Margin="0,0,0,26">
