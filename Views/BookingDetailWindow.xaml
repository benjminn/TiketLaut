<Window x:Class="TiketLaut.Views.BookingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Detail Pemesanan - Tiket Laut" 
        MinHeight="700"
        MinWidth="1200"
        WindowState="Maximized"
        ResizeMode="CanResize"
        FontFamily="Plus Jakarta Sans"
        Background="#F2F5FC"
        SizeChanged="Window_SizeChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar -->
        <components:NavbarSelainHomepage Grid.Row="0"/>

        <!-- Main Content Grid with Fixed Layout -->
        <Grid Grid.Row="1" x:Name="MainContentGrid" Margin="40,20,40,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.9*" MinWidth="500" MaxWidth="1200"/>
                <ColumnDefinition Width="0.2*" MinWidth="20"/>
                <ColumnDefinition Width="1*" MinWidth="350" MaxWidth="650"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - Scrollable Content -->
            <ScrollViewer Grid.Column="0" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="0,0,10,0">
                <StackPanel>

                    <!-- Back Button -->
                    <Button Click="BtnKembali_Click"
                       Background="Transparent" 
                       BorderThickness="0" 
                       Cursor="Hand"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,30"
                       Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Views/Assets/Icons/back.png" 
                               Width="24" 
                               Height="24" 
                               Margin="0,0,10,0"/>
                            <TextBlock Text="Kembali" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="#042769"
                              VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Detail Pemesan Section -->
                    <StackPanel Margin="0,0,0,80">
                        <TextBlock Text="Detail Pemesan"
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="#1E293B"
                                 Margin="0,0,0,24"/>

                        <TextBlock Text="Detail kontak ini akan digunakan untuk pengiriman e-tiket dan keperluan reschedule."
                                 FontSize="24"
                                 FontWeight="Medium"
                                 Foreground="#0F172A"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,12"/>

                        <!-- Form Card -->
                        <Border Background="White"
                              CornerRadius="24"
                              Padding="40"
                              BorderBrush="#267DAE"
                              BorderThickness="2">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                Direction="270" 
                                                ShadowDepth="9" 
                                                BlurRadius="10.9" 
                                                Opacity="0.06"/>
                            </Border.Effect>

                            <StackPanel>
                                <!-- Title Selection -->
                                <WrapPanel Margin="0,0,0,24">
                                    <RadioButton x:Name="rbTuan"
                                               Content="Tuan"
                                               GroupName="Title"
                                               IsChecked="True"
                                               FontSize="24"
                                               FontWeight="Medium"
                                               Foreground="#267DAE"
                                               Margin="0,0,16,0"/>
                                    <RadioButton x:Name="rbNyonya"
                                               Content="Nyonya"
                                               GroupName="Title"
                                               FontSize="24"
                                               FontWeight="Medium"
                                               Foreground="#267DAE"
                                               Margin="0,0,16,0"/>
                                    <RadioButton x:Name="rbNona"
                                               Content="Nona"
                                               GroupName="Title"
                                               FontSize="24"
                                               FontWeight="Medium"
                                               Foreground="#267DAE"/>
                                </WrapPanel>

                                <!-- Nama Lengkap -->
                                <Border BorderBrush="#E2E8F0"
                                      BorderThickness="1"
                                      CornerRadius="12"
                                      Margin="0,0,0,24">
                                    <TextBox x:Name="txtNamaPemesan"
                                           Height="80"
                                           Padding="16,14"
                                           FontSize="24"
                                           FontWeight="Medium"
                                           BorderThickness="0"
                                           Background="Transparent"
                                           VerticalContentAlignment="Center"
                                           Text="Nama lengkap sesuai KTP/Paspor/SIM"
                                           Foreground="#64748B"
                                           GotFocus="TextBox_GotFocus"
                                           LostFocus="TextBox_LostFocus"
                                           Tag="Nama lengkap sesuai KTP/Paspor/SIM"/>
                                </Border>

                                <!-- Nomor Ponsel -->
                                <StackPanel Margin="0,0,0,24">
                                    <Border BorderBrush="#E2E8F0"
                                          BorderThickness="1"
                                          CornerRadius="12"
                                          Margin="0,0,0,10">
                                        <TextBox x:Name="txtNomorPonsel"
                                               Height="80"
                                               Padding="16,14"
                                               FontSize="24"
                                               FontWeight="Medium"
                                               BorderThickness="0"
                                               Background="Transparent"
                                               VerticalContentAlignment="Center"
                                               Text="Nomor Ponsel"
                                               Foreground="#64748B"
                                               GotFocus="TextBox_GotFocus"
                                               LostFocus="TextBox_LostFocus"
                                               Tag="Nomor Ponsel"/>
                                    </Border>
                                    <TextBlock Text="Contoh: +62 123 1234 1234"
                                             FontSize="18"
                                             FontWeight="Medium"
                                             Foreground="#64748B"/>
                                </StackPanel>

                                <!-- Email -->
                                <Border BorderBrush="#E2E8F0"
                                      BorderThickness="1"
                                      CornerRadius="12">
                                    <TextBox x:Name="txtEmail"
                                           Height="80"
                                           Padding="16,14"
                                           FontSize="24"
                                           FontWeight="Medium"
                                           BorderThickness="0"
                                           Background="Transparent"
                                           VerticalContentAlignment="Center"
                                           Text="Alamat Email"
                                           Foreground="#64748B"
                                           GotFocus="TextBox_GotFocus"
                                           LostFocus="TextBox_LostFocus"
                                           Tag="Alamat Email"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Detail Penumpang Section -->
                    <StackPanel Margin="0,0,0,80">
                        <TextBlock Text="Detail Penumpang"
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="#1E293B"
                                 Margin="0,0,0,24"/>

                        <TextBlock Text="Pastikan untuk mengisi data penumpang dengan benar dan lengkap."
