                                        </Border>
                                        <Border Grid.Column="2" 
                                              BorderBrush="#E2E8F0"
                                              BorderThickness="1"
                                              CornerRadius="12" 
                                              Height="80">
                                            <TextBox x:Name="txtIdPassenger2"
                                                   Padding="16,14"
                                                   FontSize="24"
                                                   FontWeight="Medium"
                                                   BorderThickness="0"
                                                   Background="Transparent"
                                                   VerticalContentAlignment="Center"
                                                   Text="Nomor Identitas"
