                                            <ColumnDefinition Width="14"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                              BorderBrush="#E2E8F0"
                                              BorderThickness="1"
                                              CornerRadius="12" 
                                              Padding="18,15">
                                            <StackPanel>
                                                <TextBlock Text="Identitas" 
                                                          FontSize="18" 
                                                          Foreground="#64748B"
                                                          Margin="0,0,0,7"/>
                                                <TextBlock Text="KTP" 
                                                          FontSize="24" 
