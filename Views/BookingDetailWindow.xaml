<Window x:Class="TiketLaut.Views.BookingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        xmlns:local="clr-namespace:TiketLaut.Views"
        Title="Detail Pemesanan - Tiket Laut" 
        MinHeight="800"
        MinWidth="1400"
        WindowState="Maximized"
        ResizeMode="CanResize"
        FontFamily="Plus Jakarta Sans"
        Background="#F2F5FC"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <!-- Custom RadioButton Style -->
        <Style x:Key="CustomRadioButton" TargetType="RadioButton">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#042769"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="20" Height="20" VerticalAlignment="Top" Margin="0,2,8,0">
                                <Ellipse x:Name="OuterCircle" 
                                        Stroke="#00658D" 
                                        StrokeThickness="2" 
                                        Fill="Transparent"/>
                                <Ellipse x:Name="InnerCircle" 
                                        Width="10" 
                                        Height="10" 
                                        Fill="#00658D" 
                                        Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Top"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Floating Label TextBox Style -->
        <Style x:Key="FloatingLabelTextBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Floating Label ComboBox Style -->
        <Style x:Key="FloatingLabelComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#042769"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,0,16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Grid.ColumnSpan="2"
                                  Background="White"
                                  BorderThickness="0"
                                  CornerRadius="12"/>

                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="0" Grid.ColumnSpan="2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press"/>

                            <ContentPresenter x:Name="ContentSite"
                                            Grid.Column="0"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="16,10,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            IsHitTestVisible="False"/>

                            <Image x:Name="ArrowIcon"
                                 Grid.Column="1"
                                 Source="Assets/Icons/icondropdowngelap.png"
                                 Width="20"
                                 Height="20"
                                 Margin="8,0,12,0"
                                 VerticalAlignment="Center"
                                 RenderTransformOrigin="0.5,0.5"
                                 Stretch="Uniform"
                                 IsHitTestVisible="False">
                                <Image.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Image.RenderTransform>
                            </Image>

                            <Popup x:Name="Popup"
                                 Grid.Column="0" Grid.ColumnSpan="2"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Border Background="White"
                                      BorderBrush="#E2E8F0"
                                      BorderThickness="1"
                                      CornerRadius="8"
                                      Margin="0,4,0,0"
                                      MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar Component -->
        <components:NavbarSelainHomepage Grid.Row="0" 
                                        x:Name="navbarSelainHomepage"
                                        VerticalAlignment="Top"
                                        Panel.ZIndex="999"/>

        <!-- Main Content Grid with Fixed Layout -->
        <Grid Grid.Row="1" x:Name="MainContentGrid" Margin="95,30,95,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="600"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="1*" MinWidth="400" MaxWidth="500"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - Scrollable Content -->
            <ScrollViewer Grid.Column="0" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="0,0,10,0">
                <StackPanel>

                    <!-- Back Button -->
                    <Button Click="BtnKembali_Click"
                       Background="Transparent" 
                       BorderThickness="0" 
                       Cursor="Hand"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,30"
                       Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Views/Assets/Icons/back.png" 
                               Width="24" 
                               Height="24" 
                               Margin="0,0,10,0"/>
                            <TextBlock Text="Kembali" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="#042769"
                              VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Detail Pemesan Section -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Detail Pemesan"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Foreground="#042769"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Detail kontak ini akan digunakan untuk pengiriman e-tiket dan keperluan reschedule."
                                 FontSize="14"
                                 FontWeight="Regular"
                                 Foreground="#042769"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,12"/>

                        <!-- Form Card -->
                        <Border Background="White"
                              CornerRadius="17"
                              Padding="25,20"
                              BorderBrush="#00658D"
                              BorderThickness="2">

                            <StackPanel>
                                <!-- Title Selection -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <RadioButton x:Name="rbTuan"
                                               Content="Tuan"
                                               GroupName="Title"
                                               IsChecked="True"
                                               Style="{StaticResource CustomRadioButton}"
                                               Margin="0,0,16,0"/>
                                    <RadioButton x:Name="rbNyonya"
                                               Content="Nyonya"
                                               GroupName="Title"
                                               Style="{StaticResource CustomRadioButton}"
                                               Margin="0,0,16,0"/>
                                    <RadioButton x:Name="rbNona"
                                               Content="Nona"
                                               GroupName="Title"
                                               Style="{StaticResource CustomRadioButton}"/>
                                </StackPanel>

                                <!-- Nama Lengkap dengan Floating Label -->
                                <Grid Margin="0,0,0,16">
                                    <Border Style="{StaticResource FloatingLabelTextBox}">
                                        <Grid>
                                            <TextBox x:Name="txtNamaPemesan"
                                                    Height="52"
                                                    Padding="16,0,16,0"
                                                    FontSize="14"
                                                    FontWeight="Medium"
                                                    Foreground="#042769"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    VerticalContentAlignment="Center"
                                                    GotFocus="FloatingTextBox_GotFocus"
                                                    LostFocus="FloatingTextBox_LostFocus"
                                                    TextChanged="FloatingTextBox_TextChanged"
                                                    Tag="lblNamaPemesan"/>
                                        </Grid>
                                    </Border>
                                    <!-- Floating Label with Background -->
                                    <Border Background="White"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           Padding="4,0"
                                           IsHitTestVisible="False">
                                        <TextBlock x:Name="lblNamaPemesan"
                                                  Text="Nama lengkap sesuai KTP/Paspor/SIM"
                                                  FontSize="14"
                                                  FontWeight="Regular"
                                                  Foreground="#94A3B8"/>
                                    </Border>
                                </Grid>

                                <!-- Nomor Ponsel dengan Floating Label -->
                                <StackPanel Margin="0,0,0,16">
                                    <Grid>
                                        <Border Style="{StaticResource FloatingLabelTextBox}">
                                            <Grid>
                                                <TextBox x:Name="txtNomorPonsel"
                                                        Height="52"
                                                        Padding="16,0,16,0"
                                                        FontSize="14"
                                                        FontWeight="Medium"
                                                        Foreground="#042769"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        VerticalContentAlignment="Center"
                                                        GotFocus="FloatingTextBox_GotFocus"
                                                        LostFocus="FloatingTextBox_LostFocus"
                                                        TextChanged="FloatingTextBox_TextChanged"
                                                        Tag="lblNomorPonsel"/>
                                            </Grid>
                                        </Border>
                                        <!-- Floating Label with Background -->
                                        <Border Background="White"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"
                                               Padding="4,0"
                                               IsHitTestVisible="False">
                                            <TextBlock x:Name="lblNomorPonsel"
                                                      Text="Nomor Ponsel"
                                                      FontSize="14"
                                                      FontWeight="Regular"
                                                      Foreground="#94A3B8"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="Contoh: +62 123 1234 1234"
                                              FontSize="11"
                                              FontWeight="Regular"
                                              Foreground="#94A3B8"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Email dengan Floating Label -->
                                <Grid>
                                    <Border Style="{StaticResource FloatingLabelTextBox}">
                                        <Grid>
                                            <TextBox x:Name="txtEmail"
                                                    Height="52"
                                                    Padding="16,0,16,0"
                                                    FontSize="14"
                                                    FontWeight="Medium"
                                                    Foreground="#042769"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    VerticalContentAlignment="Center"
                                                    GotFocus="FloatingTextBox_GotFocus"
                                                    LostFocus="FloatingTextBox_LostFocus"
                                                    TextChanged="FloatingTextBox_TextChanged"
                                                    Tag="lblEmail"/>
                                        </Grid>
                                    </Border>
                                    <!-- Floating Label with Background -->
                                    <Border Background="White"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           Padding="4,0"
                                           IsHitTestVisible="False">
                                        <TextBlock x:Name="lblEmail"
                                                  Text="Alamat Email"
                                                  FontSize="14"
                                                  FontWeight="Regular"
                                                  Foreground="#94A3B8"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Detail Penumpang Section -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Detail Penumpang"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Foreground="#042769"
                                 Margin="0,0,0,8"/>

                        <TextBlock Text="Pastikan untuk mengisi data penumpang dengan benar dan lengkap."
                                 FontSize="14"
                                 FontWeight="Regular"
                                 Foreground="#042769"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <!-- Penumpang 1 -->
                        <Border x:Name="borderPassenger1"
                              Background="White"
                              CornerRadius="17"
                              Padding="25,20"
                              BorderBrush="#00658D"
                              BorderThickness="2"
                              Margin="0,0,0,16">

                            <StackPanel>
                                <!-- Header Penumpang 1 - Toggle Button -->
                                <Button x:Name="btnTogglePassenger1"
                                      Tag="1"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Click="BtnTogglePassenger_Click"
                                      Cursor="Hand"
                                      HorizontalContentAlignment="Stretch"
                                      Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                  Text="Penumpang 1" 
                                                  FontSize="20" 
                                                  FontWeight="Bold"
                                                  Foreground="#042769"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"/>
                                        <Image x:Name="pathTogglePassenger1"
                                               Grid.Column="1"
                                               Source="Assets/Icons/icondropdowngelap.png"
                                               Width="20" 
                                               Height="20"
                                               Stretch="Uniform"
                                               RenderTransformOrigin="0.5,0.5"
                                               VerticalAlignment="Center">
                                            <Image.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                </Button>

                                <!-- Expandable Content Penumpang 1 -->
                                <StackPanel x:Name="pnlPassenger1" 
                                           Visibility="Collapsed">
                                    <TextBlock Text="Info Identitas Penumpang" 
                                              FontSize="16" 
                                              FontWeight="Medium"
                                              Foreground="#042769"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,16"/>

                                    <!-- Gender Selection -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <RadioButton x:Name="rbTuan1" 
                                                   Content="Tuan" 
                                                   GroupName="Gender1"
                                                   IsChecked="True"
                                                   Style="{StaticResource CustomRadioButton}"
                                                   Margin="0,0,16,0"/>
                                        <RadioButton x:Name="rbNyonya1" 
                                                   Content="Nyonya" 
                                                   GroupName="Gender1"
                                                   Style="{StaticResource CustomRadioButton}"
                                                   Margin="0,0,16,0"/>
                                        <RadioButton x:Name="rbNona1" 
                                                   Content="Nona" 
                                                   GroupName="Gender1"
                                                   Style="{StaticResource CustomRadioButton}"/>
                                    </StackPanel>

                                    <!-- Nama Lengkap dengan Floating Label -->
                                    <StackPanel Margin="0,0,0,16">
                                        <Grid>
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <Grid>
                                                    <TextBox x:Name="txtNamaPassenger1"
                                                            Height="52"
                                                            Padding="16,0,16,0"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Foreground="#042769"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            VerticalContentAlignment="Center"
                                                            GotFocus="FloatingTextBox_GotFocus"
                                                            LostFocus="FloatingTextBox_LostFocus"
                                                            TextChanged="FloatingTextBox_TextChanged"
                                                            Tag="lblNamaPassenger1"/>
                                                </Grid>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblNamaPassenger1"
                                                          Text="Nama lengkap sesuai KTP/Paspor/SIM"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>
                                        <TextBlock Text="Sesuai KTP/Paspor/KK tanpa tanda baca dan gelar"
                                                 FontSize="11"
                                                 FontWeight="Regular"
                                                 Foreground="#94A3B8"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Identitas Section -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ComboBox Identitas -->
                                        <Grid Grid.Column="0">
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <ComboBox x:Name="cmbIdentitas1"
                                                         Height="52"
                                                         Padding="16,0,16,0"
                                                         Style="{StaticResource FloatingLabelComboBox}"
                                                         GotFocus="FloatingComboBox_GotFocus"
                                                         LostFocus="FloatingComboBox_LostFocus"
                                                         SelectionChanged="FloatingComboBox_SelectionChanged"
                                                         Tag="lblIdentitas1">
                                                    <ComboBoxItem Content="KTP"/>
                                                    <ComboBoxItem Content="Paspor"/>
                                                    <ComboBoxItem Content="SIM"/>
                                                    <ComboBoxItem Content="KK"/>
                                                </ComboBox>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblIdentitas1"
                                                          Text="Identitas"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>

                                        <!-- Nomor Identitas -->
                                        <Grid Grid.Column="2">
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <Grid>
                                                    <TextBox x:Name="txtIdPassenger1"
                                                            Height="52"
                                                            Padding="16,0,16,0"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Foreground="#042769"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            VerticalContentAlignment="Center"
                                                            GotFocus="FloatingTextBox_GotFocus"
                                                            LostFocus="FloatingTextBox_LostFocus"
                                                            TextChanged="FloatingTextBox_TextChanged"
                                                            Tag="lblIdPassenger1"/>
                                                </Grid>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblIdPassenger1"
                                                          Text="Nomor Identitas"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Penumpang 2 -->
                        <Border x:Name="borderPassenger2"
                              Background="White"
                              CornerRadius="17"
                              Padding="25,20"
                              BorderBrush="#00658D"
                              BorderThickness="2"
                              Margin="0,0,0,16">

                            <StackPanel>
                                <!-- Header Penumpang 2 - Toggle Button -->
                                <Button x:Name="btnTogglePassenger2"
                                      Tag="2"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Click="BtnTogglePassenger_Click"
                                      Cursor="Hand"
                                      HorizontalContentAlignment="Stretch"
                                      Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                  Text="Penumpang 2" 
                                                  FontSize="20" 
                                                  FontWeight="Bold"
                                                  Foreground="#042769"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"/>
                                        <Image x:Name="pathTogglePassenger2"
                                               Grid.Column="1"
                                               Source="Assets/Icons/icondropdowngelap.png"
                                               Width="20" 
                                               Height="20"
                                               Stretch="Uniform"
                                               RenderTransformOrigin="0.5,0.5"
                                               VerticalAlignment="Center">
                                            <Image.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                </Button>

                                <!-- Expandable Content Penumpang 2 -->
                                <StackPanel x:Name="pnlPassenger2" 
                                           Visibility="Collapsed">
                                    <TextBlock Text="Info Identitas Penumpang" 
                                              FontSize="16" 
                                              FontWeight="Medium"
                                              Foreground="#042769"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,16"/>

                                    <!-- Gender Selection -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <RadioButton x:Name="rbTuan2" 
                                                   Content="Tuan" 
                                                   GroupName="Gender2"
                                                   IsChecked="True"
                                                   Style="{StaticResource CustomRadioButton}"
                                                   Margin="0,0,16,0"/>
                                        <RadioButton x:Name="rbNyonya2" 
                                                   Content="Nyonya" 
                                                   GroupName="Gender2"
                                                   Style="{StaticResource CustomRadioButton}"
                                                   Margin="0,0,16,0"/>
                                        <RadioButton x:Name="rbNona2" 
                                                   Content="Nona" 
                                                   GroupName="Gender2"
                                                   Style="{StaticResource CustomRadioButton}"/>
                                    </StackPanel>

                                    <!-- Nama Lengkap dengan Floating Label -->
                                    <StackPanel Margin="0,0,0,16">
                                        <Grid>
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <Grid>
                                                    <TextBox x:Name="txtNamaPassenger2"
                                                            Height="52"
                                                            Padding="16,0,16,0"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Foreground="#042769"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            VerticalContentAlignment="Center"
                                                            GotFocus="FloatingTextBox_GotFocus"
                                                            LostFocus="FloatingTextBox_LostFocus"
                                                            TextChanged="FloatingTextBox_TextChanged"
                                                            Tag="lblNamaPassenger2"/>
                                                </Grid>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblNamaPassenger2"
                                                          Text="Nama lengkap sesuai KTP/Paspor/SIM"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>
                                        <TextBlock Text="Sesuai KTP/Paspor/KK tanpa tanda baca dan gelar"
                                                 FontSize="11"
                                                 FontWeight="Regular"
                                                 Foreground="#94A3B8"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Identitas Section -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ComboBox Identitas -->
                                        <Grid Grid.Column="0">
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <ComboBox x:Name="cmbIdentitas2"
                                                         Height="52"
                                                         Padding="16,0,16,0"
                                                         Style="{StaticResource FloatingLabelComboBox}"
                                                         GotFocus="FloatingComboBox_GotFocus"
                                                         LostFocus="FloatingComboBox_LostFocus"
                                                         SelectionChanged="FloatingComboBox_SelectionChanged"
                                                         Tag="lblIdentitas2">
                                                    <ComboBoxItem Content="KTP"/>
                                                    <ComboBoxItem Content="Paspor"/>
                                                    <ComboBoxItem Content="SIM"/>
                                                    <ComboBoxItem Content="KK"/>
                                                </ComboBox>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblIdentitas2"
                                                          Text="Identitas"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>

                                        <!-- Nomor Identitas -->
                                        <Grid Grid.Column="2">
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <Grid>
                                                    <TextBox x:Name="txtIdPassenger2"
                                                            Height="52"
                                                            Padding="16,0,16,0"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Foreground="#042769"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            VerticalContentAlignment="Center"
                                                            GotFocus="FloatingTextBox_GotFocus"
                                                            LostFocus="FloatingTextBox_LostFocus"
                                                            TextChanged="FloatingTextBox_TextChanged"
                                                            Tag="lblIdPassenger2"/>
                                                </Grid>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblIdPassenger2"
                                                          Text="Nomor Identitas"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Penumpang 3 -->
                        <Border x:Name="borderPassenger3"
                              Background="White"
                              CornerRadius="17"
                              Padding="25,20"
                              BorderBrush="#00658D"
                              BorderThickness="2"
                              Margin="0,0,0,16">

                            <StackPanel>
                                <!-- Header Penumpang 3 - Toggle Button -->
                                <Button x:Name="btnTogglePassenger3"
                                      Tag="3"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Click="BtnTogglePassenger_Click"
                                      Cursor="Hand"
                                      HorizontalContentAlignment="Stretch"
                                      Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                  Text="Penumpang 3" 
                                                  FontSize="20" 
                                                  FontWeight="Bold"
                                                  Foreground="#042769"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"/>
                                        <Image x:Name="pathTogglePassenger3"
                                               Grid.Column="1"
                                               Source="Assets/Icons/icondropdowngelap.png"
                                               Width="20" 
                                               Height="20"
                                               Stretch="Uniform"
                                               RenderTransformOrigin="0.5,0.5"
                                               VerticalAlignment="Center">
                                            <Image.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                </Button>

                                <!-- Expandable Content Penumpang 3 -->
                                <StackPanel x:Name="pnlPassenger3" 
                                           Visibility="Collapsed">
                                    <TextBlock Text="Info Identitas Penumpang" 
                                              FontSize="16" 
                                              FontWeight="Medium"
                                              Foreground="#042769"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,16"/>

                                    <!-- Gender Selection -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <RadioButton x:Name="rbTuan3" 
                                                   Content="Tuan" 
                                                   GroupName="Gender3"
                                                   IsChecked="True"
                                                   Style="{StaticResource CustomRadioButton}"
                                                   Margin="0,0,16,0"/>
                                        <RadioButton x:Name="rbNyonya3" 
                                                   Content="Nyonya" 
                                                   GroupName="Gender3"
                                                   Style="{StaticResource CustomRadioButton}"
                                                   Margin="0,0,16,0"/>
                                        <RadioButton x:Name="rbNona3" 
                                                   Content="Nona" 
                                                   GroupName="Gender3"
                                                   Style="{StaticResource CustomRadioButton}"/>
                                    </StackPanel>

                                    <!-- Nama Lengkap dengan Floating Label -->
                                    <StackPanel Margin="0,0,0,16">
                                        <Grid>
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <Grid>
                                                    <TextBox x:Name="txtNamaPassenger3"
                                                            Height="52"
                                                            Padding="16,0,16,0"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Foreground="#042769"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            VerticalContentAlignment="Center"
                                                            GotFocus="FloatingTextBox_GotFocus"
                                                            LostFocus="FloatingTextBox_LostFocus"
                                                            TextChanged="FloatingTextBox_TextChanged"
                                                            Tag="lblNamaPassenger3"/>
                                                </Grid>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblNamaPassenger3"
                                                          Text="Nama lengkap sesuai KTP/Paspor/SIM"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>
                                        <TextBlock Text="Sesuai KTP/Paspor/KK tanpa tanda baca dan gelar"
                                                 FontSize="11"
                                                 FontWeight="Regular"
                                                 Foreground="#94A3B8"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Identitas Section -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ComboBox Identitas -->
                                        <Grid Grid.Column="0">
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <ComboBox x:Name="cmbIdentitas3"
                                                         Height="52"
                                                         Padding="16,0,16,0"
                                                         Style="{StaticResource FloatingLabelComboBox}"
                                                         GotFocus="FloatingComboBox_GotFocus"
                                                         LostFocus="FloatingComboBox_LostFocus"
                                                         SelectionChanged="FloatingComboBox_SelectionChanged"
                                                         Tag="lblIdentitas3">
                                                    <ComboBoxItem Content="KTP"/>
                                                    <ComboBoxItem Content="Paspor"/>
                                                    <ComboBoxItem Content="SIM"/>
                                                    <ComboBoxItem Content="KK"/>
                                                </ComboBox>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblIdentitas3"
                                                          Text="Identitas"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>

                                        <!-- Nomor Identitas -->
                                        <Grid Grid.Column="2">
                                            <Border Style="{StaticResource FloatingLabelTextBox}">
                                                <Grid>
                                                    <TextBox x:Name="txtIdPassenger3"
                                                            Height="52"
                                                            Padding="16,0,16,0"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Foreground="#042769"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            VerticalContentAlignment="Center"
                                                            GotFocus="FloatingTextBox_GotFocus"
                                                            LostFocus="FloatingTextBox_LostFocus"
                                                            TextChanged="FloatingTextBox_TextChanged"
                                                            Tag="lblIdPassenger3"/>
                                                </Grid>
                                            </Border>
                                            <!-- Floating Label with Background -->
                                            <Border Background="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Padding="4,0"
                                                   IsHitTestVisible="False">
                                                <TextBlock x:Name="lblIdPassenger3"
                                                          Text="Nomor Identitas"
                                                          FontSize="14"
                                                          FontWeight="Regular"
                                                          Foreground="#94A3B8"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Container for additional dynamic passenger forms (4+) -->
                        <StackPanel x:Name="additionalPassengerFormsContainer">
                            <!-- Additional passenger forms will be generated dynamically here -->
                        </StackPanel>
                    </StackPanel>

                    <!-- Detail Kendaraan Section -->
                    <StackPanel x:Name="vehicleSection" Margin="0,0,0,30">
                        <TextBlock Text="Detail Kendaraan"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Foreground="#042769"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Pastikan plat nomor kendaraan sesuai dengan yang masuk ke pelabuhan."
                                 FontSize="14"
                                 FontWeight="Regular"
                                 Foreground="#042769"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,12"/>

                        <!-- Kendaraan Card -->
                        <Border Background="White"
                              CornerRadius="17"
                              Padding="25,20"
                              BorderBrush="#00658D"
                              BorderThickness="2">

                            <StackPanel>
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock x:Name="txtVehicleType"
                                             Text=" "
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Foreground="#042769"
                                             Margin="0,0,0,8"/>
                                    <TextBlock x:Name="txtVehicleCapacity"
                                             Text=" "
                                             FontSize="16"
                                             FontWeight="Medium"
                                             Foreground="#94A3B8"/>
                                </StackPanel>

                                <StackPanel>
                                    <Grid>
                                        <Border Style="{StaticResource FloatingLabelTextBox}">
                                            <Grid>
                                                <TextBox x:Name="txtPlatNomor"
                                                       Height="52"
                                                       Padding="16,0,16,0"
                                                       FontSize="14"
                                                       FontWeight="Medium"
                                                       Foreground="#042769"
                                                       BorderThickness="0"
                                                       Background="Transparent"
                                                       VerticalContentAlignment="Center"
                                                       GotFocus="FloatingTextBox_GotFocus"
                                                       LostFocus="FloatingTextBox_LostFocus"
                                                       TextChanged="FloatingTextBox_TextChanged"
                                                       Tag="lblPlatNomor"/>
                                            </Grid>
                                        </Border>
                                        <!-- Floating Label with Background -->
                                        <Border Background="White"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"
                                               Padding="4,0"
                                               IsHitTestVisible="False">
                                            <TextBlock x:Name="lblPlatNomor"
                                                      Text="Plat nomor tanpa spasi"
                                                      FontSize="14"
                                                      FontWeight="Regular"
                                                      Foreground="#94A3B8"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="Contoh: B1234XYZ"
                                             FontSize="11"
                                             FontWeight="Regular"
                                             Foreground="#94A3B8"
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Total & Button Section di bawah -->
                    <Border Background="White"
                          CornerRadius="24"
                          Padding="40"
                          BorderBrush="#267DAE"
                          BorderThickness="2"
                          Margin="0,0,0,50">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" 
                                            Direction="270" 
                                            ShadowDepth="9" 
                                            BlurRadius="10.9" 
                                            Opacity="0.06"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Toggle Total/Detail Harga Button -->
                            <Button x:Name="btnToggleDetailHarga"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Click="BtnToggleDetailHarga_Click"
                                  Cursor="Hand"
                                  Padding="0"
                                  HorizontalContentAlignment="Stretch"
                                  Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Title (berubah antara "Total Harga" dan "Detail Harga") -->
                                    <TextBlock x:Name="txtHeaderHarga"
                                             Grid.Column="0"
                                             Text="Total Harga"
                                             FontSize="28"
                                             FontWeight="Bold"
                                             Foreground="#042769"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Center"/>

                                    <!-- Price (hilang saat expanded) -->
                                    <TextBlock x:Name="txtTotalHargaCollapsed"
                                             Grid.Column="1"
                                             Text=" "
                                             FontSize="28"
                                             FontWeight="Bold"
                                             Foreground="#042769"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"
                                             TextAlignment="Right"/>

                                    <!-- Dropdown Icon -->
                                    <Image x:Name="pathToggleDetailHarga"
                                           Grid.Column="2"
                                           Source="Assets/Icons/icondropdowngelap.png"
                                           Width="20"
                                           Height="20"
                                           Stretch="Uniform"
                                           RenderTransformOrigin="0.5,0.5"
                                           VerticalAlignment="Center">
                                        <Image.RenderTransform>
                                            <RotateTransform Angle="0"/>
                                        </Image.RenderTransform>
                                    </Image>
                                </Grid>
                            </Button>

                            <!-- Expandable Price Details -->
                            <StackPanel x:Name="pnlDetailHarga" Visibility="Collapsed" Margin="0,0,0,16">
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="txtVehicleTypePrice"
                                                 Text=" "
                                                 FontSize="16"
                                                 FontWeight="Medium"
                                                 Foreground="#042769"
                                                 Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtPassengerPrice"
                                                 Text=" "
                                                 FontSize="16"
                                                 FontWeight="Medium"
                                                 Foreground="#042769"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock x:Name="txtSidebarPrice"
                                                 Text=" "
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Foreground="#042769"
                                                 TextAlignment="Right"
                                                 Margin="0,0,0,4"/>
                                        <TextBlock Text="Termasuk"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Foreground="#00658D"
                                                 TextAlignment="Right"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="Harga sudah termasuk pajak"
                                         FontSize="14"
                                         FontWeight="Medium"
                                         Foreground="#00658D"
                                         Margin="0,0,0,16"/>

                                <!-- Garis Separator -->
                                <Border Height="2" 
                                      Background="#E2E8F0" 
                                      Margin="0,0,0,16"/>

                                <!-- Total Harga (saat expanded) -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                             Text="Total Harga"
                                             FontSize="28"
                                             FontWeight="Medium"
                                             Foreground="#042769"
                                             VerticalAlignment="Center"/>

                                    <TextBlock x:Name="txtTotalHargaExpanded"
                                             Grid.Column="1"
                                             Text=" "
                                             FontSize="28"
                                             FontWeight="Medium"
                                             Foreground="#042769"
                                             VerticalAlignment="Center"
                                             TextAlignment="Right"/>
                                </Grid>
                            </StackPanel>

                            <!-- Garis pemisah saat collapsed -->
                            <Border x:Name="borderSeparatorCollapsed"
                                  Height="2" 
                                  Background="#E2E8F0" 
                                  Margin="0,0,0,20"/>

                            <Button x:Name="btnLanjutPembayaran"
                                  Content="Lanjut ke Pembayaran"
                                  Background="#2563EB"
                                  Foreground="White"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Padding="32,16"
                                  HorizontalAlignment="Right"
                                  Click="BtnLanjutPembayaran_Click"
                                  Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                          CornerRadius="12"
                                                          Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Section - Fixed Summary Card -->
            <Border Grid.Column="2"
                  Background="White"
                  CornerRadius="20"
                  Padding="20"
                  Margin="0,0,0,0"
                  BorderBrush="#00658D"
                  BorderThickness="2"
                  VerticalAlignment="Top">

                <StackPanel>
                    <!-- Ferry Info -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock x:Name="txtFerryType"
                                 Text=" "
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Foreground="#042769"
                                 Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock x:Name="txtDeparture"
                                     Text=" "
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="#00658D"
                                     Margin="0,0,8,0"/>
                            <Path Data="M 20 4 L 14.444444444444445 0 M 20 4 L 14.444444444444445 8 M 20 4 L 0 4" 
                                  Stroke="#00658D" 
                                  StrokeThickness="2"
                                  Width="16" 
                                  Height="8"
                                  Stretch="Fill"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtArrival"
                                     Text=" "
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="#00658D"/>
                        </StackPanel>

                        <TextBlock x:Name="txtVehicleInfo"
                                 Text=" "
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Foreground="#00658D"/>
                    </StackPanel>

                    <Border Height="2" Background="#E2E8F0" Margin="0,0,0,20"/>

                    <!-- Check-in Info -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Waktu masuk ke Pelabuhan (check-in)"
                             FontSize="14"
                             FontWeight="Bold"
                             Foreground="#042769"
                             Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtCheckInTime"
                             Text=" "
                             FontSize="14"
                             FontWeight="Medium"
                             Foreground="#042769"
                             Margin="0,0,0,8"/>
                    </StackPanel>

                    <!-- Warning -->
                    <Border Background="#E1F5FE"
                          CornerRadius="8"
                          Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                  Width="16" Height="16"
                                  Background="#00658D"
                                  CornerRadius="8"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Top">
                                <TextBlock Text="i"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="txtWarningMessage"
                                 Grid.Column="1"
                                 Text="E-Tiket akan hangus bila anda belum masuk ke pelabuhan setelah 20:15"
                                 FontSize="12"
                                 FontWeight="Medium"
                                 Foreground="#00658D"
                                 TextWrapping="Wrap"/>
                        </Grid>
                    </Border>

                    <Border Height="2" Background="#E2E8F0" Margin="0,0,0,20"/>

                    <!-- Total Harga di Sidebar (Clickable for Toggle) -->
                    <Button x:Name="btnToggleSidebarHarga"
                          Background="Transparent"
                          BorderThickness="0"
                          Padding="0"
                          Cursor="Hand"
                          HorizontalContentAlignment="Stretch"
                          Click="BtnToggleSidebarHarga_Click">
                        <Grid>
                            <TextBlock Text="Total Harga"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#042769"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="txtSidebarTotalPrice"
                                         Text=" "
                                         FontSize="16"
                                         FontWeight="Bold"
                                         Foreground="#042769"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                                <Image x:Name="pathToggleSidebarHarga"
                                     Source="Assets/Icons/icondropdowngelap.png"
                                     Width="16" 
                                     Height="16"
                                     Stretch="Uniform"
                                     VerticalAlignment="Center"
                                     RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <RotateTransform Angle="0"/>
                                    </Image.RenderTransform>
                                </Image>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Detail Harga Panel (Hidden by default) -->
                    <StackPanel x:Name="pnlSidebarDetailHarga" 
                              Visibility="Collapsed"
                              Margin="0,16,0,0">
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="txtSidebarVehicleType"
                                         Text="Sepeda Motor (&lt;500cc)"
                                         FontSize="14"
                                         FontWeight="Medium"
                                         Foreground="#042769"
                                         Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtSidebarPassengerCount"
                                         Text="Dewasa (3x)"
                                         FontSize="14"
                                         FontWeight="Medium"
                                         Foreground="#042769"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock x:Name="txtSidebarDetailPrice"
                                         Text="IDR 487.853"
                                         FontSize="14"
                                         FontWeight="SemiBold"
                                         Foreground="#042769"
                                         TextAlignment="Right"
                                         Margin="0,0,0,4"/>
                                <TextBlock Text="Termasuk"
                                         FontSize="14"
                                         FontWeight="SemiBold"
                                         Foreground="#00658D"
                                         TextAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Harga sudah termasuk pajak"
                                 FontSize="12"
                                 FontWeight="Medium"
                                 Foreground="#00658D"
                                 Margin="0,0,0,12"/>

                        <Border Height="1" Background="#E2E8F0" Margin="0,0,0,12"/>

                        <Grid>
                            <TextBlock Text="Total Harga"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#042769"
                                     HorizontalAlignment="Left"/>
                            <TextBlock x:Name="txtSidebarFinalPrice"
                                     Text="IDR 487.853"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#042769"
                                     HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
