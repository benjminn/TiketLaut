                                              Fill="#267DAE" 
                                              Width="13" 
                                              Height="20"
                                              Stretch="Uniform"
                                              RenderTransformOrigin="0.5,0.5"
                                              VerticalAlignment="Center">
                                            <Path.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Grid>
                                </Button>

                                <!-- Expandable Content Penumpang 1 -->
                                <StackPanel x:Name="pnlPassenger1" 
                                           Visibility="Collapsed">
