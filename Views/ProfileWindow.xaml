<Window x:Class="TiketLaut.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Profil Saya - Tiket Laut"
        MinHeight="700"
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F2F5FC"
        FontFamily="Plus Jakarta Sans">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar Component -->
        <components:NavbarPostLogin Grid.Row="0"
                                    x:Name="navbarPostLogin"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="999"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="40,30,40,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MaxWidth="800" MinWidth="600"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1">
                    <!-- Back Button - Pojok Kiri -->
                    <Button Click="BtnKembali_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,30"
                            Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Views/Assets/Icons/back.png"
                                   Width="20"
                                   Height="20"
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Kembali"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#00658D"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Profile Card -->
                    <Border Background="#00658D"
                            CornerRadius="20,20,0,0"
                            Padding="40,30">
                        <Grid>
                            <!-- Title -->
                            <TextBlock Text="Your Profile"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Form Card -->
                    <Border Background="White"
                            CornerRadius="0,0,20,20"
                            Padding="40,40,40,50"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <!-- Profile Info Form -->
                            <StackPanel>
                                <!-- Your Email -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Email"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <Grid>
                                            <TextBox x:Name="txtEmail"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontSize="15"
                                                    Foreground="#1E293B"
                                                    IsReadOnly="True"
                                                    VerticalAlignment="Center"/>
                                            <Image Source="/Views/Assets/Icons/email.png"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"
                                                   Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Nama Lengkap -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Nama Lengkap"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <TextBox x:Name="txtNama"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="15"
                                                Foreground="#1E293B"
                                                IsReadOnly="True"
                                                VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <!-- NIK -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="NIK (Nomor Induk Kependudukan)"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <TextBox x:Name="txtNIK"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="15"
                                                Foreground="#1E293B"
                                                IsReadOnly="True"
                                                VerticalAlignment="Center"
                                                MaxLength="16"/>
                                    </Border>
                                </StackPanel>

                                <!-- Jenis Kelamin -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Jenis Kelamin"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <ComboBox x:Name="cmbJenisKelamin"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="15"
                                                 Foreground="#1E293B"
                                                 IsEnabled="False">
                                            <ComboBox.ItemContainerStyle>
                                                <Style TargetType="ComboBoxItem">
                                                    <Setter Property="Foreground" Value="#1E293B"/>
                                                </Style>
                                            </ComboBox.ItemContainerStyle>
                                            <ComboBoxItem Content="Laki-laki"/>
                                            <ComboBoxItem Content="Perempuan"/>
                                        </ComboBox>
                                    </Border>
                                </StackPanel>

                                <!-- Tanggal Lahir -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Tanggal Lahir"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <DatePicker x:Name="dpTanggalLahir"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   FontSize="15"
                                                   Foreground="#1E293B"
                                                   IsEnabled="False"/>
                                    </Border>
                                </StackPanel>

                                <!-- Alamat -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Alamat"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <TextBox x:Name="txtAlamat"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="15"
                                                Foreground="#1E293B"
                                                IsReadOnly="True"
                                                TextWrapping="Wrap"
                                                MinHeight="60"
                                                AcceptsReturn="True"
                                                VerticalAlignment="Top"/>
                                    </Border>
                                </StackPanel>

                                <!-- Password Lama (untuk verifikasi saat edit) -->
                                <StackPanel x:Name="pnlPasswordLama"
                                           Visibility="Collapsed"
                                           Margin="0,0,0,20">
                                    <TextBlock Text="Password Lama"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <Grid>
                                            <PasswordBox x:Name="txtPasswordLama"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontSize="15"
                                                        Foreground="#1E293B"
                                                        VerticalAlignment="Center"/>
                                            <Image Source="/Views/Assets/Icons/lock.png"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"
                                                   Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                    <TextBlock Text="Diperlukan untuk mengubah password"
                                               FontSize="11"
                                               Foreground="#94A3B8"
                                               Margin="5,5,0,0"/>
                                </StackPanel>

                                <!-- Password Baru (Optional saat edit) -->
                                <StackPanel x:Name="pnlPassword"
                                           Visibility="Collapsed"
                                           Margin="0,0,0,20">
                                    <TextBlock Text="Password Baru (Opsional)"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <Grid>
                                            <PasswordBox x:Name="txtPassword"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontSize="15"
                                                        Foreground="#1E293B"
                                                        VerticalAlignment="Center"/>
                                            <Image Source="/Views/Assets/Icons/lock.png"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"
                                                   Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                    <TextBlock Text="Kosongkan jika tidak ingin mengubah password"
                                               FontSize="11"
                                               Foreground="#94A3B8"
                                               Margin="5,5,0,0"/>
                                </StackPanel>

                                <!-- Confirm Password -->
                                <StackPanel x:Name="pnlConfirmPassword"
                                           Visibility="Collapsed"
                                           Margin="0,0,0,20">
                                    <TextBlock Text="Konfirmasi Password Baru"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               Foreground="#94A3B8"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#F1F5F9"
                                           CornerRadius="12"
                                           Padding="18,14"
                                           BorderThickness="0">
                                        <Grid>
                                            <PasswordBox x:Name="txtConfirmPassword"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontSize="15"
                                                        Foreground="#1E293B"
                                                        VerticalAlignment="Center"/>
                                            <Image Source="/Views/Assets/Icons/lock.png"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"
                                                   Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Action Buttons - Di Bawah Form -->
                            <StackPanel Margin="0,30,0,0">
                                <!-- Edit/Save Button -->
                                <Button x:Name="btnToggleEdit"
                                       Content="Edit Profil"
                                       Background="#00658D"
                                       Foreground="White"
                                       Padding="0,16"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"
                                       Click="BtnToggleEdit_Click"
                                       Margin="0,0,0,12">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="12"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                             VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#004D6A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Cancel Button -->
                                <Button x:Name="btnCancel"
                                       Content="Batal"
                                       Background="#F1F5F9"
                                       Foreground="#64748B"
                                       Padding="0,16"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"
                                       Click="BtnCancel_Click"
                                       Visibility="Collapsed">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="12"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                             VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E2E8F0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
