<Window x:Class="TiketLaut.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Jadwal - Tiket Laut"
        MinHeight="800"
        MinWidth="1500"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F2F5FC"
        FontFamily="Plus Jakarta Sans">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar Component -->
        <components:NavbarPostLogin Grid.Row="0"
                                    x:Name="navbarPostLogin"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="999"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="95,30,95,50">

                <!-- Back Button -->
                <Button Click="BtnKembali_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,30"
                        Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Views/Assets/Icons/back.png"
                               Width="24"
                               Height="24"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="Kembali"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#042769"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Filter Bar -->
                <Border Background="White"
                        CornerRadius="17"
                        Padding="20,15"
                        Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- From -->
                        <ComboBox Grid.Column="0"
                                  x:Name="cmbFilterFrom"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="0,0,10,0"
                                  MaxWidth="125"
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="Bakauheni"/>
                            <ComboBoxItem Content="Merak"/>
                            <ComboBoxItem Content="Ketapang"/>
                            <ComboBoxItem Content="Gilimanuk"/>
                        </ComboBox>

                        <!-- Arrow -->
                        <Image Grid.Column="1"
                               Source="/Views/Assets/Icons/iconarrowright.png"
                               Width="20"
                               Height="20"
                               Margin="5,0"
                               VerticalAlignment="Center"/>

                        <!-- To -->
                        <ComboBox Grid.Column="2"
                                  x:Name="cmbFilterTo"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="10,0"
                                  MaxWidth="125"
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="Merak"/>
                            <ComboBoxItem Content="Bakauheni"/>
                            <ComboBoxItem Content="Ketapang"/>
                            <ComboBoxItem Content="Gilimanuk"/>
                        </ComboBox>

                        <!-- Separator 1 -->
                        <Rectangle Grid.Column="3"
                                   Fill="#00B4B5"
                                   Width="1"
                                   Height="20"
                                   Margin="10,0"/>

                        <!-- Date -->
                        <ComboBox Grid.Column="4"
                                  x:Name="cmbFilterDate"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="10,0"
                                  MaxWidth="200"
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="Kam, 20 Oktober 2025"
                                          IsSelected="True"/>
                            <ComboBoxItem Content="Jum, 21 Oktober 2025"/>
                            <ComboBoxItem Content="Sab, 22 Oktober 2025"/>
                            <ComboBoxItem Content="Min, 23 Oktober 2025"/>
                            <ComboBoxItem Content="Sen, 24 Oktober 2025"/>
                        </ComboBox>

                        <!-- Separator 2 -->
                        <Rectangle Grid.Column="5"
                                   Fill="#00B4B5"
                                   Width="1"
                                   Height="20"
                                   Margin="10,0"/>

                        <!-- Time -->
                        <ComboBox Grid.Column="6"
                                  x:Name="cmbFilterTime"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="4"
                                  Margin="10,0"
                                  MaxWidth="100"
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="00:00"/>
                            <ComboBoxItem Content="06:00"/>
                            <ComboBoxItem Content="12:00"/>
                            <ComboBoxItem Content="18:00"/>
                            <ComboBoxItem Content="20:30"
                                          IsSelected="True"/>
                            <ComboBoxItem Content="23:00"/>
                        </ComboBox>

                        <!-- Separator 3 -->
                        <Rectangle Grid.Column="7"
                                   Fill="#00B4B5"
                                   Width="1"
                                   Height="20"
                                   Margin="10,0"/>

                        <!-- Vehicle Type -->
                        <ComboBox Grid.Column="8"
                                  x:Name="cmbFilterVehicle"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="10,0"
                                  MaxWidth="250"
                                  VerticalAlignment="Center"
                                  ToolTip="{Binding SelectedItem.Content, RelativeSource={RelativeSource Self}}">
                            <ComboBoxItem Content="Sepeda Motor (>500cc) (Golongan III)"
                                          IsSelected="True"/>
                            <ComboBoxItem Content="Mobil jeep, sedan, minibus"/>
                            <ComboBoxItem Content="Mobil bus penumpang"/>
                            <ComboBoxItem Content="Pejalan kaki tanpa kendaraan"/>
                            <ComboBoxItem Content="Mobil tronton, tangki, penarik + gandengan"/>
                        </ComboBox>

                        <!-- Separator 4 -->
                        <Rectangle Grid.Column="9"
                                   Fill="#00B4B5"
                                   Width="1"
                                   Height="20"
                                   Margin="10,0"/>

                        <!-- Passengers -->
                        <ComboBox Grid.Column="10"
                                  x:Name="cmbFilterPassenger"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="2"
                                  Margin="10,0"
                                  MaxWidth="150"
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="1 Penumpang"/>
                            <ComboBoxItem Content="2 Penumpang"/>
                            <ComboBoxItem Content="3 Penumpang"
                                          IsSelected="True"/>
                            <ComboBoxItem Content="4 Penumpang"/>
                            <ComboBoxItem Content="5+ Penumpang"/>
                        </ComboBox>

                        <!-- Spacer -->
                        <Grid Grid.Column="11"/>

                        <!-- Search Button -->
                        <Button Grid.Column="12"
                                Background="#00658D"
                                BorderThickness="0"
                                Padding="45,14"
                                Cursor="Hand"
                                Click="BtnCari_Click"
                                Margin="20,0,0,0"
                                Height="45"
                                MinWidth="110">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#1D4ED8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="Cari"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Info Card -->
                <Border Background="White"
                        CornerRadius="17"
                        Padding="30,20"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Jadwal feri yang tersedia"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Berikut feri yang tersedia pada waktu terdekat dari jadwal yang kamu cari."
                                   FontSize="14"
                                   FontWeight="Regular"
                                   Foreground="#042769"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Schedule List -->
                <ItemsControl x:Name="icScheduleList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="25"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Padding="35,25"
                                    Margin="0,0,0,30">
                                <Grid>
                                    <StackPanel>
                                        <!-- Header with Title -->
                                        <TextBlock Text="{Binding FerryType}"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Left"
                                                   Margin="0,0,0,10"/>

                                        <!-- Schedule Info Section -->
                                        <Grid Margin="0,0,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Left: Date and Warning -->
                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Width="300">
                                                <TextBlock Text="Jadwal masuk Pelabuhan"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="#999999"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding BoardingDate}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="#042769"
                                                           Margin="0,0,0,15"/>

                                                <!-- Warning -->
                                                <Border Background="#FFD3C5"
                                                        CornerRadius="11"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Left"
                                                        MaxWidth="300">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Image Grid.Column="0"
                                                               Source="/Views/Assets/Icons/iconwarning.png"
                                                               Width="18"
                                                               Height="18"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Top"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding WarningText}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="#E74C3C"
                                                                   TextWrapping="Wrap"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>

                                            <!-- Center: Journey Time -->
                                            <StackPanel Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"
                                                        Margin="20,0">
                                                <!-- Title above the grid -->
                                                <TextBlock Text="Estimasi Waktu Perjalanan"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="#999999"
                                                           TextAlignment="Center"
                                                           Margin="0,0,0,12"/>

                                                <!-- Journey Details Container -->
                                                <Grid HorizontalAlignment="Center"
                                                      MinWidth="400">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- ? FLEXIBLE COLUMN -->
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- Arrow -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- ? FLEXIBLE COLUMN -->
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Departure -->
                                                    <StackPanel Grid.Column="0"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Top"
                                                                Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding DepartureTime}"
                                                                   FontSize="26"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   TextAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,6"/>
                                                        <!-- ? CRITICAL FIX: Remove MaxWidth, allow full space -->
                                                        <TextBlock Text="{Binding DeparturePort}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#042769"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   HorizontalAlignment="Center"
                                                                   LineHeight="16"
                                                                   Padding="5,0"
                                                                   ToolTip="{Binding DeparturePort}"/>
                                                    </StackPanel>

                                                    <!-- Arrow with Duration -->
                                                    <StackPanel Grid.Column="1"
                                                                Margin="20,0"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Duration}"
                                                                   FontSize="11"
                                                                   FontWeight="Medium"
                                                                   Foreground="#00658D"
                                                                   TextAlignment="Center"
                                                                   Margin="0,0,0,8"/>
                                                        <Image Source="/Views/Assets/Icons/iconarrowlong.png"
                                                               Width="90"
                                                               Height="18"
                                                               Stretch="Uniform"
                                                               VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <!-- Arrival -->
                                                    <StackPanel Grid.Column="2"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Top"
                                                                Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding ArrivalTime}"
                                                                   FontSize="26"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   TextAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,6"/>
                                                        <!-- ? CRITICAL FIX: Remove MaxWidth, allow full space -->
                                                        <TextBlock Text="{Binding ArrivalPort}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#042769"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   HorizontalAlignment="Center"
                                                                   LineHeight="16"
                                                                   Padding="5,0"
                                                                   ToolTip="{Binding ArrivalPort}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Right: Pilih Tiket Button -->
                                            <Border Grid.Column="2"
                                                    Background="#2D6CDF"
                                                    CornerRadius="15"
                                                    VerticalAlignment="Top"
                                                    Cursor="Hand"
                                                    Margin="20,35,0,0">
                                                <Button Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="40,12"
                                                        Cursor="Hand"
                                                        Click="BtnPilihTiket_Click"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="Pilih Tiket"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Button>
                                            </Border>
                                        </Grid>

                                        <!-- Separator -->
                                        <Rectangle Fill="#E0E0E0"
                                                   Height="1"
                                                   Margin="0,0,0,20"/>

                                        <!-- Toggle Details Button -->
                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                Cursor="Hand"
                                                Click="BtnToggleDetails_Click"
                                                Tag="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Tampilkan detail fasilitas"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2D6CDF"
                                                           VerticalAlignment="Center"/>
                                                <Image x:Name="imgDropdown"
                                                       Source="/Views/Assets/Icons/icondropdown.png"
                                                       Width="14"
                                                       Height="14"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>

                                        <!-- Facilities Detail (Collapsed by default) -->
                                        <StackPanel x:Name="pnlFacilities"
                                                    Visibility="Collapsed"
                                                    Margin="0,20,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="1"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Port Facilities -->
                                                <StackPanel Grid.Column="0"
                                                            Margin="0,0,20,0">
                                                    <TextBlock Text="Fasilitas Pelabuhan"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding PortName}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#00658D"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Ini adalah fasilitas yang dapat diakses oleh penumpang di gedung terminal sebelum naik ke kapal."
                                                               FontSize="12"
                                                               FontWeight="Regular"
                                                               Foreground="#666666"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,15"/>

                                                    <!-- Port Facilities List -->
                                                    <ItemsControl ItemsSource="{Binding PortFacilities}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal"
                                                                            Margin="0,0,0,6">
                                                                    <Ellipse Width="5"
                                                                             Height="5"
                                                                             Fill="#042769"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding}"
                                                                               FontSize="13"
                                                                               FontWeight="Regular"
                                                                               Foreground="#042769"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>

                                                <!-- Separator Line -->
                                                <Rectangle Grid.Column="1"
                                                           Fill="#E0E0E0"
                                                           Width="1"/>

                                                <!-- Ship Facilities -->
                                                <StackPanel Grid.Column="2"
                                                            Margin="20,0,0,0">
                                                    <TextBlock Text="Fasilitas Kapal"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding ShipName}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#00658D"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Ini adalah fasilitas yang ada di dalam kapal."
                                                               FontSize="12"
                                                               FontWeight="Regular"
                                                               Foreground="#666666"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,15"/>

                                                    <!-- Ship Facilities List -->
                                                    <ItemsControl ItemsSource="{Binding ShipFacilities}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal"
                                                                            Margin="0,0,0,6">
                                                                    <Ellipse Width="5"
                                                                             Height="5"
                                                                             Fill="#042769"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding}"
                                                                               FontSize="13"
                                                                               FontWeight="Regular"
                                                                               Foreground="#042769"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Right Side: Capacity and Price (absolute positioning, overlay) -->
                                    <StackPanel HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,0,0,0">
                                        <TextBlock Text="{Binding Capacity}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#00658D"
                                                   TextAlignment="Right"
                                                   Margin="0,0,0,15"/>
                                        <TextBlock Text="{Binding Price}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#E74C3C"
                                                   TextAlignment="Right"
                                                   Margin="0,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>