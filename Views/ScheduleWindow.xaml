<Window x:Class="TiketLaut.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Jadwal Ferry - Tiket Laut" 
        Height="900" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F2F5FC"
        FontFamily="Plus Jakarta Sans">

    <Grid>
        <!-- Main Content Container -->
        <DockPanel>
            <!-- Navbar Component -->
            <components:NavbarSelainHomepage DockPanel.Dock="Top"/>
           
            <!-- Main Content Area -->
            <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">

                    <!-- Back Button -->
                    <Button x:Name="btnBack"
                           Background="Transparent"
                           BorderThickness="0"
                           Click="BtnBack_Click"
                           Cursor="Hand" 
                           Height="40" 
                           Margin="0,0,0,20"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Padding="8,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Back Arrow Icon -->
                            <Image Source="pack://application:,,,/Views/Assets/Icons/back.png" 
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>

                            <!-- Text -->
                            <TextBlock Text="Kembali" 
                                       Foreground="#00658D" 
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Button Style -->
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F8FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Filter Box - Horizontal Layout -->
                    <Border Background="White" 
                           CornerRadius="17" 
                           Padding="20,15"
                           Margin="0,0,0,30"
                           Effect="{StaticResource CardShadow}" Width="Auto" Height="70">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- From -->
                            <ComboBox Grid.Column="0"
                                     x:Name="cmbFilterFrom"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#011C4B"
                                     SelectedIndex="0"
                                     Margin="0,0,10,0"
                                     SelectionChanged="CmbFilter_SelectionChanged"
                                     VerticalAlignment="Center">
                                <ComboBoxItem Content="Bakauheni"/>
                                <ComboBoxItem Content="Merak"/>
                                <ComboBoxItem Content="Ketapang"/>
                                <ComboBoxItem Content="Gilimanuk"/>
                            </ComboBox>

                            <!-- Arrow -->
                            <TextBlock Grid.Column="1" 
                                      Text=">" 
                                      FontSize="16" 
                                      Foreground="#666"
                                      VerticalAlignment="Center"
                                      Margin="5,0"/>

                            <!-- To -->
                            <ComboBox Grid.Column="2"
                                     x:Name="cmbFilterTo"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#011C4B"
                                     SelectedIndex="0"
                                     Margin="10,0"
                                     SelectionChanged="CmbFilter_SelectionChanged"
                                     VerticalAlignment="Center">
                                <ComboBoxItem Content="Merak"/>
                                <ComboBoxItem Content="Bakauheni"/>
                                <ComboBoxItem Content="Ketapang"/>
                                <ComboBoxItem Content="Gilimanuk"/>
                            </ComboBox>

                            <!-- Separator -->
                            <Rectangle Grid.Column="3" 
                                      Fill="#00B4B5" 
                                      Width="1" 
                                      Height="20" 
                                      Margin="10,0"/>

                            <!-- Date Picker -->
                            <!-- Hapus DatePicker ini, ganti dengan hanya ComboBox -->
                            <!-- Date Dropdown (hanya ini yang digunakan) -->
                            <ComboBox Grid.Column="4"
                                     x:Name="cmbFilterDate"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#011C4B"
                                     SelectedIndex="3"
                                     Margin="10,0"
                                     SelectionChanged="CmbFilter_SelectionChanged"
                                     VerticalAlignment="Center">
                                <ComboBoxItem Content="Kam, 20 Oktober 2025" IsSelected="True"/>
                                <ComboBoxItem Content="Jum, 21 Oktober 2025"/>
                                <ComboBoxItem Content="Sab, 22 Oktober 2025"/>
                                <ComboBoxItem Content="Min, 23 Oktober 2025" />
                                <ComboBoxItem Content="Sen, 24 Oktober 2025"/>
                                <ComboBoxItem Content="Sel, 25 Oktober 2025"/>
                                <ComboBoxItem Content="Rab, 26 Oktober 2025"/>
                                <ComboBoxItem Content="Kam, 27 Oktober 2025"/>
                                <ComboBoxItem Content="Jum, 28 Oktober 2025"/>
                                <ComboBoxItem Content="Sab, 29 Oktober 2025"/>
                            </ComboBox>


                            <!-- Separator -->
                            <Rectangle Grid.Column="5" 
                                      Fill="#00B4B5" 
                                      Width="1" 
                                      Height="20" 
                                      Margin="10,0"/>

                            <!-- Time Dropdown -->
                            <ComboBox Grid.Column="6"
                                     x:Name="cmbFilterTime"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#011C4B"
                                     SelectedIndex="20"
                                     Margin="10,0"
                                     SelectionChanged="CmbFilter_SelectionChanged"
                                     VerticalAlignment="Center">
                                <ComboBoxItem Content="00:00"/>
                                <ComboBoxItem Content="01:00"/>
                                <ComboBoxItem Content="02:00"/>
                                <ComboBoxItem Content="03:00"/>
                                <ComboBoxItem Content="04:00"/>
                                <ComboBoxItem Content="05:00"/>
                                <ComboBoxItem Content="06:00"/>
                                <ComboBoxItem Content="07:00"/>
                                <ComboBoxItem Content="08:00"/>
                                <ComboBoxItem Content="09:00"/>
                                <ComboBoxItem Content="10:00"/>
                                <ComboBoxItem Content="11:00"/>
                                <ComboBoxItem Content="12:00"/>
                                <ComboBoxItem Content="13:00"/>
                                <ComboBoxItem Content="14:00"/>
                                <ComboBoxItem Content="15:00"/>
                                <ComboBoxItem Content="16:00"/>
                                <ComboBoxItem Content="17:00"/>
                                <ComboBoxItem Content="18:00"/>
                                <ComboBoxItem Content="19:00"/>
                                <ComboBoxItem Content="20:30" IsSelected="True"/>
                                <ComboBoxItem Content="21:00"/>
                                <ComboBoxItem Content="22:00"/>
                                <ComboBoxItem Content="23:00"/>
                            </ComboBox>

                            <!-- Separator -->
                            <Rectangle Grid.Column="7" 
                                      Fill="#00B4B5" 
                                      Width="1" 
                                      Height="20" 
                                      Margin="10,0"/>

                            <!-- Vehicle Type Dropdown -->
                            <ComboBox Grid.Column="8"
                                     x:Name="cmbFilterVehicle"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#011C4B"
                                     SelectedIndex="3"
                                     Margin="10,0"
                                     SelectionChanged="CmbFilter_SelectionChanged"
                                     VerticalAlignment="Center">
                                <ComboBoxItem Content="Pejalan kaki tanpa kendaraan"/>
                                <ComboBoxItem Content="Sepeda"/>
                                <ComboBoxItem Content="Sepeda motor 500cc dan gerobak dorong"/>
                                <ComboBoxItem Content="Sepeda Motor (>500cc) (Golongan III)" IsSelected="True"/>
                                <ComboBoxItem Content="Mobil jeep, sedan, minibus"/>
                                <ComboBoxItem Content="Mobil barang bak muatan terbuka/tertutup, mobil kabin ganda"/>
                                <ComboBoxItem Content="Mobil bus penumpang (5-7 meter)"/>
                                <ComboBoxItem Content="Mobil barang (truk/tangki) ukuran sedang (5-7 meter)"/>
                                <ComboBoxItem Content="Mobil bus penumpang (7-10 meter)"/>
                                <ComboBoxItem Content="Mobil barang (truk/tangki) sedang (7-10 meter)"/>
                                <ComboBoxItem Content="Mobil tronton, tangki, penarik + gandengan (10-12 meter)"/>
                                <ComboBoxItem Content="Mobil tronton, tangki, alat berat (12-16 meter)"/>
                                <ComboBoxItem Content="Mobil tronton, tangki, alat berat (>16 meter)"/>
                            </ComboBox>

                            <!-- Separator -->
                            <Rectangle Grid.Column="9" 
                                      Fill="#00B4B5" 
                                      Width="1" 
                                      Height="20" 
                                      Margin="10,0"/>

                            <!-- Passenger Count Dropdown -->
                            <ComboBox Grid.Column="10"
                                     x:Name="cmbFilterPassenger"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#011C4B"
                                     SelectedIndex="2"
                                     Margin="10,0"
                                     SelectionChanged="CmbFilter_SelectionChanged"
                                     VerticalAlignment="Center">
                                <ComboBoxItem Content="1 Penumpang"/>
                                <ComboBoxItem Content="2 Penumpang"/>
                                <ComboBoxItem Content="3 Penumpang" IsSelected="True"/>
                                <ComboBoxItem Content="4 Penumpang"/>
                                <ComboBoxItem Content="5+ Penumpang"/>
                            </ComboBox>

                            <!-- Spacer -->
                            <Grid Grid.Column="12" Margin="10,0,0,0"/>

                            <!-- Search Button -->
                            <Button Grid.Column="12"
                                   x:Name="btnFilterSearch"
                                   Content="Cari"
                                   Background="#00658D"
                                   Foreground="White"
                                   Padding="25,10"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Click="BtnFilterSearch_Click" Margin="105,0,0,0" HorizontalAlignment="Right" Width="93">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Schedule List Header -->
                    <Border Background="White" 
                            CornerRadius="17" 
                            Padding="30,15"
                            Margin="0,0,0,30"
                            Effect="{StaticResource CardShadow}"
                            HorizontalAlignment="Stretch">
                        <StackPanel>
                            <TextBlock Text="Jadwal feri yang tersedia" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="Black"
                                  Margin="0,0,0,8"/>
                            <TextBlock Text="Berikut feri yang tersedia pada waktu terdeka dari jadwal yang kamu cari." 
                                  FontSize="14" 
                                  Foreground="#001B4A"
                                  Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>


                    <!-- Schedule Items Container -->
                    <StackPanel x:Name="scheduleContainer" RenderTransformOrigin="0.499,0.51">

                        <!-- Regular Schedule Item -->
                        <Border Background="White"
                               CornerRadius="25" 
                               Padding="35,25"
                               Margin="0,0,0,20"
                               Effect="{StaticResource CardShadow}"
                               HorizontalAlignment="Stretch">
                            <StackPanel>
                                <!-- Main Schedule Content -->
                                <Grid MinHeight="120">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="680"/>
                                        <!-- Schedule Type & Details -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Spacer -->
                                        <ColumnDefinition Width="Auto" MinWidth="250"/>
                                        <!-- Price & Actions -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Section: Schedule Type & Details -->
                                    <StackPanel Grid.Column="0" 
                                               VerticalAlignment="Top">

                                        <!-- Schedule Type -->
                                        <TextBlock Text="Reguler" 
                                                  FontSize="30" 
                                                  FontWeight="Bold" 
                                                  Foreground="Black"
                                                  Margin="0,0,0,5"/>

                                        <!-- Port and Date Info -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Schedule Info -->
                                            <StackPanel Grid.Column="0" Margin="0,0,80,0">
                                                <TextBlock Text="Jadwal masuk Pelabuhan" 
                                                          FontSize="16" 
                                                          Foreground="#A2A2A2"
                                                          Margin="0,0,0,8"/>
                                                <TextBlock Text="Kamis, 23 Oktober 2025" 
                                                          FontSize="20" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="Black"
                                                          Margin="0,0,0,12"/>

                                                <!-- Check-in Warning -->
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Fill="#FF9800" Width="10" Height="10" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBlock Text="Masuk pelabuhan (check-in) sebelum 20:15" 
                                                              FontSize="16" 
                                                              Foreground="#E65100" RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform/>
                                                                <SkewTransform/>
                                                                <RotateTransform Angle="-0.585"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Travel Time Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Estimasi Waktu Perjalanan" 
                                                          FontSize="16" 
                                                          Foreground="#A2A2A2"
                                                          Margin="0,0,0,15"/>

                                                <!-- Journey Details -->
                                                <StackPanel Orientation="Horizontal" 
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left">

                                                    <!-- Departure -->
                                                    <StackPanel HorizontalAlignment="Center" Margin="0,0,30,0">
                                                        <TextBlock Text="20:30" 
                                                                  FontSize="28" 
                                                                  FontWeight="Bold" 
                                                                  Foreground="#011C4B"
                                                                  HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Bakauheni"
                                                                  FontWeight="SemiBold"
                                                                  FontSize="18" 
                                                                  Foreground="#042769"
                                                                  HorizontalAlignment="Left"
                                                                  Margin="0"/>
                                                    </StackPanel>

                                                    <!-- Duration Arrow -->
                                                    <StackPanel 
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,30,0" MinWidth="150" Width="100">
                                                        <TextBlock Text="2 jam 10 menit" 
                                                                  FontSize="14" 
                                                                  Foreground="#00B4B5" 
                                                                  HorizontalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <StackPanel Orientation="Horizontal" 
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,8,0,0">
                                                            <TextBlock Text="→" 
                                                                      FontSize="20" 
                                                                      Foreground="#042769" 
                                                                      Margin="5,0,0,0"
                                                                      VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Arrival -->
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="22:40" 
                                                                  FontSize="28" 
                                                                  FontWeight="Bold" 
                                                                  Foreground="#011C4B"
                                                                  HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Merak" 
                                                                  FontWeight="SemiBold"
                                                                  FontSize="18" 
                                                                  Foreground="#042769"
                                                                  HorizontalAlignment="Left"
                                                                  Margin="0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Right Section: Price & Actions -->
                                    <StackPanel Grid.Column="2"
                                               VerticalAlignment="Stretch"
                                               HorizontalAlignment="Right"
                                               MinWidth="250">

                                        <!-- Top content -->
                                        <StackPanel>
                                            <TextBlock Text="Kapasitas Tersedia (390)" 
                                                      FontSize="16" 
                                                      Foreground="#00658D"
                                                      FontWeight="SemiBold"
                                                      HorizontalAlignment="Right"
                                                      Margin="0,20,0,8"/>

                                            <TextBlock Text="IDR 187.853" 
                                                      FontSize="26" 
                                                      FontWeight="Bold" 
                                                      Foreground="#DC2626"
                                                      HorizontalAlignment="Right"
                                                      Margin="0,0,0,0"/>
                                        </StackPanel>

                                        <!-- Bottom aligned button -->
                                        <Button x:Name="btnPilihTiket1"
                                               Content="Pilih Tiket"
                                               Background="#2563EB"
                                               Foreground="White"
                                               Padding="30,15"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Bottom"
                                               Click="BtnPilihTiket_Click" 
                                               Width="160"  
                                               Height="45"
                                               Margin="0,10,0,0">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="12">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1D4ED8"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Facilities Toggle -->
                                <Border BorderBrush="#E0E0E0" 
                                       BorderThickness="0,1,0,0" 
                                       Margin="0,25,0,0" 
                                       Padding="0,18,0,0">
                                    <Button x:Name="btnToggleFacilities1"
                                           Content="Tampilkan detail fasilitas ↓"
                                           Background="Transparent"
                                           Foreground="#2563EB"
                                           BorderThickness="0"
                                           FontSize="16"
                                           HorizontalAlignment="Right"
                                           Cursor="Hand"
                                           Click="BtnToggleFacilities_Click"/>
                                </Border>

                                <!-- Expandable Facilities Content -->
                                <Border x:Name="facilitiesPanel1" 
                                       Visibility="Collapsed"
                                       Background="White"
                                       CornerRadius="12"
                                       Padding="30"
                                       Margin="0,15,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Vertical Separator -->
                                        <Rectangle Grid.Column="1" 
                                                  Fill="#E0E0E0" 
                                                  Width="2" 
                                                  VerticalAlignment="Stretch"
                                                  Margin="15,0"/>

                                        <!-- Port Facilities -->
                                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                            <TextBlock Text="Fasilitas Pelabuhan" 
                                                      FontSize="20" 
                                                      FontWeight="Bold" 
                                                      Foreground="#011C4B"
                                                      Margin="0,0,0,8"/>
                                            <TextBlock Text="Bakauheni (Lampung Selatan)" 
                                                      FontSize="16" 
                                                      Foreground="Black"
                                                      FontWeight="SemiBold"
                                                      Margin="0,0,0,15"/>
                                            <TextBlock Text="Ini adalah fasilitas yang dapat diakses oleh penumpang di gedung terminal sebelum naik ke kapal." 
                                                      FontSize="16" 
                                                      Foreground="Black"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,20"/>

                                            <StackPanel>
                                                <TextBlock Text="• Ruang Tunggu" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Musala" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Toilet Umum" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Area Pengisian Daya (Charging Station)" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• ATM Center" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Minimarket &amp; Toko Oleh-oleh" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Kantin / Pujasera (Food Court)" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Pos Kesehatan" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Area Merokok (Smoking Area)" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Ship Facilities -->
                                        <StackPanel Grid.Column="2" Margin="15,0,0,0">
                                            <TextBlock Text="Fasilitas Kapal" 
                                                      FontSize="20" 
                                                      FontWeight="Bold" 
                                                      Foreground="#011C4B"
                                                      Margin="0,0,0,8"/>
                                            <TextBlock Text="KMP Portlink III" 
                                                      FontSize="16" 
                                                      Foreground="Black"
                                                      FontWeight="SemiBold"
                                                      Margin="0,0,0,15"/>
                                            <TextBlock Text="Ini adalah fasilitas yang ada di dalam kapal." 
                                                      FontSize="16" 
                                                      Foreground="Black"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,20"/>

                                            <StackPanel>
                                                <TextBlock Text="• Ruang Penumpang (AC dan non-AC)" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Kantin / Kafetaria" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Musala" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Toilet" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Dek Terbuka (Area Merokok)" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Ruang Lesehan bertikar" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Hiburan" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                                <TextBlock Text="• Colokan Listrik" 
                                                          FontSize="16" 
                                                          Foreground="Black" 
                                                          Margin="0,4"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Express Schedule Item -->
                        <Border Background="White" 
                               CornerRadius="25" 
                               Padding="35,25"
                               Margin="0,0,0,20"
                               Effect="{StaticResource CardShadow}"
                               HorizontalAlignment="Stretch">
                            <StackPanel>
                                <!-- Main Schedule Content -->
                                <Grid MinHeight="120">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="680"/>
                                        <!-- Schedule Type & Details -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Spacer -->
                                        <ColumnDefinition Width="Auto" MinWidth="250"/>
                                        <!-- Price & Actions -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Section: Schedule Type & Details -->
                                    <StackPanel Grid.Column="0" 
                                               VerticalAlignment="Top">

                                        <!-- Schedule Type -->
                                        <TextBlock Text="Express" 
                                                  FontSize="30" 
                                                  FontWeight="Bold" 
                                                  Foreground="Black"
                                                  Margin="0,0,0,5"/>

                                        <!-- Port and Date Info -->
                                        <Grid>
