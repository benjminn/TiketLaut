<Window x:Class="TiketLaut.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Jadwal - Tiket Laut"
        MinHeight="800"
        MinWidth="1500"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F2F5FC"
        FontFamily="Plus Jakarta Sans">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar Component -->
        <components:NavbarPostLogin Grid.Row="0"
                                    x:Name="navbarPostLogin"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="999"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="95,30,95,50">

                <!-- Back Button -->
                <Button Click="BtnKembali_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,30"
                        Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Views/Assets/Icons/back.png"
                               Width="24"
                               Height="24"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="Kembali"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#042769"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Border Background="White"
                        CornerRadius="17"
                        Padding="20,15"
                        >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" MinWidth="148.547"/>
                            <ColumnDefinition Width="Auto" MinWidth="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" MinWidth="155"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- From -->
                        <ComboBox Grid.Column="0"
                                  x:Name="cmbFilterFrom"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="0,0,10,0"
                                  MaxWidth="125"
                                  VerticalAlignment="Center" Height="25">
                            <ComboBoxItem Content="Bakauheni"/>
                            <ComboBoxItem Content="Merak"/>
                            <ComboBoxItem Content="Ketapang"/>
                            <ComboBoxItem Content="Gilimanuk"/>
                        </ComboBox>

                        <!-- Arrow -->
                        <Image Grid.Column="1"
                               Source="/Views/Assets/Icons/iconarrowright.png"
                               Height="20"
                               Margin="5,0,5,0"
                               VerticalAlignment="Center"/>

                        <!-- To -->
                        <ComboBox Grid.Column="2"
                                  x:Name="cmbFilterTo"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="10,0,10,0"
                                  MaxWidth="125"
                                  VerticalAlignment="Center" Height="25">
                            <ComboBoxItem Content="Merak"/>
                            <ComboBoxItem Content="Bakauheni"/>
                            <ComboBoxItem Content="Ketapang"/>
                            <ComboBoxItem Content="Gilimanuk"/>
                        </ComboBox>

                        <!-- Separator 1 -->
                        <Rectangle Grid.Column="3"
                                   Width="1"
                                   Fill="#00B4B5"
                                   Margin="10,0,10,1"/>

                        <!-- Date Display -->
                        <Grid Grid.Column="4"
                              Margin="10,0,10,0"
                              VerticalAlignment="Center"
                              Background="Transparent">
                            <!-- DatePicker dengan template kosong (tidak tampilkan text/icon) -->
                            <DatePicker x:Name="dpFilterDate"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Visibility="Collapsed"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Width="0"
                                       Height="0"
                                       SelectedDateChanged="DpFilterDate_SelectedDateChanged"
                                       CalendarOpened="DpFilterDate_CalendarOpened"
                                       CalendarClosed="DpFilterDate_CalendarClosed">
                                <DatePicker.Template>
                                    <ControlTemplate TargetType="DatePicker">
                                        <!-- Template kosong, hanya untuk calendar popup -->
                                        <Grid Width="0" Height="0">
                                            <DatePickerTextBox x:Name="PART_TextBox" 
                                                             Visibility="Collapsed"/>
                                            <Button x:Name="PART_Button" 
                                                   Visibility="Collapsed"/>
                                            <Popup x:Name="PART_Popup" 
                                                  PlacementTarget="{Binding ElementName=txtFilterDateDisplay}"
                                                  Placement="Bottom"
                                                  HorizontalOffset="5"
                                                  VerticalOffset="3"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False"/>
                                        </Grid>
                                    </ControlTemplate>
                                </DatePicker.Template>
                            </DatePicker>
                            
                            <!-- TextBlock untuk menampilkan tanggal yang dipilih -->
                            <TextBlock x:Name="txtFilterDateDisplay"
                                      Text="Sab, 1 November 2025"
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Foreground="#011C4B"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      IsHitTestVisible="False"
                                      Background="Transparent"/>
                            
                            <!-- Button transparan di atas untuk buka kalender -->
                            <Button x:Name="btnFilterDate"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Click="BtnFilterDate_Click"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
                        </Grid>

                        <!-- Separator 2 -->
                        <Rectangle Grid.Column="5"
                                   Width="1"
                                   Fill="#00B4B5"
                                   Margin="10,0,10,0"/>

                        <!-- Time (00:00 - 23:00 seperti HomePage) -->
                        <ComboBox Grid.Column="6"
                                  x:Name="cmbFilterTime"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="10,0,10,0"
                                  MaxWidth="100"
                                  MaxDropDownHeight="250"
                                  VerticalAlignment="Center" Height="25" Grid.ColumnSpan="2">
                            <ComboBoxItem Content="Pilih Jam" IsSelected="True"/>
                            <ComboBoxItem Content="00:00"/>
                            <ComboBoxItem Content="01:00"/>
                            <ComboBoxItem Content="02:00"/>
                            <ComboBoxItem Content="03:00"/>
                            <ComboBoxItem Content="04:00"/>
                            <ComboBoxItem Content="05:00"/>
                            <ComboBoxItem Content="06:00"/>
                            <ComboBoxItem Content="07:00"/>
                            <ComboBoxItem Content="08:00"/>
                            <ComboBoxItem Content="09:00"/>
                            <ComboBoxItem Content="10:00"/>
                            <ComboBoxItem Content="11:00"/>
                            <ComboBoxItem Content="12:00"/>
                            <ComboBoxItem Content="13:00"/>
                            <ComboBoxItem Content="14:00"/>
                            <ComboBoxItem Content="15:00"/>
                            <ComboBoxItem Content="16:00"/>
                            <ComboBoxItem Content="17:00"/>
                            <ComboBoxItem Content="18:00"/>
                            <ComboBoxItem Content="19:00"/>
                            <ComboBoxItem Content="20:00"/>
                            <ComboBoxItem Content="21:00"/>
                            <ComboBoxItem Content="22:00"/>
                            <ComboBoxItem Content="23:00"/>
                        </ComboBox>

                        <!-- Separator 3 -->
                        <Rectangle Grid.Column="8"
                                   Width="1"
                                   Fill="#00B4B5"
                                   Margin="7,0,269,0"/>

                        <!-- Vehicle Type -->
                        <ComboBox Grid.Column="8"
                                  x:Name="cmbFilterVehicle"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="#011C4B"
                                  SelectedIndex="0"
                                  Margin="29,0,10,0"
                                  MaxWidth="250"
                                  VerticalAlignment="Center"
                                  ToolTip="{Binding SelectedItem.Content, RelativeSource={RelativeSource Mode=Self}}" Height="25" Grid.ColumnSpan="2" SelectionChanged="cmbFilterVehicle_SelectionChanged">
                            <ComboBoxItem Content="Sepeda Motor (&gt;500cc) (Golongan III)"
                                          IsSelected="True"/>
                            <ComboBoxItem Content="Mobil jeep, sedan, minibus"/>
                            <ComboBoxItem Content="Mobil bus penumpang"/>
                            <ComboBoxItem Content="Pejalan kaki tanpa kendaraan"/>
                            <ComboBoxItem Content="Mobil tronton, tangki, penarik + gandengan"/>
                        </ComboBox>

                        <!-- Separator 4 -->
                        <Rectangle Grid.Column="10"
                                   Width="1"
                                   Fill="#00B4B5"
                                   Margin="6,0,221,0"/>

                        <!-- Passengers (Clickable Button + Popup) -->
                        <Grid Grid.Column="10" 
                              Margin="10,0,88,0" 
                              VerticalAlignment="Center">
                            <!-- Button untuk toggle popup -->
                            <Button x:Name="btnFilterPenumpang"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Click="BtnFilterPenumpang_Click"
                                   Padding="5,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Width="130">
                                <TextBlock x:Name="txtFilterPenumpangDisplay"
                                          FontSize="15"
                                          FontFamily="Plus Jakarta Sans"
                                          FontWeight="SemiBold"
                                          TextAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="#011C4B" Width="132">
                                    <Run Text="1"/>
                                    <Run Text=" "/>
                                    <Run Text="Penumpang"/>
                                </TextBlock>
                            </Button>

                            <!-- Hidden TextBox for value -->
                            <TextBox x:Name="txtFilterPenumpang"
                                    Text="1"
                                    Visibility="Collapsed"/>

                            <!-- Popup untuk +/- dan input -->
                            <Popup x:Name="popupPenumpang"
                                  PlacementTarget="{Binding ElementName=btnFilterPenumpang}"
                                  Placement="Bottom"
                                  HorizontalOffset="20"
                                  VerticalOffset="7"
                                  AllowsTransparency="True"
                                  StaysOpen="False"
                                  Closed="PopupPenumpang_Closed">
                                <Border Background="White"
                                       BorderBrush="#00B4B5"
                                       BorderThickness="2"
                                       CornerRadius="8"
                                       Padding="15"
                                       MinWidth="150">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" 
                                                         Direction="270" 
                                                         ShadowDepth="2" 
                                                         BlurRadius="8" 
                                                         Opacity="0.15"/>
                                    </Border.Effect>

                                    <StackPanel>
                                        <TextBlock Text="Jumlah Penumpang"
                                                  FontSize="12"
                                                  FontWeight="Medium"
                                                  Foreground="#042769"
                                                  Margin="0,0,0,10"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Button Minus -->
                                            <Button x:Name="btnPopupMinusPenumpang"
                                                   Grid.Column="0"
                                                   Width="28"
                                                   Height="28"
                                                   Background="#F1F5F9"
                                                   BorderThickness="0"
                                                   Click="BtnFilterMinusPenumpang_Click"
                                                   Cursor="Hand"
                                                   Margin="0,0,8,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           CornerRadius="6">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.5"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <TextBlock Text="-" 
                                                          FontSize="16" 
                                                          FontWeight="Bold"
                                                          Foreground="#042769"/>
                                            </Button>

                                            <!-- TextBox untuk input manual -->
                                            <TextBox x:Name="txtPopupPenumpang"
                                                    Grid.Column="1"
                                                    Text="1"
                                                    FontSize="15"
                                                    FontWeight="SemiBold"
                                                    TextAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Foreground="#042769"
                                                    BorderBrush="#CBD5E1"
                                                    BorderThickness="1"
                                                    Height="28"
                                                    MinWidth="50"
                                                    MaxLength="3"
                                                    Margin="0"
                                                    Padding="5,0"
                                                    PreviewTextInput="TxtPopupPenumpang_PreviewTextInput"
                                                    TextChanged="TxtPopupPenumpang_TextChanged">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="TextBox">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                           CornerRadius="6">
                                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                                    Margin="5,0"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>

                                            <!-- Button Plus -->
                                            <Button x:Name="btnPopupPlusPenumpang"
                                                   Grid.Column="2"
                                                   Width="28"
                                                   Height="28"
                                                   Background="#F1F5F9"
                                                   BorderThickness="0"
                                                   Click="BtnFilterPlusPenumpang_Click"
                                                   Cursor="Hand"
                                                   Margin="8,0,0,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           CornerRadius="6">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.5"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <TextBlock Text="+" 
                                                          FontSize="16" 
                                                          FontWeight="Bold"
                                                          Foreground="#042769"/>
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- Spacer -->
                        <Grid Grid.Column="11" Margin="120,0,0,0"/>

                        <!-- Search Button -->
                        <Button Grid.Column="12"
                                Background="#00658D"
                                BorderThickness="0"
                                Padding="45,14"
                                Cursor="Hand"
                                Click="BtnCari_Click"
                                Margin="20,0,0,0"
                                MinWidth="110">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#1D4ED8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="Cari"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Filter Bar -->

                <!-- Info Card -->
                <Border Background="White"
                        CornerRadius="17"
                        Padding="30,20"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Jadwal feri yang tersedia"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Berikut feri yang tersedia pada waktu terdekat dari jadwal yang kamu cari."
                                   FontSize="14"
                                   FontWeight="Regular"
                                   Foreground="#042769"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Schedule List -->
                <ItemsControl x:Name="icScheduleList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="25"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Padding="35,25"
                                    Margin="0,0,0,30">
                                <Grid>
                                    <StackPanel>
                                        <!-- Header with Title -->
                                        <TextBlock Text="{Binding FerryType}"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Left"
                                                   Margin="0,0,0,10"/>

                                        <!-- Schedule Info Section -->
                                        <Grid Margin="0,0,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Left: Date and Warning -->
                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        MinWidth="300">
                                                <TextBlock Text="Jadwal masuk Pelabuhan"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="#999999"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding BoardingDate}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="#042769"
                                                           Margin="0,0,0,15"/>

                                                <!-- Warning -->
                                                <Border Background="#FFD3C5"
                                                        CornerRadius="11"
                                                        Padding="12,8">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="/Views/Assets/Icons/iconwarning.png"
                                                               Width="18"
                                                               Height="18"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding WarningText}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="#E74C3C"
                                                                   TextWrapping="NoWrap"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- Center: Journey Time -->
                                            <StackPanel Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"
                                                        Margin="20,0">
                                                <!-- Title above the grid -->
                                                <TextBlock Text="Estimasi Waktu Perjalanan"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="#999999"
                                                           TextAlignment="Center"
                                                           Margin="0,0,0,12"/>

                                                <!-- Journey Details Container -->
                                                <Grid HorizontalAlignment="Center"
                                                      MinWidth="400">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- ? FLEXIBLE COLUMN -->
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- Arrow -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- ? FLEXIBLE COLUMN -->
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Departure -->
                                                    <StackPanel Grid.Column="0"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Top"
                                                                Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding DepartureTime}"
                                                                   FontSize="26"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   TextAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,6"/>
                                                        <!-- ? CRITICAL FIX: Remove MaxWidth, allow full space -->
                                                        <TextBlock Text="{Binding DeparturePort}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#042769"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   HorizontalAlignment="Center"
                                                                   LineHeight="16"
                                                                   Padding="5,0"
                                                                   ToolTip="{Binding DeparturePort}"/>
                                                    </StackPanel>

                                                    <!-- Arrow with Duration -->
                                                    <StackPanel Grid.Column="1"
                                                                Margin="20,0"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Duration}"
                                                                   FontSize="11"
                                                                   FontWeight="Medium"
                                                                   Foreground="#00658D"
                                                                   TextAlignment="Center"
                                                                   Margin="0,0,0,8"/>
                                                        <Image Source="/Views/Assets/Icons/iconarrowlong.png"
                                                               Width="90"
                                                               Height="18"
                                                               Stretch="Uniform"
                                                               VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <!-- Arrival -->
                                                    <StackPanel Grid.Column="2"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Top"
                                                                Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding ArrivalTime}"
                                                                   FontSize="26"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   TextAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,6"/>
                                                        <!-- ? CRITICAL FIX: Remove MaxWidth, allow full space -->
                                                        <TextBlock Text="{Binding ArrivalPort}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#042769"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   HorizontalAlignment="Center"
                                                                   LineHeight="16"
                                                                   Padding="5,0"
                                                                   ToolTip="{Binding ArrivalPort}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Right: Pilih Tiket Button -->
                                            <Border Grid.Column="2"
                                                    Background="#2D6CDF"
                                                    CornerRadius="15"
                                                    VerticalAlignment="Top"
                                                    Cursor="Hand"
                                                    Margin="20,35,0,0">
                                                <Button Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="40,12"
                                                        Cursor="Hand"
                                                        Click="BtnPilihTiket_Click"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="Pilih Tiket"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Button>
                                            </Border>
                                        </Grid>

                                        <!-- Separator -->
                                        <Rectangle Fill="#E0E0E0"
                                                   Height="1"
                                                   Margin="0,0,0,20"/>

                                        <!-- Toggle Details Button -->
                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                Cursor="Hand"
                                                Click="BtnToggleDetails_Click"
                                                Tag="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Tampilkan detail fasilitas"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2D6CDF"
                                                           VerticalAlignment="Center"/>
                                                <Image x:Name="imgDropdown"
                                                       Source="/Views/Assets/Icons/icondropdown.png"
                                                       Width="14"
                                                       Height="14"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>

                                        <!-- Facilities Detail (Collapsed by default) -->
                                        <StackPanel x:Name="pnlFacilities"
                                                    Visibility="Collapsed"
                                                    Margin="0,20,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="1"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Port Facilities -->
                                                <StackPanel Grid.Column="0"
                                                            Margin="0,0,20,0">
                                                    <TextBlock Text="Fasilitas Pelabuhan"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding PortName}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#00658D"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Ini adalah fasilitas yang dapat diakses oleh penumpang di gedung terminal sebelum naik ke kapal."
                                                               FontSize="12"
                                                               FontWeight="Regular"
                                                               Foreground="#666666"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,15"/>

                                                    <!-- Port Facilities List -->
                                                    <ItemsControl ItemsSource="{Binding PortFacilities}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal"
                                                                            Margin="0,0,0,6">
                                                                    <Ellipse Width="5"
                                                                             Height="5"
                                                                             Fill="#042769"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding}"
                                                                               FontSize="13"
                                                                               FontWeight="Regular"
                                                                               Foreground="#042769"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>

                                                <!-- Separator Line -->
                                                <Rectangle Grid.Column="1"
                                                           Fill="#E0E0E0"
                                                           Width="1"/>

                                                <!-- Ship Facilities -->
                                                <StackPanel Grid.Column="2"
                                                            Margin="20,0,0,0">
                                                    <TextBlock Text="Fasilitas Kapal"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding ShipName}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#00658D"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Ini adalah fasilitas yang ada di dalam kapal."
                                                               FontSize="12"
                                                               FontWeight="Regular"
                                                               Foreground="#666666"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,15"/>

                                                    <!-- Ship Facilities List -->
                                                    <ItemsControl ItemsSource="{Binding ShipFacilities}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal"
                                                                            Margin="0,0,0,6">
                                                                    <Ellipse Width="5"
                                                                             Height="5"
                                                                             Fill="#042769"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding}"
                                                                               FontSize="13"
                                                                               FontWeight="Regular"
                                                                               Foreground="#042769"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Right Side: Capacity and Price (absolute positioning, overlay) -->
                                    <StackPanel HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,0,0,0">
                                        <TextBlock Text="{Binding Capacity}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#00658D"
                                                   TextAlignment="Right"
                                                   Margin="0,0,0,15"/>
                                        <TextBlock Text="{Binding Price}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#E74C3C"
                                                   TextAlignment="Right"
                                                   Margin="0,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>