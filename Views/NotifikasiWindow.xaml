<Window x:Class="TiketLaut.Views.NotifikasiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Tiket Laut - Notifikasi" 
        MinHeight="800" 
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <!-- Drop Shadow untuk Card -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <!-- Style untuk Separator Line -->
        <Style x:Key="SeparatorStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#A2A2A2"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,20,0,20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar -->
        <components:NavbarPostLogin x:Name="navbarPostLogin" 
                                   Grid.Row="0" 
                                   Panel.ZIndex="999"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="95,40,95,40">
            <!-- Notification Card Container -->
            <Border Background="White" 
                   CornerRadius="41" 
                   Effect="{StaticResource CardShadow}">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                           Background="White" 
                           Padding="40,40,40,30"
                           CornerRadius="41,41,0,0">
                        <TextBlock Text="Notifikasi" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"/>
                    </Border>

                    <!-- Separator -->
                    <Rectangle Grid.Row="1" 
                              Fill="#E0E0E0" 
                              Height="1" 
                              Margin="40,0"/>

                    <!-- Notification List dengan Background Biru -->
                    <Border Grid.Row="2" 
                           Background="#E2F7FF"
                           CornerRadius="0,0,41,41">
                        <ScrollViewer x:Name="notificationScrollViewer"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled"
                                     Padding="40,30,40,40">
                        
                            <StackPanel x:Name="notificationList">
                                <!-- Notification items akan di-generate di code-behind -->
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>