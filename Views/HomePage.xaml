<Window x:Class="TiketLaut.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Tiket Laut - Home" 
        MinHeight="800" 
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White"
        FontFamily="Plus Jakarta Sans">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area (Background Image, Overlay, Content) -->
        <Grid Grid.Row="1" Panel.ZIndex="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="707*"/>
                <ColumnDefinition Width="489*"/>
                <ColumnDefinition Width="217*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Image -->
            <Image Source="/Views/Assets/Images/bekgron.png" 
                   Stretch="UniformToFill" 
                   Opacity="0.7" 
                   VerticalAlignment="Top"
                   Height="474" 
                   Margin="0,-74,0,0" 
                   Grid.ColumnSpan="3"/>

            <!-- Overlay untuk memperjelas teks -->
            <Rectangle Fill="#011C4B" 
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       Height="474" 
                       Margin="0,-74,0,0" 
                       Grid.ColumnSpan="3"/>

            <!-- ScrollViewer untuk content yang panjang -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="0" 
                         Height="710" 
                         VerticalAlignment="Center" 
                         Grid.ColumnSpan="3">
                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           MaxWidth="1000"
                           MinWidth="800"
                           Margin="40">

                    <!-- Title -->
                    <TextBlock Text="Tiket Laut" 
                              FontSize="56" 
                              FontFamily="Plus Jakarta Sans"
                              FontWeight="Bold" 
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,15"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Jelajahi perjalanan laut dengan mudah dan nyaman." 
                              FontSize="16" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="Pesan tiket kapal ferry ke berbagai pelabuhan tujuan hanya dalam beberapa klik!" 
                              FontSize="14" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,30"/>

                    <Border Background="White" 
                           CornerRadius="20" 
                           Padding="40" 
                           Effect="{StaticResource CardShadow}">

                        <StackPanel>
                            <!-- Row 1: Pelabuhan Asal, Kelas Layanan, Jadwal Masuk -->
                            <Grid Margin="0,0,0,25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                    <ColumnDefinition Width="1.2*" MinWidth="300"/>
                                </Grid.ColumnDefinitions>

                                <!-- Pelabuhan Asal -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Pelabuhan Asal" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconlokasi.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanAsal"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Asal" />
                                                <ComboBoxItem Content="A" />
                                                <ComboBoxItem Content="B" />
                                                <ComboBoxItem Content="C" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Kelas Layanan -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Kelas Layanan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbKelasLayanan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Kelas" />
                                                <ComboBoxItem Content="A" />
                                                <ComboBoxItem Content="B" />
                                                <ComboBoxItem Content="C" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Jadwal Masuk -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Jadwal Masuk" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tanggal -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="12,10"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="0">
                                            <DatePicker x:Name="dpTanggal"
                                                       Background="Transparent" 
                                                       BorderThickness="0"
                                                       FontSize="11"
                                                       FontFamily="Plus Jakarta Sans"
                                                       Foreground="#666666"
                                                       SelectedDateFormat="Short"/>
                                        </Border>

                                        <!-- Separator -->
                                        <Rectangle Fill="#CCCCCC" Width="2" Margin="8,0" Grid.Column="1"/>

                                        <!-- Jam -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="12,10"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="6"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Column="0"
                                                       Source="/Views/Assets/Icons/icontanggal.png"
                                                       Width="16"
                                                       Height="16"
                                                       VerticalAlignment="Center"/>

                                                <ComboBox x:Name="cmbJam"
                                                         Grid.Column="2"
                                                         Background="Transparent" 
                                                         BorderThickness="0"
                                                         FontSize="11"
                                                         FontFamily="Plus Jakarta Sans"
                                                         Foreground="#666666"
                                                         SelectedIndex="0">
                                                    <ComboBoxItem IsSelected="True" Content="Pilih Jam"/>
                                                    <ComboBoxItem Content="00:00"/>
                                                    <ComboBoxItem Content="01:00"/>
                                                    <ComboBoxItem Content="02:00"/>
                                                    <ComboBoxItem Content="03:00"/>
                                                    <ComboBoxItem Content="04:00"/>
                                                    <ComboBoxItem Content="05:00"/>
                                                    <ComboBoxItem Content="06:00"/>
                                                    <ComboBoxItem Content="07:00"/>
                                                    <ComboBoxItem Content="08:00"/>
                                                    <ComboBoxItem Content="09:00"/>
                                                    <ComboBoxItem Content="10:00"/>
                                                    <ComboBoxItem Content="11:00"/>
                                                    <ComboBoxItem Content="12:00"/>
                                                    <ComboBoxItem Content="13:00"/>
                                                    <ComboBoxItem Content="14:00"/>
                                                    <ComboBoxItem Content="15:00"/>
                                                    <ComboBoxItem Content="16:00"/>
                                                    <ComboBoxItem Content="17:00"/>
                                                    <ComboBoxItem Content="18:00"/>
                                                    <ComboBoxItem Content="19:00"/>
                                                    <ComboBoxItem Content="20:00"/>
                                                    <ComboBoxItem Content="21:00"/>
                                                    <ComboBoxItem Content="22:00"/>
                                                    <ComboBoxItem Content="23:00"/>
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Row 2: Pelabuhan Tujuan, Jenis Kendaraan, Penumpang -->
                            <Grid Margin="0,0,0,25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                    <ColumnDefinition Width="1.2*" MinWidth="300"/>
                                </Grid.ColumnDefinitions>

                                <!-- Pelabuhan Tujuan -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Pelabuhan Tujuan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconlokasi.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanTujuan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Tujuan"/>
                                                <ComboBoxItem Content="A" />
                                                <ComboBoxItem Content="B" />
                                                <ComboBoxItem Content="C" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Jenis Kendaraan -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Jenis Kendaraan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbJenisKendaraan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Jenis Kendaraan"/>
                                                <ComboBoxItem Content="Pejalan kaki tanpa kendaraan"/>
                                                <ComboBoxItem Content="Sepeda"/>
                                                <ComboBoxItem Content="Sepeda motor &lt;500cc dan gerobak dorong"/>
                                                <ComboBoxItem Content="Sepeda motor besar &gt;500cc dan kendaraan roda tiga"/>
                                                <ComboBoxItem Content="Mobil jeep, sedan, minibus"/>
                                                <ComboBoxItem Content="Mobil barang bak muatan terbuka/tertutup, mobil kabin ganda"/>
                                                <ComboBoxItem Content="Mobil bus penumpang (5-7 meter)"/>
                                                <ComboBoxItem Content="Mobil barang (truk/tangki) ukuran sedang (5-7 meter)"/>
                                                <ComboBoxItem Content="Mobil bus penumpang (7-10 meter)"/>
                                                <ComboBoxItem Content="Mobil barang (truk/tangki) sedang (7-10 meter)"/>
                                                <ComboBoxItem Content="Mobil tronton, tangki, penarik + gandengan (10-12 meter)"/>
                                                <ComboBoxItem Content="Mobil tronton, tangki, alat berat (12-16 meter)"/>
                                                <ComboBoxItem Content="Mobil tronton, tangki, alat berat (&gt;16 meter)"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Penumpang -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Penumpang" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPenumpang"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Penumpang"/>
                                                <ComboBoxItem Content="1 Penumpang"/>
                                                <ComboBoxItem Content="2 Penumpang"/>
                                                <ComboBoxItem Content="3 Penumpang"/>
                                                <ComboBoxItem Content="4 Penumpang"/>
                                                <ComboBoxItem Content="5+ Penumpang"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Search Button -->
                            <Button x:Name="btnCariJadwal"
                                   Content="Cari Jadwal" 
                                   Background="#2563EB"
                                   Foreground="White"
                                   Height="50"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Stretch"
                                   Click="BtnCariJadwal_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="25">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Navbar Component (Pre-Login) - LAYER PALING ATAS -->
        <components:NavbarPreLogin Grid.Row="0" 
                                   x:Name="navbarPreLogin"
                                   Visibility="Visible"
                                   Panel.ZIndex="999" Loaded="navbarPreLogin_Loaded"/>

        <!-- Navbar Component (Post-Login) - LAYER PALING ATAS -->
        <components:NavbarPostLogin Grid.Row="0" 
                                    x:Name="navbarPostLogin"
                                    Visibility="Collapsed"
                                    Panel.ZIndex="999"/>
    </Grid>
</Window>