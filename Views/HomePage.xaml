                                                                        <Run Text="Truk Tronton (&gt;16 meter)" Foreground="Black"/>
                                                                        <Run Text=" (Golongan IX)" Foreground="#00B4B5"/>
                                                                        <Run Text=" - Maks. 3 penumpang" Foreground="Black"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="Panjang kendaraan lebih dari 16 meter (mobil barang, truk tronton, tangki, kereta penarik dengan gandengan, kendaraan alat berat)." FontSize="11" Foreground="#64748B" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Button>
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Penumpang - FIXED WIDTH with +/- buttons -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Penumpang" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border x:Name="borderPenumpangContainer"
                                           Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="350"
                                           Height="48"
                                           HorizontalAlignment="Left"
                                           Panel.ZIndex="1000"
                                           ClipToBounds="False">
                                        <Grid ClipToBounds="False">
                                            <!-- Button untuk toggle popup dengan icon + text -->
                                            <Button x:Name="btnPenumpang"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   Click="BtnPenumpang_Click"
                                                   Padding="0"
                                                   HorizontalAlignment="Left"
                                                   HorizontalContentAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   Width="168"
                                                   Height="35">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- Icon -->
                                                    <Image Source="/Views/Assets/Icons/iconoranggg.png"
                                                           Width="16"
                                                           Height="16"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>

                                                    <!-- Text Display -->
                                                    <TextBlock x:Name="txtPenumpangDisplay"
                                                              FontSize="12"
                                                              FontFamily="Plus Jakarta Sans"
                                                              FontWeight="Medium"
                                                              VerticalAlignment="Center"
                                                              Foreground="#666666"><Run Text="1"/><Run Text=" "/><Run Text=" "/><Run Text=" "/><Run Text="Penumpang"/></TextBlock>
                                                </StackPanel>
                                            </Button>

                                            <!-- Hidden TextBox for value -->
                                            <TextBox x:Name="txtPenumpang"
                                                    Text="1"
                                                    Visibility="Collapsed"/>

                                            <!-- Popup untuk +/- dan input -->
                                            <Popup x:Name="popupPenumpangHome"
                                                  PlacementTarget="{Binding ElementName=btnPenumpang}"
                                                  Placement="Bottom"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False"
                                                  Closed="PopupPenumpangHome_Closed">
                                                <Border Background="White"
                                                       BorderBrush="#00B4B5"
                                                       BorderThickness="2"
                                                       CornerRadius="8"
                                                       Padding="15"
                                                       Width="180">

                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" 
                                                            Direction="270" 
                                                            ShadowDepth="2" 
                                                            BlurRadius="8" 
                                                            Opacity="0.15"/>
                                                    </Border.Effect>

                                                    <StackPanel>
                                                        <TextBlock Text="Jumlah Penumpang"
                                                                  FontSize="12"
                                                                  FontWeight="Medium"
                                                                  Foreground="#042769"
                                                                  Margin="0,0,0,10"/>

                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Button Minus -->
                                                            <Button x:Name="btnPopupMinusPenumpangHome"
                                                                   Grid.Column="0"
                                                                   Width="28"
                                                                   Height="28"
                                                                   Background="#F1F5F9"
                                                                   BorderThickness="0"
                                                                   Click="BtnMinusPenumpang_Click"
                                                                   Cursor="Hand"
                                                                   Margin="0,0,8,0">
                                                                <Button.Style>
                                                                    <Style TargetType="{x:Type Button}">
                                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6">
                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                        VerticalAlignment="Center"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsEnabled" Value="False">
                                                                                <Setter Property="Opacity" Value="0.5"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <TextBlock Text="-" 
                                                                          FontSize="16" 
                                                                          FontWeight="Bold"
                                                                          Foreground="#042769"/>
                                                            </Button>

                                                            <!-- TextBox untuk input manual -->
                                                            <TextBox x:Name="txtPopupPenumpangHome"
                                                                    Grid.Column="1"
                                                                    Text="1"
                                                                    FontSize="15"
                                                                    FontWeight="SemiBold"
                                                                    TextAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    Foreground="#042769"
                                                                    BorderBrush="#CBD5E1"
                                                                    BorderThickness="1"
                                                                    Height="28"
                                                                    MinWidth="50"
                                                                    MaxLength="3"
                                                                    Margin="0"
                                                                    Padding="5,0"
                                                                    PreviewTextInput="TxtPopupPenumpangHome_PreviewTextInput"
                                                                    TextChanged="TxtPopupPenumpangHome_TextChanged">
                                                                <TextBox.Style>
                                                                    <Style TargetType="{x:Type TextBox}">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                                           CornerRadius="6">
                                                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                                                    Margin="5,0"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </TextBox.Style>
                                                            </TextBox>

                                                            <!-- Button Plus -->
                                                            <Button x:Name="btnPopupPlusPenumpangHome"
                                                                   Grid.Column="2"
                                                                   Width="28"
                                                                   Height="28"
                                                                   Background="#F1F5F9"
                                                                   BorderThickness="0"
                                                                   Click="BtnPlusPenumpang_Click"
                                                                   Cursor="Hand"
                                                                   Margin="8,0,0,0">
                                                                <Button.Style>
                                                                    <Style TargetType="{x:Type Button}">
                                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6">
                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                        VerticalAlignment="Center"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsEnabled" Value="False">
                                                                                <Setter Property="Opacity" Value="0.5"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <TextBlock Text="+" 
                                                                          FontSize="16" 
                                                                          FontWeight="Bold"
                                                                          Foreground="#042769"/>
                                                            </Button>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Search Button -->
                            <Button x:Name="btnCariJadwal"
                                   Content="Cari Jadwal" 
                                   Background="#2563EB"
                                   Foreground="White"
                                   Height="50"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Stretch"
                                   Click="BtnCariJadwal_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="25">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            <!-- Navbar Component (Pre-Login) - Overlay on Carousel -->
            <components:NavbarPreLogin Grid.ColumnSpan="3"
                                       x:Name="navbarPreLogin"
                                       Visibility="Visible"
                                       VerticalAlignment="Top"
                                       Panel.ZIndex="999" 
                                       Loaded="navbarPreLogin_Loaded"/>

            <!-- Navbar Component (Post-Login) - Overlay on Carousel -->
            <components:NavbarPostLogin Grid.ColumnSpan="3"
                                        x:Name="navbarPostLogin"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Top"
                                        Panel.ZIndex="999"/>
        </Grid>
        
        <!-- Date Display - Floating Card at Bottom Left -->
        <Border Background="White"
                CornerRadius="12"
                Padding="20,15"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20,0,0,20"
                Panel.ZIndex="1000"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="txtCurrentDate" 
                              Text="Senin, 11 November 2025"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#011C4B"
                              FontFamily="Plus Jakarta Sans"
                              VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtCurrentTime" 
                              Text="00:00:00 WIB"
                              FontSize="13"
                              Foreground="#6C757D"
                              FontFamily="Plus Jakarta Sans"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Help Button - Floating at Bottom Right -->
        <Border x:Name="helpButton"
                Grid.Row="1" 
                Background="White"
                CornerRadius="30"
                Padding="18,12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Panel.ZIndex="1000"
                Effect="{StaticResource CardShadow}"
                Cursor="Hand"
                MouseLeftButtonDown="HelpButton_Click"
                MouseEnter="HelpButton_MouseEnter"
                MouseLeave="HelpButton_MouseLeave">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Views/Assets/Icons/iconHelp.png" 
                       Width="24" 
                       Height="24" 
                       Margin="0,0,10,0" 
                       VerticalAlignment="Center"/>
                <TextBlock x:Name="txtHelp"
                          Text="Help" 
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="#00658D"
                          FontFamily="Plus Jakarta Sans"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>