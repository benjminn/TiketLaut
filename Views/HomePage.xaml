<Window x:Class="TiketLaut.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Tiket Laut - Home" 
        MinHeight="800" 
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F3F3F3"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <!-- ✅ DROP SHADOW untuk Card -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="20" 
                         ShadowDepth="5" 
                         Opacity="0.2" 
                         Color="#000000"/>
        
        <!-- Easing Function -->
        <QuadraticEase x:Key="EaseOut" EasingMode="EaseOut"/>
        
        <!-- Storyboard untuk Slide Animation -->
        <Storyboard x:Key="SlideOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="currentImage" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           To="-1920" 
                           Duration="0:0:0.8"
                           EasingFunction="{StaticResource EaseOut}"/>
        </Storyboard>
        
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation Storyboard.TargetName="nextImage" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="1920"
                           To="0" 
                           Duration="0:0:0.8"
                           EasingFunction="{StaticResource EaseOut}"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid Panel.ZIndex="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="707*"/>
                <ColumnDefinition Width="489*"/>
                <ColumnDefinition Width="217*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Image Carousel dengan Sliding -->
            <Canvas Grid.ColumnSpan="3" 
                    x:Name="carouselCanvas"
                    ClipToBounds="True"
                    VerticalAlignment="Top"
                    Height="550"
                    Panel.ZIndex="0">
                
                <Image x:Name="currentImage"
                       Source="/Views/Assets/Images/bekgron.png" 
                       Stretch="UniformToFill" 
                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                       Height="550"
                       Panel.ZIndex="0">
                    <Image.RenderTransform>
                        <TranslateTransform X="0" Y="0"/>
                    </Image.RenderTransform>
                </Image>
                
                <Image x:Name="nextImage"
                       Stretch="UniformToFill"
                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                       Height="550"
                       Panel.ZIndex="1">
                    <Image.RenderTransform>
                        <TranslateTransform X="1920" Y="0"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>

            <!-- Overlay -->
            <Rectangle Fill="#011C4B" 
                       Opacity="0.15"
                       VerticalAlignment="Top"
                       Height="550"
                       Grid.ColumnSpan="3"
                       Panel.ZIndex="1"/>

            <!-- ScrollViewer -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="0" 
                         MaxHeight="710"
                         VerticalAlignment="Center" 
                         ClipToBounds="False"
                         Grid.ColumnSpan="3"
                         Panel.ZIndex="2">
                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           MaxWidth="1000"
                           MinWidth="800"
                           Margin="40">

                    <!-- Title -->
                    <TextBlock Text="Tiket Laut" 
                              FontSize="56" 
                              FontFamily="Plus Jakarta Sans"
                              FontWeight="Bold" 
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,15"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Jelajahi perjalanan laut dengan mudah dan nyaman." 
                              FontSize="16" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="Pesan tiket kapal ferry ke berbagai pelabuhan tujuan hanya dalam beberapa klik!" 
                              FontSize="14" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- ✅ FORM CARD - LAYOUT FIXED SEMUA FIELD -->
                    <Border Background="White" 
                           CornerRadius="20" 
                           Padding="40" 
                           Effect="{StaticResource CardShadow}"
                           ClipToBounds="False">
                        <StackPanel ClipToBounds="False">
                            <!-- Row 1: Pelabuhan Asal, Kelas Layanan, Jadwal Masuk -->
                            <Grid Margin="0,0,0,25" ClipToBounds="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Pelabuhan Asal - POPUP VERSION -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0" ClipToBounds="False">
                                    <TextBlock Text="Pelabuhan Asal" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border x:Name="borderPelabuhanAsalContainer"
                                           Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left"
                                           Height="49">
                                        <Grid>
                                            <!-- Button untuk toggle popup -->
                                            <Button x:Name="btnPelabuhanAsal"
                                                   Click="BtnPelabuhanAsal_Click"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   HorizontalAlignment="Left"
                                                   HorizontalContentAlignment="Left"
                                                   Padding="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Icon -->
                                                    <Image Source="/Views/Assets/Icons/iconasaltujuan.png"
                                                           Width="18"
                                                           Height="18"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>

                                                    <!-- Text Display -->
                                                    <TextBlock x:Name="txtPelabuhanAsalDisplay"
                                                              FontSize="12"
                                                              FontFamily="Plus Jakarta Sans"
                                                              Foreground="#666666"
                                                              TextTrimming="CharacterEllipsis"
                                                              VerticalAlignment="Center"
                                                              Width="195">
                                                        <Run Text="Pilih Pelabuhan Asal" Foreground="#666666"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Button>

                                            <!-- Hidden TextBox untuk menyimpan ID -->
                                            <TextBox x:Name="txtPelabuhanAsal"
                                                    Visibility="Collapsed"
                                                    Text="0"/>

                                            <!-- Popup untuk pilihan pelabuhan -->
                                            <Popup x:Name="popupPelabuhanAsal"
                                                  PlacementTarget="{Binding ElementName=borderPelabuhanAsalContainer}"
                                                  Placement="Bottom"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False">
                                                <Border Background="White"
                                                       BorderBrush="#00B4B5"
                                                       BorderThickness="2"
                                                       CornerRadius="8"
                                                       Padding="10"
                                                       Width="420"
                                                       MaxHeight="300">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" 
                                                                         Direction="270" 
                                                                         ShadowDepth="2" 
                                                                         BlurRadius="8" 
                                                                         Opacity="0.15"/>
                                                    </Border.Effect>

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel x:Name="spPelabuhanAsalList">
                                                            <TextBlock Text="Pilih Pelabuhan Asal"
                                                                      FontSize="14"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="#042769"
                                                                      Margin="0,5,0,15"/>
                                                            <!-- Items will be populated from code-behind -->
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Kelas Layanan - POPUP VERSION -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0" ClipToBounds="False">
                                    <TextBlock Text="Kelas Layanan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border x:Name="borderKelasLayananContainer"
                                           Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left"
                                           Height="49">
                                        <Grid>
                                            <!-- Button untuk toggle popup -->
                                            <Button x:Name="btnKelasLayanan"
                                                   Click="BtnKelasLayanan_Click"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   HorizontalAlignment="Left"
                                                   HorizontalContentAlignment="Left"
                                                   Padding="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Icon -->
                                                    <Image Source="/Views/Assets/Icons/iconkapall.png"
                                                           Width="18"
                                                           Height="18"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>

                                                    <!-- Text Display -->
                                                    <TextBlock x:Name="txtKelasLayananDisplay"
                                                              FontSize="12"
                                                              FontFamily="Plus Jakarta Sans"
                                                              Foreground="#666666"
                                                              TextTrimming="CharacterEllipsis"
                                                              VerticalAlignment="Center">
                                                        <Run Text="Pilih Kelas Layanan" Foreground="#666666"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Button>

                                            <!-- Hidden TextBox untuk menyimpan value -->
                                            <TextBox x:Name="txtKelasLayanan"
                                                    Visibility="Collapsed"
                                                    Text=""/>

                                            <!-- Popup untuk pilihan kelas -->
                                            <Popup x:Name="popupKelasLayanan"
                                                  PlacementTarget="{Binding ElementName=borderKelasLayananContainer}"
                                                  Placement="Bottom"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False">
                                                <Border Background="White"
                                                       BorderBrush="#00B4B5"
                                                       BorderThickness="2"
                                                       CornerRadius="8"
                                                       Padding="10"
                                                       Width="280">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" 
                                                                         Direction="270" 
                                                                         ShadowDepth="2" 
                                                                         BlurRadius="8" 
                                                                         Opacity="0.15"/>
                                                    </Border.Effect>

                                                    <StackPanel>
                                                        <TextBlock Text="Pilih Kelas Layanan"
                                                                  FontSize="14"
                                                                  FontWeight="SemiBold"
                                                                  Foreground="#042769"
                                                                  Margin="0,5,0,15"/>

                                                        <!-- Reguler -->
                                                        <Button Click="BtnKelasOption_Click"
                                                               Tag="Reguler"
                                                               BorderThickness="0"
                                                               Cursor="Hand"
                                                               Padding="10,8"
                                                               Margin="0,2"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Left">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                       CornerRadius="6"
                                                                                       Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#74c0f3ff"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                            <StackPanel>
                                                                <TextBlock Text="Reguler" FontSize="13" FontWeight="SemiBold" Foreground="Black"/>
                                                                <TextBlock Text="Kelas standar dengan fasilitas normal." FontSize="11" Foreground="#64748B" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                        </Button>

                                                        <!-- Ekspress (sesuai database typo) -->
                                                        <Button Click="BtnKelasOption_Click"
                                                               Tag="Ekspress"
                                                               BorderThickness="0"
                                                               Cursor="Hand"
                                                               Padding="10,8"
                                                               Margin="0,2"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Left">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                       CornerRadius="6"
                                                                                       Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#74c0f3ff"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                            <StackPanel>
                                                                <TextBlock Text="Ekspress" FontSize="13" FontWeight="SemiBold" Foreground="Black"/>
                                                                <TextBlock Text="Kelas cepat dengan waktu tempuh lebih singkat." FontSize="11" Foreground="#64748B" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Jadwal Masuk - FIXED WIDTH -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Jadwal Masuk" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Grid Width="350" HorizontalAlignment="Left" Height="49">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="165"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="165"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tanggal -->
                                        <Border x:Name="borderTanggalContainer"
                                               Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="15,12"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="0"
                                               Panel.ZIndex="1000"
                                               ClipToBounds="False">
                                            <Grid x:Name="gridTanggalContainer" ClipToBounds="False">
                                                <!-- Button untuk toggle calendar dengan icon + text display -->
                                                <Button x:Name="btnTanggal"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Cursor="Hand"
                                                       Click="BtnTanggal_Click"
                                                       Padding="0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Icon Tanggal -->
                                                        <Image Source="/Views/Assets/Icons/icontanggall.png"
                                                               Width="16"
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>

                                                        <!-- Text Display -->
                                                        <TextBlock x:Name="txtTanggalDisplay"
                                                                  Text="Pilih Tanggal"
                                                                  FontSize="12"
                                                                  FontFamily="Plus Jakarta Sans"
                                                                  FontWeight="Medium"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="#666666"/>
                                                    </StackPanel>
                                                </Button>

                                                <!-- DatePicker dengan template kosong dan Popup custom positioning -->
                                                <DatePicker x:Name="dpTanggal"
                                                           Background="Transparent"
                                                           BorderThickness="0"
                                                           Visibility="Collapsed"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           Width="0"
                                                           Height="0"
                                                           DisplayDateStart="{x:Static System:DateTime.Today}"
                                                           SelectedDateChanged="DpTanggal_SelectedDateChanged"
                                                           CalendarOpened="DpTanggal_CalendarOpened"
                                                           CalendarClosed="DpTanggal_CalendarClosed">
                                                    <DatePicker.Template>
                                                        <ControlTemplate TargetType="DatePicker">
                                                            <!-- Template kosong, hanya untuk calendar popup -->
                                                            <Grid Width="0" Height="0">
                                                                <DatePickerTextBox x:Name="PART_TextBox" 
                                                                                 Visibility="Collapsed"/>
                                                                <Button x:Name="PART_Button" 
                                                                       Visibility="Collapsed"/>
                                                                <Popup x:Name="PART_Popup" 
                                                                      PlacementTarget="{Binding ElementName=borderTanggalContainer}"
                                                                      Placement="Bottom"
                                                                      AllowsTransparency="True"
                                                                      StaysOpen="False"/>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </DatePicker.Template>
                                                </DatePicker>
                                            </Grid>
                                        </Border>

                                        <!-- Separator -->
                                        <Rectangle Fill="#CCCCCC" 
                                                  Width="2" 
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Center"/>

                                        <!-- Jam - POPUP VERSION -->
                                        <Border x:Name="borderJamContainer"
                                               Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="15,12"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="2"
                                               Height="49">
                                            <Grid>
                                                <!-- Button untuk toggle popup -->
                                                <Button x:Name="btnJam"
                                                       Click="BtnJam_Click"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Cursor="Hand"
                                                       HorizontalAlignment="Left"
                                                       HorizontalContentAlignment="Left"
                                                       Padding="0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Icon -->
                                                        <Image Source="/Views/Assets/Icons/icontanggall.png"
                                                               Width="16"
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>

                                                        <!-- Text Display -->
                                                        <TextBlock x:Name="txtJamDisplay"
                                                                  FontSize="12"
                                                                  FontFamily="Plus Jakarta Sans"
                                                                  Foreground="#666666"
                                                                  VerticalAlignment="Center">
                                                            <Run Text="Pilih Jam" Foreground="#666666"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Button>

                                                <!-- Hidden TextBox untuk menyimpan jam -->
                                                <TextBox x:Name="txtJam"
                                                        Visibility="Collapsed"
                                                        Text=""/>

                                                <!-- Popup untuk pilihan jam -->
                                                <Popup x:Name="popupJam"
                                                      PlacementTarget="{Binding ElementName=borderJamContainer}"
                                                      Placement="Bottom"
                                                      AllowsTransparency="True"
                                                      StaysOpen="False">
                                                    <Border Background="White"
                                                           BorderBrush="#00B4B5"
                                                           BorderThickness="2"
                                                           CornerRadius="8"
                                                           Padding="10"
                                                           Width="200"
                                                           MaxHeight="300">
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="Black" 
                                                                             Direction="270" 
                                                                             ShadowDepth="2" 
                                                                             BlurRadius="8" 
                                                                             Opacity="0.15"/>
                                                        </Border.Effect>

                                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                            <StackPanel x:Name="spJamList">
                                                                <TextBlock Text="Jam Keberangkatan"
                                                                          FontSize="14"
                                                                          FontWeight="SemiBold"
                                                                          Foreground="#042769"
                                                                          Margin="0,5,0,15"/>
                                                                <!-- Items will be populated from code-behind -->
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Row 1.5: Tombol Bolak-Balik -->
                            <Grid Margin="0,-10,0,-10" Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Tombol Bolak-Balik -->
                                <Button Grid.Column="0"
                                        x:Name="btnSwapPelabuhan"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Padding="0"
                                        Width="40"
                                        Height="40"
                                        Click="BtnSwapPelabuhan_Click"
                                        ToolTip="Tukar Pelabuhan Asal dan Tujuan" Margin="221,0,0,0">
                                    <Image Source="pack://application:,,,/Views/Assets/Icons/iconbolakbalik.png"
                                           Width="24"
                                           Height="24"
                                           Stretch="Uniform"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Image.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="180.479"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Image.RenderTransform>
                                    </Image>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="20"
                                                                BorderThickness="0">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F0F0F0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- Row 2: Pelabuhan Tujuan, Jenis Kendaraan, Penumpang -->
                            <Grid Margin="0,0,0,25" ClipToBounds="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Pelabuhan Tujuan - POPUP VERSION -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0" ClipToBounds="False">
                                    <TextBlock Text="Pelabuhan Tujuan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border x:Name="borderPelabuhanTujuanContainer"
                                           Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left"
                                           Height="49">
                                        <Grid>
                                            <!-- Button untuk toggle popup -->
                                            <Button x:Name="btnPelabuhanTujuan"
                                                   Click="BtnPelabuhanTujuan_Click"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   HorizontalAlignment="Left"
                                                   HorizontalContentAlignment="Left"
                                                   Padding="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Icon -->
                                                    <Image Source="/Views/Assets/Icons/iconasaltujuan.png"
                                                           Width="18"
                                                           Height="18"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>

                                                    <!-- Text Display -->
                                                    <TextBlock x:Name="txtPelabuhanTujuanDisplay"
                                                              FontSize="12"
                                                              FontFamily="Plus Jakarta Sans"
                                                              Foreground="#666666"
                                                              TextTrimming="CharacterEllipsis"
                                                              VerticalAlignment="Center"
                                                              Width="195">
                                                        <Run Text="Pilih Pelabuhan Tujuan" Foreground="#666666"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Button>

                                            <!-- Hidden TextBox untuk menyimpan ID -->
                                            <TextBox x:Name="txtPelabuhanTujuan"
                                                    Visibility="Collapsed"
                                                    Text="0"/>

                                            <!-- Popup untuk pilihan pelabuhan -->
                                            <Popup x:Name="popupPelabuhanTujuan"
                                                  PlacementTarget="{Binding ElementName=borderPelabuhanTujuanContainer}"
                                                  Placement="Bottom"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False">
                                                <Border Background="White"
                                                       BorderBrush="#00B4B5"
                                                       BorderThickness="2"
                                                       CornerRadius="8"
                                                       Padding="10"
                                                       Width="420"
                                                       MaxHeight="300">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" 
                                                                         Direction="270" 
                                                                         ShadowDepth="2" 
                                                                         BlurRadius="8" 
                                                                         Opacity="0.15"/>
                                                    </Border.Effect>

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel x:Name="spPelabuhanTujuanList">
                                                            <TextBlock Text="Pilih Pelabuhan Tujuan"
