<Window x:Class="TiketLaut.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tiket Laut - Home" 
        Height="900" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White"
        FontFamily="Plus Jakarta Sans">

    <Grid>
        <!-- Background Image -->
        <Image Source="/Views/Assets/Images/bekgron.png" 
               Stretch="UniformToFill" 
               Opacity="0.7" Margin="0,0,0,282"/>

        <!-- Main Content Container -->
        <DockPanel>
            <!-- Top Bar dengan User Info & Logout -->
            <Border DockPanel.Dock="Top" 
                   Background="White" 
                   BorderBrush="#E0E0E0"
                   BorderThickness="0,0,0,1"
                   Padding="30,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo / Branding -->
                    <TextBlock Grid.Column="0"
                              Text="🚢 Tiket Laut"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#011C4B"
                              VerticalAlignment="Center"/>

                    <!-- User Info & Logout -->
                    <Grid Grid.Column="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                  x:Name="txtUserInfo"
                                  Text="👤 Admin"
                                  FontSize="14"
                                  Foreground="#333"
                                  VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                               x:Name="btnLogout"
                               Content="Logout"
                               Background="#2563EB"
                               Foreground="White"
                               Padding="15,8"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Click="BtnLogout_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid DockPanel.Dock="Right">
                <!-- Overlay untuk memperjelas teks -->
                <Rectangle Fill="#011C4B" Opacity="0.2" Margin="0,0,0,285"/>

                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Width="1000">

                    <!-- Title -->
                    <TextBlock Text="Tiket Laut" 
                              FontSize="72" 
                              FontFamily="Plus Jakarta Sans"
                              FontWeight="Bold" 
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Jelajahi perjalanan laut dengan mudah dan nyaman." 
                              FontSize="18" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="Pesan tiket kapal ferry ke berbagai pelabuhan tujuan hanya dalam beberapa klik!" 
                              FontSize="16" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,40"/>
                    <Border Background="White" 
                           CornerRadius="20" 
                           Padding="40" 
                           Effect="{StaticResource CardShadow}">

                        <StackPanel>
                            <!-- Row 1: Pelabuhan Asal, Kelas Layanan, Jadwal Masuk -->
                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width="1.6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,182,0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Pelabuhan Asal" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999" Width="246">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="175*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="9*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Images/iconlokasi.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanAsal"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0" Grid.ColumnSpan="3">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Asal" />
                                                <ComboBoxItem Content="A" />
                                                <ComboBoxItem Content="B" />
                                                <ComboBoxItem Content="C" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="56,0,416,0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Kelas Layanan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="86*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Images/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbKelasLayanan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0" Grid.ColumnSpan="2">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Kelas" />
                                                <ComboBoxItem Content="A" />
                                                <ComboBoxItem Content="B" />
                                                <ComboBoxItem Content="C" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="100,0,0,0">
                                    <TextBlock Text="Jadwal Masuk" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.4*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="0.4*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tanggal -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="12,10"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="0">
                                            <DatePicker x:Name="dpTanggal"
                                                       Background="Transparent" 
                                                       BorderThickness="0"
                                                       FontSize="11"
                                                       FontFamily="Plus Jakarta Sans"
                                                       Foreground="#666666"
                                                       SelectedDateFormat="Short"/> 
                                        </Border>

                                        <!-- Separator -->
                                        <Rectangle Fill="#CCCCCC" Width="2" Margin="8,0" Grid.Column="1"/>

                                        <!-- Jam -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="12,10"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="6"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Column="0"
                                                       Source="/Views/Assets/Images/icontanggal.png"
                                                       Width="16"
                                                       Height="16"
                                                       VerticalAlignment="Center"/>

                                                <ComboBox x:Name="cmbJam"
                                                         Grid.Column="2"
                                                         Background="Transparent" 
                                                         BorderThickness="0"
                                                         FontSize="11"
                                                         FontFamily="Plus Jakarta Sans"
                                                         Foreground="#666666"
                                                         SelectedIndex="0">
                                                    <ComboBoxItem IsSelected="True" Content="Pilih Jam"/>
                                                    <ComboBoxItem Content="00:00"/>
                                                    <ComboBoxItem Content="01:00"/>
                                                    <ComboBoxItem Content="02:00"/>
                                                    <ComboBoxItem Content="03:00"/>
                                                    <ComboBoxItem Content="04:00"/>
                                                    <ComboBoxItem Content="05:00"/>
                                                    <ComboBoxItem Content="06:00"/>
                                                    <ComboBoxItem Content="07:00"/>
                                                    <ComboBoxItem Content="08:00"/>
                                                    <ComboBoxItem Content="09:00"/>
                                                    <ComboBoxItem Content="10:00"/>
                                                    <ComboBoxItem Content="11:00"/>
                                                    <ComboBoxItem Content="12:00"/>
                                                    <ComboBoxItem Content="13:00"/>
                                                    <ComboBoxItem Content="14:00"/>
                                                    <ComboBoxItem Content="15:00"/>
                                                    <ComboBoxItem Content="16:00"/>
                                                    <ComboBoxItem Content="17:00"/>
                                                    <ComboBoxItem Content="18:00"/>
                                                    <ComboBoxItem Content="19:00"/>
                                                    <ComboBoxItem Content="20:00"/>
                                                    <ComboBoxItem Content="21:00"/>
                                                    <ComboBoxItem Content="22:00"/>
                                                    <ComboBoxItem Content="23:00"/>
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width="1.6*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Pelabuhan Tujuan -->
                                <StackPanel Grid.Column="0" Margin="0,0,182,0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Pelabuhan Tujuan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Images/iconlokasi.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanTujuan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Tujuan"/>
                                                <ComboBoxItem Content="A" />
                                                <ComboBoxItem Content="B" />
                                                <ComboBoxItem Content="C" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Jenis Kendaraan -->
                                <StackPanel Grid.Column="1" Margin="56,0,416,0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Jenis Kendaraan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="57*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Images/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbJenisKendaraan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0" Grid.ColumnSpan="2">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Jenis Kendaraan"/>
                                                <ComboBoxItem Content="Pejalan kaki tanpa kendaraan"/>
                                                <ComboBoxItem Content="Sepeda"/>
                                                <ComboBoxItem Content="Sepeda motor &lt;500cc dan gerobak dorong"/>
                                                <ComboBoxItem Content="Sepeda motor besar &gt;500cc dan kendaraan roda tiga"/>
                                                <ComboBoxItem Content="Mobil jeep, sedan, minibus"/>
                                                <ComboBoxItem Content="Mobil barang bak muatan terbuka/tertutup, mobil kabin ganda"/>
                                                <ComboBoxItem Content="Mobil bus penumpang (5-7 meter)"/>
                                                <ComboBoxItem Content="Mobil barang (truk/tangki) ukuran sedang (5-7 meter)"/>
                                                <ComboBoxItem Content="Mobil bus penumpang (7-10 meter)"/>
                                                <ComboBoxItem Content="Mobil barang (truk/tangki) sedang (7-10 meter)"/>
                                                <ComboBoxItem Content="Mobil tronton, tangki, penarik + gandengan (10-12 meter)"/>
                                                <ComboBoxItem Content="Mobil tronton, tangki, alat berat (12-16 meter)"/>
                                                <ComboBoxItem Content="Mobil tronton, tangki, alat berat (&gt;16 meter)"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Penumpang -->
                                <StackPanel Grid.Column="2" Margin="100,0,0,0">
                                    <TextBlock Text="Penumpang" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="47*"/>
                                                <ColumnDefinition Width="119*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Images/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPenumpang"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0" Grid.ColumnSpan="2">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Penumpang"/>
                                                <ComboBoxItem Content="1 Penumpang"/>
                                                <ComboBoxItem Content="2 Penumpang"/>
                                                <ComboBoxItem Content="3 Penumpang"/>
                                                <ComboBoxItem Content="4 Penumpang"/>
                                                <ComboBoxItem Content="5+ Penumpang"/>
                                            </ComboBox> 
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Search Button -->
                            <Button x:Name="btnCariJadwal"
                                   Content="Cari Jadwal" 
                                   Background="#2563EB"
                                   Foreground="White"
                                   Height="55"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,10,0,0"
                                   Click="BtnCariJadwal_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="25">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Search Card -->
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>

