<Window x:Class="TiketLaut.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Tiket Laut - Home" 
        MinHeight="800" 
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <!-- ✅ DROP SHADOW untuk Card -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="20" 
                         ShadowDepth="5" 
                         Opacity="0.2" 
                         Color="#000000"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Panel.ZIndex="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="707*"/>
                <ColumnDefinition Width="489*"/>
                <ColumnDefinition Width="217*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Image -->
            <Image Source="/Views/Assets/Images/bekgron.png" 
                   Stretch="UniformToFill" 
                   Opacity="0.7" 
                   VerticalAlignment="Top"
                   MinHeight="450"
                   MaxHeight="550"
                   Grid.ColumnSpan="3"/>

            <!-- Overlay -->
            <Rectangle Fill="#011C4B" 
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       MinHeight="450"
                       MaxHeight="550"
                       Grid.ColumnSpan="3" Height="520" Margin="0,-70,0,0"/>

            <!-- ScrollViewer -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="0" 
                         MaxHeight="710"
                         VerticalAlignment="Center" 
                         ClipToBounds="False"
                         Grid.ColumnSpan="3">
                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           MaxWidth="1000"
                           MinWidth="800"
                           Margin="40">

                    <!-- Title -->
                    <TextBlock Text="Tiket Laut" 
                              FontSize="56" 
                              FontFamily="Plus Jakarta Sans"
                              FontWeight="Bold" 
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,15"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Jelajahi perjalanan laut dengan mudah dan nyaman." 
                              FontSize="16" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="Pesan tiket kapal ferry ke berbagai pelabuhan tujuan hanya dalam beberapa klik!" 
                              FontSize="14" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- ✅ FORM CARD - LAYOUT FIXED SEMUA FIELD -->
                    <Border Background="White" 
                           CornerRadius="20" 
                           Padding="40" 
                           Effect="{StaticResource CardShadow}"
                           ClipToBounds="False">
                        <StackPanel ClipToBounds="False">
                            <!-- Row 1: Pelabuhan Asal, Kelas Layanan, Jadwal Masuk -->
                            <Grid Margin="0,0,0,25" ClipToBounds="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Pelabuhan Asal - FIXED WIDTH -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Pelabuhan Asal" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconasaltujuan.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanAsal"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     MaxDropDownHeight="250"
                                                     SelectionChanged="CmbPelabuhanAsal_SelectionChanged" HorizontalAlignment="Center" Width="209">
                                                <ComboBox.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                                    </Style>
                                                </ComboBox.Resources>
                                                <ComboBoxItem IsSelected="True" Content="Pilih Asal" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Kelas Layanan - FIXED WIDTH -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Kelas Layanan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconkapall.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbKelasLayanan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     SelectionChanged="CmbKelasLayanan_SelectionChanged" Margin="0,0,6,0">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Kelas" />
                                                <ComboBoxItem Content="Reguler"/>
                                                <ComboBoxItem Content="Express"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Jadwal Masuk - FIXED WIDTH -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Jadwal Masuk" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Grid Width="350" HorizontalAlignment="Left" Height="49">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="165"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="165"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tanggal -->
                                        <Border x:Name="borderTanggalContainer"
                                               Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="15,12"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="0"
                                               Panel.ZIndex="1000"
                                               ClipToBounds="False">
                                            <Grid x:Name="gridTanggalContainer" ClipToBounds="False">
                                                <!-- Button untuk toggle calendar dengan icon + text display -->
                                                <Button x:Name="btnTanggal"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Cursor="Hand"
                                                       Click="BtnTanggal_Click"
                                                       Padding="0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Icon Tanggal -->
                                                        <Image Source="/Views/Assets/Icons/icontanggall.png"
                                                               Width="16"
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>

                                                        <!-- Text Display -->
                                                        <TextBlock x:Name="txtTanggalDisplay"
                                                                  Text="Pilih Tanggal"
                                                                  FontSize="12"
                                                                  FontFamily="Plus Jakarta Sans"
                                                                  FontWeight="Medium"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="#666666"/>
                                                    </StackPanel>
                                                </Button>

                                                <!-- DatePicker dengan template kosong dan Popup custom positioning -->
                                                <DatePicker x:Name="dpTanggal"
                                                           Background="Transparent"
                                                           BorderThickness="0"
                                                           Visibility="Collapsed"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           Width="0"
                                                           Height="0"
                                                           SelectedDateChanged="DpTanggal_SelectedDateChanged"
                                                           CalendarOpened="DpTanggal_CalendarOpened"
                                                           CalendarClosed="DpTanggal_CalendarClosed">
                                                    <DatePicker.Template>
                                                        <ControlTemplate TargetType="DatePicker">
                                                            <!-- Template kosong, hanya untuk calendar popup -->
                                                            <Grid Width="0" Height="0">
                                                                <DatePickerTextBox x:Name="PART_TextBox" 
                                                                                 Visibility="Collapsed"/>
                                                                <Button x:Name="PART_Button" 
                                                                       Visibility="Collapsed"/>
                                                                <Popup x:Name="PART_Popup" 
                                                                      PlacementTarget="{Binding ElementName=borderTanggalContainer}"
                                                                      Placement="Bottom"
                                                                      AllowsTransparency="True"
                                                                      StaysOpen="False"/>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </DatePicker.Template>
                                                </DatePicker>
                                            </Grid>
                                        </Border>

                                        <!-- Separator -->
                                        <Rectangle Fill="#CCCCCC" 
                                                  Width="2" 
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Center"/>

                                        <!-- Jam -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="15,12"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="2">
                                            <Grid Width="143">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="6"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Column="0"
                                                       Source="/Views/Assets/Icons/icontanggall.png"
                                                       Width="16"
                                                       Height="16"
                                                       VerticalAlignment="Center"/>

                                                <ComboBox x:Name="cmbJam"
                                                         Grid.Column="2"
                                                         Background="Transparent" 
                                                         BorderThickness="0"
                                                         FontSize="11"
                                                         FontFamily="Plus Jakarta Sans"
                                                         Foreground="#666666"
                                                         SelectedIndex="0"
                                                         MaxDropDownHeight="250" Margin="2,0,10,0">
                                                    <ComboBoxItem IsSelected="True" Content="Pilih Jam"/>
                                                    <ComboBoxItem Content="00:00"/>
                                                    <ComboBoxItem Content="01:00"/>
                                                    <ComboBoxItem Content="02:00"/>
                                                    <ComboBoxItem Content="03:00"/>
                                                    <ComboBoxItem Content="04:00"/>
                                                    <ComboBoxItem Content="05:00"/>
                                                    <ComboBoxItem Content="06:00"/>
                                                    <ComboBoxItem Content="07:00"/>
                                                    <ComboBoxItem Content="08:00"/>
                                                    <ComboBoxItem Content="09:00"/>
                                                    <ComboBoxItem Content="10:00"/>
                                                    <ComboBoxItem Content="11:00"/>
                                                    <ComboBoxItem Content="12:00"/>
                                                    <ComboBoxItem Content="13:00"/>
                                                    <ComboBoxItem Content="14:00"/>
                                                    <ComboBoxItem Content="15:00"/>
                                                    <ComboBoxItem Content="16:00"/>
                                                    <ComboBoxItem Content="17:00"/>
                                                    <ComboBoxItem Content="18:00"/>
                                                    <ComboBoxItem Content="19:00"/>
                                                    <ComboBoxItem Content="20:00"/>
                                                    <ComboBoxItem Content="21:00"/>
                                                    <ComboBoxItem Content="22:00"/>
                                                    <ComboBoxItem Content="23:00"/>
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Row 1.5: Tombol Bolak-Balik -->
                            <Grid Margin="0,-10,0,-10" Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Tombol Bolak-Balik -->
                                <Button Grid.Column="0"
                                        x:Name="btnSwapPelabuhan"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Padding="0"
                                        Width="40"
                                        Height="40"
                                        Click="BtnSwapPelabuhan_Click"
                                        ToolTip="Tukar Pelabuhan Asal dan Tujuan" Margin="221,0,0,0">
                                    <Image Source="pack://application:,,,/Views/Assets/Icons/iconbolakbalik.png"
                                           Width="24"
                                           Height="24"
                                           Stretch="Uniform"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Image.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="180.479"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Image.RenderTransform>
                                    </Image>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="20"
                                                                BorderThickness="0">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F0F0F0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- Row 2: Pelabuhan Tujuan, Jenis Kendaraan, Penumpang -->
                            <Grid Margin="0,0,0,25" ClipToBounds="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Pelabuhan Tujuan - FIXED WIDTH -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Pelabuhan Tujuan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconasaltujuan.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanTujuan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     Width="209"
                                                     MaxDropDownHeight="250"
                                                     SelectionChanged="CmbPelabuhanTujuan_SelectionChanged">
                                                <ComboBox.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                                    </Style>
                                                </ComboBox.Resources>
                                                <ComboBoxItem IsSelected="True" Content="Pilih Tujuan"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Jenis Kendaraan - POPUP VERSION (Same as Schedule) -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0" ClipToBounds="False">
                                    <TextBlock Text="Jenis Kendaraan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border x:Name="borderVehicleContainer"
                                           Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left"
                                           Height="49">
                                        <Grid>
                                            <!-- Button untuk toggle popup -->
                                            <Button x:Name="btnVehicle"
                                                   Click="BtnVehicle_Click"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   HorizontalAlignment="Left"
                                                   HorizontalContentAlignment="Left"
                                                   Padding="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Icon -->
                                                    <Image Source="/Views/Assets/Icons/iconcar.png"
                                                           Width="18"
                                                           Height="18"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>

                                                    <!-- Text Display -->
                                                    <TextBlock x:Name="txtVehicleDisplay"
                                                              FontSize="12"
                                                              FontFamily="Plus Jakarta Sans"
                                                              Foreground="#666666"
                                                              TextTrimming="CharacterEllipsis"
                                                              VerticalAlignment="Center">
                                                        <Run Text="Pilih Jenis Kendaraan" Foreground="#666666"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Button>

                                            <!-- Hidden TextBox untuk menyimpan ID -->
                                            <TextBox x:Name="txtVehicle"
                                                    Visibility="Collapsed"
                                                    Text="0"/>

                                            <!-- Popup untuk pilihan kendaraan -->
                                            <Popup x:Name="popupVehicleHome"
                                                  PlacementTarget="{Binding ElementName=borderVehicleContainer}"
                                                  Placement="Bottom"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False"
                                                  Opened="PopupVehicleHome_Opened">
                                                <Border Background="White"
                                                       BorderBrush="#00B4B5"
                                                       BorderThickness="2"
                                                       CornerRadius="8"
                                                       Padding="10"
                                                       Width="420"
                                                       MaxHeight="250">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" 
                                                                         Direction="270" 
                                                                         ShadowDepth="2" 
                                                                         BlurRadius="8" 
                                                                         Opacity="0.15"/>
                                                    </Border.Effect>

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel>
                                                            <TextBlock Text="Pilih Tipe Tiket"
                                                                      FontSize="14"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="#042769"
                                                                      Margin="0,5,0,15"/>

                                                            <!-- Pejalan Kaki -->
                                                            <Button Click="BtnVehicleOptionHome_Click"
                                                               Tag="0|Pejalan Kaki"
                                                               BorderThickness="0"
                                                               Cursor="Hand"
                                                               Padding="10,8"
                                                               Margin="0,2"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Left">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6"
                                                                                           Padding="{TemplateBinding Padding}">
                                                                                        <ContentPresenter/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#74c0f3ff"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <StackPanel>
                                                                    <TextBlock Text="Pejalan Kaki" FontSize="13" FontWeight="SemiBold" Foreground="Black"/>
                                                                    <TextBlock Text="Penumpang tanpa kendaraan." FontSize="11" Foreground="#64748B" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Button>

                                                            <!-- Sepeda -->
                                                            <Button Click="BtnVehicleOptionHome_Click"
                                                               Tag="1|Sepeda"
                                                               BorderThickness="0"
                                                               Cursor="Hand"
                                                               Padding="10,8"
                                                               Margin="0,2"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Left">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6"
                                                                                           Padding="{TemplateBinding Padding}">
                                                                                        <ContentPresenter/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#74c0f3ff"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <StackPanel>
                                                                    <TextBlock FontSize="13" FontWeight="SemiBold" TextWrapping="Wrap">
                                                                        <Run Text="Sepeda" Foreground="Black"/>
                                                                        <Run Text=" (Golongan I)" Foreground="#00B4B5"/>
                                                                        <Run Text=" - Maks. 3 penumpang" Foreground="Black"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="Sepeda biasa." FontSize="11" Foreground="#64748B" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Button>

                                                            <!-- Sepeda Motor <500cc -->
                                                            <Button Click="BtnVehicleOptionHome_Click"
                                                               Tag="2|Sepeda Motor (&lt;500cc)"
                                                               BorderThickness="0"
                                                               Cursor="Hand"
                                                               Padding="10,8"
                                                               Margin="0,2"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Left">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6"
                                                                                           Padding="{TemplateBinding Padding}">
                                                                                        <ContentPresenter/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#74c0f3ff"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <StackPanel>
                                                                    <TextBlock FontSize="13" FontWeight="SemiBold" TextWrapping="Wrap">
                                                                        <Run Text="Sepeda Motor (&lt;500cc)" Foreground="Black"/>
                                                                        <Run Text=" (Golongan II)" Foreground="#00B4B5"/>
                                                                        <Run Text=" - Maks. 3 penumpang" Foreground="Black"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="Sepeda motor di bawah 500cc dan gerobak dorong." FontSize="11" Foreground="#64748B" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Button>

                                                            <!-- Sepeda Motor >500cc -->
                                                            <Button Click="BtnVehicleOptionHome_Click"
                                                               Tag="3|Sepeda Motor (&gt;500cc)"
                                                               BorderThickness="0"
                                                               Cursor="Hand"
                                                               Padding="10,8"
                                                               Margin="0,2"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Left">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6"
                                                                                           Padding="{TemplateBinding Padding}">
                                                                                        <ContentPresenter/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
