<Window x:Class="TiketLaut.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Tiket Laut - Home" 
        MinHeight="800" 
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <!-- ✅ DROP SHADOW untuk Card -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="20" 
                         ShadowDepth="5" 
                         Opacity="0.2" 
                         Color="#000000"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Panel.ZIndex="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="707*"/>
                <ColumnDefinition Width="489*"/>
                <ColumnDefinition Width="217*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Image -->
            <Image Source="/Views/Assets/Images/bekgron.png" 
                   Stretch="UniformToFill" 
                   Opacity="0.7" 
                   VerticalAlignment="Top"
                   Height="474" 
                   Margin="0,-74,0,0" 
                   Grid.ColumnSpan="3"/>

            <!-- Overlay -->
            <Rectangle Fill="#011C4B" 
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       Height="474" 
                       Margin="0,-74,0,0" 
                       Grid.ColumnSpan="3"/>

            <!-- ScrollViewer -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="0" 
                         Height="710" 
                         VerticalAlignment="Center" 
                         Grid.ColumnSpan="3">
                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           MaxWidth="1000"
                           MinWidth="800"
                           Margin="40">

                    <!-- Title -->
                    <TextBlock Text="Tiket Laut" 
                              FontSize="56" 
                              FontFamily="Plus Jakarta Sans"
                              FontWeight="Bold" 
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,15"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Jelajahi perjalanan laut dengan mudah dan nyaman." 
                              FontSize="16" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="Pesan tiket kapal ferry ke berbagai pelabuhan tujuan hanya dalam beberapa klik!" 
                              FontSize="14" 
                              FontFamily="Plus Jakarta Sans"
                              Foreground="White"
                              TextAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- ✅ FORM CARD - LAYOUT FIXED SEMUA FIELD -->
                    <Border Background="White" 
                           CornerRadius="20" 
                           Padding="40" 
                           Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <!-- Row 1: Pelabuhan Asal, Kelas Layanan, Jadwal Masuk -->
                            <Grid Margin="0,0,0,25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Pelabuhan Asal - FIXED WIDTH -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Pelabuhan Asal" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconlokasi.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanAsal"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     Width="209"
                                                     MaxDropDownHeight="250"
                                                     SelectionChanged="CmbPelabuhanAsal_SelectionChanged">
                                                <ComboBox.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                                    </Style>
                                                </ComboBox.Resources>
                                                <ComboBoxItem IsSelected="True" Content="Pilih Asal" />
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Kelas Layanan - FIXED WIDTH -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Kelas Layanan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbKelasLayanan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     Width="209"
                                                     SelectionChanged="CmbKelasLayanan_SelectionChanged">
                                                <ComboBoxItem IsSelected="True" Content="Pilih Kelas" />
                                                <ComboBoxItem Content="Reguler"/>
                                                <ComboBoxItem Content="Express"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Jadwal Masuk - FIXED WIDTH -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Jadwal Masuk" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Grid Width="350" HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="170"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="170"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tanggal -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="12,10"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="0">
                                            <DatePicker x:Name="dpTanggal"
                                                       Background="Transparent" 
                                                       BorderThickness="0"
                                                       FontSize="11"
                                                       FontFamily="Plus Jakarta Sans"
                                                       Foreground="#666666"
                                                       SelectedDateFormat="Short"
                                                       Width="146"
                                                       SelectedDateChanged="DpTanggal_SelectedDateChanged"/>
                                        </Border>

                                        <!-- Separator -->
                                        <Rectangle Fill="#CCCCCC" 
                                                  Width="2" 
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Center"/>

                                        <!-- Jam -->
                                        <Border Background="#F0F0F0" 
                                               CornerRadius="10" 
                                               Padding="12,10"
                                               BorderThickness="1.5"
                                               BorderBrush="#999999"
                                               Grid.Column="2">
                                            <Grid Width="146">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="6"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Column="0"
                                                       Source="/Views/Assets/Icons/icontanggal.png"
                                                       Width="16"
                                                       Height="16"
                                                       VerticalAlignment="Center"/>

                                                <ComboBox x:Name="cmbJam"
                                                         Grid.Column="2"
                                                         Background="Transparent" 
                                                         BorderThickness="0"
                                                         FontSize="11"
                                                         FontFamily="Plus Jakarta Sans"
                                                         Foreground="#666666"
                                                         SelectedIndex="0"
                                                         Width="120"
                                                         MaxDropDownHeight="250">
                                                    <ComboBoxItem IsSelected="True" Content="Pilih Jam"/>
                                                    <ComboBoxItem Content="00:00"/>
                                                    <ComboBoxItem Content="01:00"/>
                                                    <ComboBoxItem Content="02:00"/>
                                                    <ComboBoxItem Content="03:00"/>
                                                    <ComboBoxItem Content="04:00"/>
                                                    <ComboBoxItem Content="05:00"/>
                                                    <ComboBoxItem Content="06:00"/>
                                                    <ComboBoxItem Content="07:00"/>
                                                    <ComboBoxItem Content="08:00"/>
                                                    <ComboBoxItem Content="09:00"/>
                                                    <ComboBoxItem Content="10:00"/>
                                                    <ComboBoxItem Content="11:00"/>
                                                    <ComboBoxItem Content="12:00"/>
                                                    <ComboBoxItem Content="13:00"/>
                                                    <ComboBoxItem Content="14:00"/>
                                                    <ComboBoxItem Content="15:00"/>
                                                    <ComboBoxItem Content="16:00"/>
                                                    <ComboBoxItem Content="17:00"/>
                                                    <ComboBoxItem Content="18:00"/>
                                                    <ComboBoxItem Content="19:00"/>
                                                    <ComboBoxItem Content="20:00"/>
                                                    <ComboBoxItem Content="21:00"/>
                                                    <ComboBoxItem Content="22:00"/>
                                                    <ComboBoxItem Content="23:00"/>
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Row 2: Pelabuhan Tujuan, Jenis Kendaraan, Penumpang -->
                            <Grid Margin="0,0,0,25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Pelabuhan Tujuan - FIXED WIDTH -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Pelabuhan Tujuan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconlokasi.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbPelabuhanTujuan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     Width="209"
                                                     MaxDropDownHeight="250"
                                                     SelectionChanged="CmbPelabuhanTujuan_SelectionChanged">
                                                <ComboBox.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                                    </Style>
                                                </ComboBox.Resources>
                                                <ComboBoxItem IsSelected="True" Content="Pilih Tujuan"/>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Jenis Kendaraan - FIXED WIDTH (Sudah Benar) -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Jenis Kendaraan" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="265"
                                           HorizontalAlignment="Left">
                                        <Grid Width="235">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconorang.png"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"/>

                                            <ComboBox x:Name="cmbJenisKendaraan"
                                                     Grid.Column="2"
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     FontSize="12"
                                                     FontFamily="Plus Jakarta Sans"
                                                     Foreground="#666666"
                                                     SelectedIndex="0"
                                                     MaxDropDownHeight="250"
                                                     Width="209"
                                                     SelectionChanged="CmbJenisKendaraan_SelectionChanged">
                                                <ComboBox.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                                    </Style>
                                                </ComboBox.Resources>
                                                <ComboBoxItem IsSelected="True">
                                                    <TextBlock Text="Pilih Jenis Kendaraan"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Pejalan kaki tanpa kendaraan"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Sepeda"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Sepeda motor &lt;500cc dan gerobak dorong"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Sepeda motor besar &gt;500cc dan kendaraan roda tiga"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil jeep, sedan, minibus"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil barang bak muatan terbuka/tertutup, mobil kabin ganda"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil bus penumpang (5-7 meter)"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil barang (truk/tangki) ukuran sedang (5-7 meter)"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil bus penumpang (7-10 meter)"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil barang (truk/tangki) sedang (7-10 meter)"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil tronton, tangki, penarik + gandengan (10-12 meter)"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil tronton, tangki, alat berat (12-16 meter)"/>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mobil tronton, tangki, alat berat (&gt;16 meter)"/>
                                                </ComboBoxItem>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- ✅ Penumpang - FIXED WIDTH with +/- buttons -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Penumpang" 
                                              FontSize="13" 
                                              FontFamily="Plus Jakarta Sans"
                                              FontWeight="SemiBold"
                                              Foreground="#333"
                                              Margin="0,0,0,10"/>
                                    <Border Background="#F0F0F0" 
                                           CornerRadius="10" 
                                           Padding="15,12"
                                           BorderThickness="1.5"
                                           BorderBrush="#999999"
                                           Width="350">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon di kiri -->
                                            <Image Grid.Column="0"
                                                   Source="/Views/Assets/Icons/iconorang.png"
                                                   Width="16"
                                                   Height="16"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="0,0,10,0"/>

                                            <!-- Button untuk toggle popup dengan text display -->
                                            <Button x:Name="btnPenumpang"
                                                   Grid.Column="1"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   Click="BtnPenumpang_Click"
                                                   Padding="0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center">
                                                <!-- Text Display -->
                                                <TextBlock x:Name="txtPenumpangDisplay"
                                                          FontSize="12"
                                                          FontFamily="Plus Jakarta Sans"
                                                          FontWeight="Medium"
                                                          TextAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Foreground="#666666">
                                                    <Run Text="1"/>
                                                    <Run Text=" "/>
                                                    <Run Text="Penumpang"/>
                                                </TextBlock>
                                            </Button>

                                            <!-- Hidden TextBox for value -->
                                            <TextBox x:Name="txtPenumpang"
                                                    Text="1"
                                                    Visibility="Collapsed"/>

                                            <!-- Popup untuk +/- dan input -->
                                            <Popup x:Name="popupPenumpangHome"
                                                  PlacementTarget="{Binding ElementName=btnPenumpang}"
                                                  Placement="Bottom"
                                                  HorizontalOffset="-15"
                                                  VerticalOffset="5"
                                                  AllowsTransparency="True"
                                                  StaysOpen="False"
                                                  Closed="PopupPenumpangHome_Closed">
                                                <Border Background="White"
                                                       BorderBrush="#00B4B5"
                                                       BorderThickness="2"
                                                       CornerRadius="8"
                                                       Padding="15"
                                                       MinWidth="150">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" 
                                                                         Direction="270" 
                                                                         ShadowDepth="2" 
                                                                         BlurRadius="8" 
                                                                         Opacity="0.15"/>
                                                    </Border.Effect>
                                                    
                                                    <StackPanel>
                                                        <TextBlock Text="Jumlah Penumpang"
                                                                  FontSize="12"
                                                                  FontWeight="Medium"
                                                                  Foreground="#042769"
                                                                  Margin="0,0,0,10"/>
                                                        
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Button Minus -->
                                                            <Button x:Name="btnPopupMinusPenumpangHome"
                                                                   Grid.Column="0"
                                                                   Width="28"
                                                                   Height="28"
                                                                   Background="#F1F5F9"
                                                                   BorderThickness="0"
                                                                   Click="BtnMinusPenumpang_Click"
                                                                   Cursor="Hand"
                                                                   Margin="0,0,8,0">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6">
                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                        VerticalAlignment="Center"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsEnabled" Value="False">
                                                                                <Setter Property="Opacity" Value="0.5"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <TextBlock Text="-" 
                                                                          FontSize="16" 
                                                                          FontWeight="Bold"
                                                                          Foreground="#042769"/>
                                                            </Button>

                                                            <!-- TextBox untuk input manual -->
                                                            <TextBox x:Name="txtPopupPenumpangHome"
                                                                    Grid.Column="1"
                                                                    Text="1"
                                                                    FontSize="15"
                                                                    FontWeight="SemiBold"
                                                                    TextAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    Foreground="#042769"
                                                                    BorderBrush="#CBD5E1"
                                                                    BorderThickness="1"
                                                                    Height="28"
                                                                    MinWidth="50"
                                                                    MaxLength="3"
                                                                    Margin="0"
                                                                    Padding="5,0"
                                                                    PreviewTextInput="TxtPopupPenumpangHome_PreviewTextInput"
                                                                    TextChanged="TxtPopupPenumpangHome_TextChanged">
                                                                <TextBox.Style>
                                                                    <Style TargetType="TextBox">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="TextBox">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                                           CornerRadius="6">
                                                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                                                    Margin="5,0"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </TextBox.Style>
                                                            </TextBox>

                                                            <!-- Button Plus -->
                                                            <Button x:Name="btnPopupPlusPenumpangHome"
                                                                   Grid.Column="2"
                                                                   Width="28"
                                                                   Height="28"
                                                                   Background="#F1F5F9"
                                                                   BorderThickness="0"
                                                                   Click="BtnPlusPenumpang_Click"
                                                                   Cursor="Hand"
                                                                   Margin="8,0,0,0">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           CornerRadius="6">
                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                        VerticalAlignment="Center"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsEnabled" Value="False">
                                                                                <Setter Property="Opacity" Value="0.5"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <TextBlock Text="+" 
                                                                          FontSize="16" 
                                                                          FontWeight="Bold"
                                                                          Foreground="#042769"/>
                                                            </Button>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Search Button -->
                            <Button x:Name="btnCariJadwal"
                                   Content="Cari Jadwal" 
                                   Background="#2563EB"
                                   Foreground="White"
                                   Height="50"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Stretch"
                                   Click="BtnCariJadwal_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="25">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Navbar Component (Pre-Login) -->
        <components:NavbarPreLogin Grid.Row="0" 
                                   x:Name="navbarPreLogin"
                                   Visibility="Visible"
                                   Panel.ZIndex="999" 
                                   Loaded="navbarPreLogin_Loaded"/>

        <!-- Navbar Component (Post-Login) -->
