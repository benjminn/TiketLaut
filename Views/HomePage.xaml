                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Navbar Component (Pre-Login) -->
        <components:NavbarPreLogin Grid.Row="0" 
                                   x:Name="navbarPreLogin"
                                   Visibility="Visible"
                                   Panel.ZIndex="999" 
                                   Loaded="navbarPreLogin_Loaded"/>

        <!-- Navbar Component (Post-Login) -->
        <components:NavbarPostLogin Grid.Row="0" 
                                    x:Name="navbarPostLogin"
                                    Visibility="Collapsed"
                                    Panel.ZIndex="999"/>
    </Grid>
</Window>