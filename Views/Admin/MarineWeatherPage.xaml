<UserControl x:Class="TiketLaut.Views.Admin.MarineWeatherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Plus Jakarta Sans"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Styles for Dropdown -->
        <Style x:Key="DropdownLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <Style x:Key="DropdownSubLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,-3,0,3"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Marine Weather Check" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#011C4B"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Pemantauan Cuaca Pelabuhan dan Rute Pelayaran" 
                              FontSize="15" 
                              Foreground="#6C757D"/>
                </StackPanel>
            </Grid>

            <!-- Tab Control -->
            <TabControl Grid.Row="1" 
                       Background="Transparent" 
                       BorderThickness="0"
                       Margin="0,0,0,20">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                           Background="White" 
                                           BorderThickness="0" 
                                           CornerRadius="12,12,0,0"
                                           Padding="20,12"
                                           Margin="0,0,5,0">
                                        <ContentPresenter x:Name="ContentSite"
                                                         ContentSource="Header"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#00658D"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#E8F4F8"/>
                                            <Setter Property="Foreground" Value="#64748B"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Tab 1: Cek Cuaca Pelabuhan -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Cek Cuaca Pelabuhan" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Style="{StaticResource CardStyle}" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: Controls -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Style="{StaticResource DropdownLabel}">
                                        <Run Text="Pelabuhan"/>
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource DropdownSubLabel}"
                                              Text="Pilih pelabuhan untuk melihat cuaca saat ini"/>
                                </StackPanel>
                                
                                <ComboBox x:Name="cbPelabuhan"
                                         Height="45"
                                         FontSize="13"
                                         Padding="10"
                                         Margin="0,0,0,15">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="5">
                                                <Run Text="ðŸ“ " FontSize="14"/>
                                                <Run Text="{Binding NamaPelabuhan, Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <Button x:Name="btnCheckPelabuhan"
                                       Style="{StaticResource PrimaryButton}"
                                       Click="BtnCheckPelabuhan_Click"
                                       HorizontalAlignment="Stretch"
                                       Margin="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cek Cuaca saat Ini" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Border Background="#FFF3CD" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ Info" 
                                                  FontSize="14" 
                                                  FontWeight="Bold" 
                                                  Foreground="#856404"/>
                                        <TextBlock Text="Data cuaca real-time dari OpenWeather untuk pelabuhan yang dipilih." 
                                                  FontSize="12" 
                                                  Foreground="#856404" 
                                                  TextWrapping="Wrap"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Right: Result -->
                            <Border Grid.Column="1" 
                                   Background="#F8F9FA" 
                                   CornerRadius="12" 
                                   Padding="20">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="txtPelabuhanResult"
                                              Text="Pilih pelabuhan dan klik 'Cek Cuaca Sekarang' untuk melihat data cuaca."
                                              FontSize="13"
                                              Foreground="#495057"
                                              TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Tab 2: Cek Cuaca Rute -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—ºï¸" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Cek Cuaca Rute" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Style="{StaticResource CardStyle}" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: Controls -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Style="{StaticResource DropdownLabel}">
                                        <Run Text="Pelabuhan Asal"/>
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource DropdownSubLabel}"
                                              Text="Pilih titik keberangkatan"/>
                                </StackPanel>
                                
                                <ComboBox x:Name="cbPelabuhanAsal"
                                         Height="45"
                                         FontSize="13"
                                         Padding="10"
                                         Margin="0,0,0,15">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="5">
                                                <Run Text="ðŸš¢ " FontSize="14"/>
                                                <Run Text="{Binding NamaPelabuhan, Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Style="{StaticResource DropdownLabel}">
                                        <Run Text="Pelabuhan Tujuan"/>
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource DropdownSubLabel}"
                                              Text="Pilih titik tujuan"/>
                                </StackPanel>
                                
                                <ComboBox x:Name="cbPelabuhanTujuan"
                                         Height="45"
                                         FontSize="13"
                                         Padding="10"
                                         Margin="0,0,0,15">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="5">
                                                <Run Text="ðŸ " FontSize="14"/>
                                                <Run Text="{Binding NamaPelabuhan, Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <Button x:Name="btnCheckRoute"
                                       Style="{StaticResource PrimaryButton}"
                                       Click="BtnCheckRoute_Click"
                                       HorizontalAlignment="Stretch"
                                       Margin="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cek Keamanan Rute" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Border Background="#FFF3CD" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ Info" 
                                                  FontSize="14" 
                                                  FontWeight="Bold" 
                                                  Foreground="#856404"/>
                                        <TextBlock Text="Sistem akan mengecek cuaca di 5 titik sepanjang rute dengan interpolasi linear untuk analisis keamanan pelayaran." 
                                                  FontSize="12" 
                                                  Foreground="#856404" 
                                                  TextWrapping="Wrap"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Right: Result -->
                            <Border Grid.Column="1" 
                                   Background="#F8F9FA" 
                                   CornerRadius="12" 
                                   Padding="20">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="txtRouteResult"
                                              Text="Pilih pelabuhan asal dan tujuan, lalu klik 'Cek Keamanan Rute' untuk analisis cuaca sepanjang jalur pelayaran."
                                              FontSize="13"
                                              Foreground="#495057"
                                              TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Tab 3: Forecasting -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“…" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Forecasting 5 Hari" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Style="{StaticResource CardStyle}" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: Controls -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Style="{StaticResource DropdownLabel}">
                                        <Run Text="Jadwal"/>
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource DropdownSubLabel}"
                                              Text="Pilih jadwal pelayaran dalam 5 hari ke depan"/>
                                </StackPanel>
                                
                                <ComboBox x:Name="cbJadwal"
                                         Height="45"
                                         FontSize="13"
                                         Padding="10"
                                         Margin="0,0,0,10"
                                         SelectionChanged="CbJadwal_SelectionChanged">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5,8,5,8">
                                                <TextBlock FontWeight="SemiBold" FontSize="13">
                                                    <Run Text="ðŸš¢ "/>
                                                    <Run Text="{Binding pelabuhan_asal.nama_pelabuhan, Mode=OneWay}"/>
                                                    <Run Text=" â†’ "/>
                                                    <Run Text="{Binding pelabuhan_tujuan.nama_pelabuhan, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Foreground="#64748B" Margin="0,3,0,0">
                                                    <Run Text="Kapal: "/>
                                                    <Run Text="{Binding kapal.nama_kapal, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Foreground="#64748B">
                                                    <Run Text="ðŸ“… "/>
                                                    <Run Text="{Binding waktu_berangkat, StringFormat='dd MMM yyyy HH:mm', Mode=OneWay}"/>
                                                    <Run Text=" WIB"/>
                                                </TextBlock>
                                                
                                                <!-- Separator line -->
                                                <Border BorderBrush="#E2E8F0" 
                                                       BorderThickness="0,0,0,1" 
                                                       Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock x:Name="txtJadwalInfo"
                                          Text=""
                                          FontSize="12"
                                          Foreground="#00658D"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,15"/>

                                <Button x:Name="btnGetForecast"
                                       Style="{StaticResource PrimaryButton}"
                                       Click="BtnGetForecast_Click"
                                       HorizontalAlignment="Stretch"
                                       Margin="0"
                                       IsEnabled="False">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cek Prakiraan Cuaca" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Border Background="#FFF3CD" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ Info" 
                                                  FontSize="14" 
                                                  FontWeight="Bold" 
                                                  Foreground="#856404"/>
                                        <TextBlock Text="Prakiraan cuaca saat keberangkatan dan tiba untuk jadwal yang dipilih." 
                                                  FontSize="12" 
                                                  Foreground="#856404" 
                                                  TextWrapping="Wrap"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Right: Result -->
                            <Border Grid.Column="1" 
                                   Background="#F8F9FA" 
                                   CornerRadius="12" 
                                   Padding="20">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="txtForecastResult"
                                              Text="Pilih jadwal pelayaran untuk melihat prakiraan cuaca saat keberangkatan dan tiba."
                                              FontSize="13"
                                              Foreground="#495057"
                                              TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>
