<Window x:Class="TiketLaut.Views.AdminPembayaranEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Pembayaran"
        Height="450"
        Width="600"
        MinHeight="400"
        MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        FontFamily="Plus Jakarta Sans"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="6"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âœï¸ Edit Pembayaran" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="#011C4B"/>
            <TextBlock Text="Ubah informasi pembayaran" 
                      FontSize="13" 
                      Foreground="#64748B" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form Content -->
        <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="8" 
               Padding="20"
               BorderBrush="#DEE2E6"
               BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Informasi Pembayaran (Read-only) -->
                    <TextBlock Text="Informasi Pembayaran" 
                              FontSize="15" 
                              FontWeight="Bold" 
                              Foreground="#011C4B"
                              Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Kode Tiket" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtKodeTiket" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Text="Nama Pengguna" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtNamaPengguna" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Tanggal Bayar" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtTanggalBayar" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Text="Jumlah Bayar" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtJumlahBayar" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>

                    <Separator Margin="0,15,0,15" Background="#DEE2E6"/>

                    <!-- Editable Fields -->
                    <TextBlock Text="Ubah Data" 
                              FontSize="15" 
                              FontWeight="Bold" 
                              Foreground="#011C4B"
                              Margin="0,0,0,10"/>

                    <!-- Status Pembayaran -->
                    <TextBlock Text="Status Pembayaran *" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbStatus"
                             Height="40"
                             FontSize="14"
                             Margin="0,0,0,10">
                        <ComboBoxItem Content="Menunggu Pembayaran" Tag="Menunggu Pembayaran"/>
                        <ComboBoxItem Content="Menunggu Validasi" Tag="Menunggu Validasi"/>
                        <ComboBoxItem Content="Sukses" Tag="Sukses"/>
                        <ComboBoxItem Content="Gagal" Tag="Gagal"/>
                    </ComboBox>

                    <!-- Metode Pembayaran -->
                    <TextBlock Text="Metode Pembayaran" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbMetode"
                             Height="40"
                             FontSize="14"
                             Margin="0,0,0,10">
                        <ComboBoxItem Content="Transfer BCA" Tag="Transfer BCA"/>
                        <ComboBoxItem Content="Transfer Mandiri" Tag="Transfer Mandiri"/>
                        <ComboBoxItem Content="Retail Indomaret" Tag="Retail Indomaret"/>
                        <ComboBoxItem Content="Retail Alfamart" Tag="Retail Alfamart"/>
                        <ComboBoxItem Content="QRIS" Tag="QRIS"/>
                        <ComboBoxItem Content="Kartu Kredit" Tag="Kartu Kredit"/>
                    </ComboBox>

                    <TextBlock Text="* Field wajib diisi" 
                              FontSize="12" 
                              FontStyle="Italic"
                              Foreground="#64748B"
                              Margin="0,15,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                   Content="Batal"
                   Style="{StaticResource PrimaryButton}"
                   Background="#6C757D"
                   Width="100"
                   Click="BtnCancel_Click"
                   Margin="0,0,10,0"/>

            <Button Grid.Column="2"
                   x:Name="btnSimpan"
                   Style="{StaticResource PrimaryButton}"
                   Background="#28A745"
                   Width="120"
                   Click="BtnSimpan_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" Margin="0,0,8,0"/>
                    <TextBlock Text="Simpan"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
