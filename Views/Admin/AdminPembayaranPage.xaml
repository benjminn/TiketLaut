<UserControl x:Class="TiketLaut.Views.AdminPembayaranPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Plus Jakarta Sans">

    <UserControl.Resources>
        <!-- Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E7F3F8"/>
                    <Setter Property="Foreground" Value="#011C4B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <!-- Action Bar -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnRefresh_Click"
                       HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Views/Assets/Icons/iconRefresh.png" 
                               Width="13" 
                               Height="13" 
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Refresh" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Filter Section -->
            <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Filter Pencarian" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 1 -->
                            <!-- Search Box -->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Pencarian" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <TextBox x:Name="txtSearch" 
                                        Height="42"
                                        Padding="12"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#CED4DA"
                                        BorderThickness="1"
                                        TextChanged="TxtSearch_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}"
                                                               CornerRadius="8">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                         VerticalAlignment="Center"
                                                                         Margin="10,0"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <!-- Status Filter -->
                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Status Pembayaran" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbStatus"
                                         Height="42"
                                         Padding="12"
                                         FontSize="14"
                                         BorderBrush="#CED4DA"
                                         BorderThickness="1"
                                         SelectionChanged="CmbStatus_SelectionChanged">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                    <ComboBoxItem Content="-- Semua Status --" Tag="" IsSelected="True"/>
                                    <ComboBoxItem Content="Menunggu Pembayaran" Tag="Menunggu Pembayaran"/>
                                    <ComboBoxItem Content="Menunggu Validasi" Tag="Menunggu Validasi"/>
                                    <ComboBoxItem Content="Aktif" Tag="Aktif"/>
                                    <ComboBoxItem Content="Sukses" Tag="Sukses"/>
                                    <ComboBoxItem Content="Gagal" Tag="Gagal"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Metode Pembayaran Filter -->
                            <StackPanel Grid.Row="0" Grid.Column="4">
                                <TextBlock Text="Metode Pembayaran" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbMetodePembayaran"
                                         Height="42"
                                         Padding="12"
                                         FontSize="14"
                                         BorderBrush="#CED4DA"
                                         BorderThickness="1"
                                         IsEditable="True"
                                         IsTextSearchEnabled="True"
                                         StaysOpenOnEdit="True"
                                         SelectionChanged="CmbMetodePembayaran_SelectionChanged">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </StackPanel>

                            <!-- Pengguna Filter -->
                            <StackPanel Grid.Row="0" Grid.Column="6">
                                <TextBlock Text="Nama Pengguna" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbPengguna"
                                         Height="42"
                                         Padding="12"
                                         FontSize="14"
                                         BorderBrush="#CED4DA"
                                         BorderThickness="1"
                                         IsEditable="True"
                                         IsTextSearchEnabled="True"
                                         StaysOpenOnEdit="True"
                                         SelectionChanged="CmbPengguna_SelectionChanged">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </StackPanel>

                            <!-- Row 2 -->
                            <!-- Tanggal Dari -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,0,0">
                                <TextBlock Text="Tanggal Dari" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <DatePicker x:Name="dpTanggalDari"
                                           Height="42"
                                           Padding="12"
                                           FontSize="14"
                                           BorderBrush="#CED4DA"
                                           BorderThickness="1"
                                           SelectedDateChanged="DateFilter_Changed">
                                    <DatePicker.Style>
                                        <Style TargetType="DatePicker">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DatePicker.Style>
                                </DatePicker>
                            </StackPanel>

                            <!-- Tanggal Sampai -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,20,0,0">
                                <TextBlock Text="Tanggal Sampai" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <DatePicker x:Name="dpTanggalSampai"
                                           Height="42"
                                           Padding="12"
                                           FontSize="14"
                                           BorderBrush="#CED4DA"
                                           BorderThickness="1"
                                           SelectedDateChanged="DateFilter_Changed">
                                    <DatePicker.Style>
                                        <Style TargetType="DatePicker">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DatePicker.Style>
                                </DatePicker>
                            </StackPanel>

                            <!-- Jumlah Minimum -->
                            <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,20,0,0">
                                <TextBlock Text="Jumlah Min (Rp)" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <TextBox x:Name="txtJumlahMin"
                                        Height="42"
                                        Padding="12"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#CED4DA"
                                        BorderThickness="1"
                                        TextChanged="TxtJumlah_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}"
                                                               CornerRadius="8">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                         VerticalAlignment="Center"
                                                                         Margin="10,0"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <!-- Jumlah Maximum -->
                            <StackPanel Grid.Row="1" Grid.Column="6" Margin="0,20,0,0">
                                <TextBlock Text="Jumlah Max (Rp)" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#495057" 
                                          Margin="0,0,0,8"/>
                                <TextBox x:Name="txtJumlahMax"
                                        Height="42"
                                        Padding="12"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#CED4DA"
                                        BorderThickness="1"
                                        TextChanged="TxtJumlah_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}"
                                                               CornerRadius="8">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                         VerticalAlignment="Center"
                                                                         Margin="10,0"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00658D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </Grid>

                        <!-- Reset Button -->
                        <Button Content="Reset Filter"
                               Click="BtnResetFilter_Click"
                               HorizontalAlignment="Right"
                               Margin="0,20,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                    <Setter Property="Background" Value="#6C757D"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5A6268"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Data Grid -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Daftar Pembayaran" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,20"/>

                        <DataGrid x:Name="dgPembayaran"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 CanUserResizeRows="False"
                                 CanUserReorderColumns="False"
                                 SelectionMode="Single"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 RowHeight="50"
                                 ColumnHeaderHeight="45"
                                 AlternatingRowBackground="#F8F9FA"
                                 Background="White"
                                 BorderBrush="#DEE2E6"
                                 BorderThickness="1"
                                 FontSize="13">
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#00658D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#267DAE"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E8F4F8"/>
                                            <Setter Property="Foreground" Value="#011C4B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <!-- ID -->
                                <DataGridTextColumn Header="ID" 
                                                   Binding="{Binding pembayaran_id}" 
                                                   Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#00658D"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Kode Tiket -->
                                <DataGridTextColumn Header="Kode Tiket" 
                                                   Binding="{Binding tiket.kode_tiket}" 
                                                   Width="240">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Nama Pengguna -->
                                <DataGridTextColumn Header="Nama Pengguna" 
                                                   Binding="{Binding tiket.Pengguna.nama}" 
                                                   Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="10,0,0,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Rute -->
                                <DataGridTemplateColumn Header="Rute" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">
                                                <Run Text="{Binding tiket.Jadwal.pelabuhan_asal.nama_pelabuhan}"/>
                                                <Run Text=" → "/>
                                                <Run Text="{Binding tiket.Jadwal.pelabuhan_tujuan.nama_pelabuhan}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Metode Pembayaran -->
                                <DataGridTextColumn Header="Metode" 
                                                   Binding="{Binding metode_pembayaran}" 
                                                   Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Jumlah Bayar -->
                                <DataGridTemplateColumn Header="Jumlah" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding jumlah_bayar, StringFormat='Rp {0:N0}'}" 
                                                      TextAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"
                                                      FontWeight="SemiBold"
                                                      Foreground="#011C4B"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Tanggal Bayar -->
                                <DataGridTemplateColumn Header="Tanggal" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding tanggal_bayar, StringFormat='dd/MM/yyyy'}" 
                                                      TextAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Status -->
                                <DataGridTemplateColumn Header="Status" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" 
                                                   Padding="10,6"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding status_bayar}" Value="Sukses">
                                                                <Setter Property="Background" Value="#D4EDDA"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding status_bayar}" Value="Aktif">
                                                                <Setter Property="Background" Value="#D4EDDA"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding status_bayar}" Value="Menunggu Validasi">
                                                                <Setter Property="Background" Value="#FFF3CD"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding status_bayar}" Value="Menunggu Pembayaran">
                                                                <Setter Property="Background" Value="#D1ECF1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding status_bayar}" Value="Gagal">
                                                                <Setter Property="Background" Value="#F8D7DA"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding status_bayar}" 
                                                          FontWeight="SemiBold"
                                                          FontSize="12"
                                                          TextAlignment="Center"
                                                          HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#424242"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Sukses">
                                                                    <Setter Property="Foreground" Value="#155724"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Aktif">
                                                                    <Setter Property="Foreground" Value="#155724"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Menunggu Validasi">
                                                                    <Setter Property="Foreground" Value="#856404"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Menunggu Pembayaran">
                                                                    <Setter Property="Foreground" Value="#0C5460"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Gagal">
                                                                    <Setter Property="Foreground" Value="#721C24"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Header="Action" Width="290">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" 
                                                       HorizontalAlignment="left"
                                                       VerticalAlignment="Center">
                                                <!-- Detail Button - Always visible -->
                                                <Button Style="{StaticResource SuccessButton}"
                                                       Background="#00B4B5"
                                                       Tag="{Binding pembayaran_id}"
                                                       Click="BtnDetail_Click"
                                                       Width="80"
                                                       Margin="0,0,5,0">
                                                    <TextBlock Text="Detail" TextAlignment="Center"/>
                                                </Button>

                                                <!-- Validasi Button - Only for Menunggu Validasi -->
                                                <Button Tag="{Binding pembayaran_id}"
                                                       Background="#218838"
                                                       Click="BtnValidasi_Click"
                                                       Width="100"
                                                       Margin="0,0,5,0">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource SuccessButton}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Menunggu Validasi">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <TextBlock Text="Validasi" TextAlignment="Center"/>
                                                </Button>

                                                <!-- Tolak Button - Only for Menunggu Validasi -->
                                                <Button Tag="{Binding pembayaran_id}"
                                                       Background="#C82333"
                                                       Click="BtnTolak_Click"
                                                       Width="70">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource DangerButton}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding status_bayar}" Value="Menunggu Validasi">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <TextBlock Text="Tolak" TextAlignment="Center"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <Border Margin="0,15,0,0"
                                Background="White"
                                CornerRadius="8"
                                Padding="15"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Pagination Info -->
                                    <TextBlock Grid.Column="0"
                                               x:Name="txtPaginationInfo"
                                               Text="Page 1 - Menampilkan 30 dari 30 pembayaran"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="#00658D"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>

                                    <!-- Navigation Buttons -->
                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Button x:Name="btnPrevPage"
                                                Content="◀ Previous"
                                                Style="{StaticResource PrimaryButton}"
                                                Click="BtnPrevPage_Click"
                                                Margin="0,0,10,0"
                                                Padding="12,8"
                                                FontSize="13"
                                                IsEnabled="False"/>
                                        
                                        <TextBlock x:Name="txtPageNumber"
                                                   Text="1"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#00658D"
                                                   VerticalAlignment="Center"
                                                   Margin="15,0"
                                                   MinWidth="30"
                                                   TextAlignment="Center"/>
                                        
                                        <Button x:Name="btnNextPage"
                                                Content="Next ▶"
                                                Style="{StaticResource PrimaryButton}"
                                                Click="BtnNextPage_Click"
                                                Margin="10,0,0,0"
                                                Padding="12,8"
                                                FontSize="13"/>
                                    </StackPanel>

                                    <!-- Total Records Info -->
                                    <TextBlock Grid.Column="2"
                                               x:Name="txtTotalRecords"
                                               Text="Total: 30 pembayaran"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="#6C757D"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                    </StackPanel>
                </Border>
        </StackPanel>
    </Grid>
</UserControl>
