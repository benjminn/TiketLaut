<UserControl x:Class="TiketLaut.Views.AdminNotifikasiPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Plus Jakarta Sans">

    <UserControl.Resources>
        <!-- Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#00658D"/>
            <Setter Property="BorderBrush" Value="#00658D"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E7F3F8"/>
                    <Setter Property="Foreground" Value="#011C4B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Kelola Notifikasi" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#011C4B"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Kirim dan kelola notifikasi untuk pengguna sistem" 
                              FontSize="15" 
                              Foreground="#6C757D"/>
                </StackPanel>
            </Grid>

            <!-- Tab Navigation -->
            <Border Background="White" 
                    CornerRadius="12,12,0,0" 
                    BorderBrush="#DEE2E6" 
                    BorderThickness="0,0,0,1"
                    Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnTabKirim" 
                            Content="âœ‰ï¸ Kirim Notifikasi" 
                            Style="{StaticResource ActiveTabButtonStyle}"
                            Click="TabKirim_Click"/>
                    <Button x:Name="btnTabOtomatis" 
                            Content="âš™ï¸ Notifikasi Otomatis" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="TabOtomatis_Click"/>
                    <Button x:Name="btnTabSemua" 
                            Content="ðŸ“‹ Semua Notifikasi" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="TabSemua_Click"/>
                </StackPanel>
            </Border>

            <!-- Tab Content -->
            <Border Background="White" 
                    CornerRadius="0,0,12,12" 
                    Padding="24"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <!-- Tab 1: Kirim Notifikasi -->
                    <StackPanel x:Name="tabKirimContent" Visibility="Visible">
                        <!-- Filter Jadwal Section -->
                        <Border Background="#F8F9FA" 
                               CornerRadius="8" 
                               Padding="16" 
                               Margin="0,0,0,20"
                               BorderBrush="#DEE2E6"
                               BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="ðŸ”" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Filter Jadwal" 
                                              FontSize="16" 
                                              FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Pelabuhan Asal -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Pelabuhan Asal" FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="cmbFilterPelabuhanAsal" 
                                                 Style="{StaticResource InputComboBox}"
                                                 SelectionChanged="FilterJadwal_Changed">
                                            <ComboBoxItem Content="Semua" IsSelected="True"/>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <!-- Pelabuhan Tujuan -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Pelabuhan Tujuan" FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="cmbFilterPelabuhanTujuan" 
                                                 Style="{StaticResource InputComboBox}"
                                                 SelectionChanged="FilterJadwal_Changed">
                                            <ComboBoxItem Content="Semua" IsSelected="True"/>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <!-- Tanggal -->
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="Tanggal Keberangkatan" FontSize="12" Margin="0,0,0,4"/>
                                        <DatePicker x:Name="dpFilterTanggal" 
                                                   SelectedDateChanged="FilterJadwal_Changed"
                                                   Padding="10,8"
                                                   BorderBrush="#DEE2E6"
                                                   BorderThickness="1"
                                                   Background="White"
                                                   FontSize="14"/>
                                    </StackPanel>
                                    
                                    <!-- Jam -->
                                    <StackPanel Grid.Column="6">
                                        <TextBlock Text="Waktu Keberangkatan" FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="cmbFilterJam" 
                                                 Style="{StaticResource InputComboBox}"
                                                 SelectionChanged="FilterJadwal_Changed">
                                            <ComboBoxItem Content="Semua Waktu" IsSelected="True"/>
                                            <ComboBoxItem Content="00:00 - 06:00 (Dini Hari)"/>
                                            <ComboBoxItem Content="06:00 - 12:00 (Pagi)"/>
                                            <ComboBoxItem Content="12:00 - 18:00 (Siang)"/>
                                            <ComboBoxItem Content="18:00 - 24:00 (Malam)"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0">
                                <!-- Pilih Penerima -->
                                <TextBlock Text="Pilih Penerima" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbPenerima" 
                                         Style="{StaticResource InputComboBox}"
                                         SelectionChanged="CmbPenerima_SelectionChanged"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="Semua Pengguna" IsSelected="True"/>
                                    <ComboBoxItem Content="Berdasarkan Jadwal"/>
                                    <ComboBoxItem Content="Pengguna Tertentu"/>
                                </ComboBox>

                                <!-- Jadwal Table (hidden by default) -->
                                <StackPanel x:Name="pnlSelectJadwal" Visibility="Collapsed" Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                  Text="Pilih Jadwal Keberangkatan" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold" 
                                                  VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                  Text="*Klik baris untuk memilih (dapat memilih lebih dari 1)"
                                                  FontSize="11"
                                                  Foreground="#6C757D"
                                                  FontStyle="Italic"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Tabel Jadwal -->
                                    <Border BorderBrush="#042769" 
                                           BorderThickness="2" 
                                           CornerRadius="8"
                                           Background="White"
                                           MaxHeight="300"
                                           Margin="0,8,0,0">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                            <DataGrid x:Name="dgJadwal"
                                                     AutoGenerateColumns="False"
                                                     IsReadOnly="True"
                                                     SelectionMode="Extended"
                                                     GridLinesVisibility="None"
                                                     HeadersVisibility="Column"
                                                     RowHeight="40"
                                                     CanUserResizeRows="False"
                                                     CanUserReorderColumns="False"
                                                     CanUserSortColumns="True"
                                                     Background="White"
                                                     BorderThickness="0"
                                                     SelectionChanged="DgJadwal_SelectionChanged"
                                                     PreviewMouseLeftButtonDown="DgJadwal_PreviewMouseLeftButtonDown">
                                                
                                                <!-- Style untuk header -->
                                                <DataGrid.ColumnHeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="Background" Value="#042769"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Padding" Value="12,10"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                    </Style>
                                                </DataGrid.ColumnHeaderStyle>
                                                
                                                <!-- Style untuk row -->
                                                <DataGrid.RowStyle>
                                                    <Style TargetType="DataGridRow">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F1F3F5"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="#00658D"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.RowStyle>
                                                
                                                <!-- Style untuk cell -->
                                                <DataGrid.CellStyle>
                                                    <Style TargetType="DataGridCell">
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="12,0"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.CellStyle>
                                                
                                                <DataGrid.Columns>
                                                    <!-- Rute -->
                                                    <DataGridTextColumn Header="Rute Perjalanan" Binding="{Binding Rute}" Width="*" MinWidth="200">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Setter Property="FontSize" Value="13"/>
                                                                <Setter Property="Padding" Value="12,0,0,0"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                    
                                                    <!-- Kapal -->
                                                    <DataGridTextColumn Header="Kapal" Binding="{Binding NamaKapal}" Width="140">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontSize" Value="13"/>
                                                                <Setter Property="Padding" Value="12,0,0,0"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                    
                                                    <!-- Tanggal & Waktu -->
                                                    <DataGridTextColumn Header="Keberangkatan" Binding="{Binding WaktuBerangkat}" Width="160">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontSize" Value="13"/>
                                                                <Setter Property="Padding" Value="12,0,0,0"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                    
                                                    <!-- Jumlah Penumpang -->
                                                    <DataGridTextColumn Header="Penumpang" Binding="{Binding JumlahPenumpang}" Width="120">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontSize" Value="13"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </ScrollViewer>
                                    </Border>
                                    
                                    <!-- Jadwal Terpilih Section -->
                                    <Border x:Name="pnlSelectedJadwals"
                                           BorderBrush="#00658D" 
                                           BorderThickness="2" 
                                           CornerRadius="8"
                                           Background="#F8F9FA"
                                           Padding="15"
                                           Margin="0,15,0,0"
                                           Visibility="Collapsed">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="âœ“" 
                                                              FontSize="18" 
                                                              FontWeight="Bold"
                                                              Foreground="#00658D"
                                                              Margin="0,0,8,0"
                                                              VerticalAlignment="Center"/>
                                                    <TextBlock Text="Jadwal Terpilih" 
                                                              FontWeight="Bold" 
                                                              FontSize="14"
                                                              Foreground="#042769"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="1"
                                                          x:Name="txtSelectedCount"
                                                          Text="0 jadwal dipilih"
                                                          FontSize="12"
                                                          Foreground="#6C757D"
                                                          HorizontalAlignment="Right"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                            
                                            <ItemsControl x:Name="icSelectedJadwals">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White"
                                                               BorderBrush="#00658D"
                                                               BorderThickness="1"
                                                               CornerRadius="6"
                                                               Padding="12"
                                                               Margin="0,0,0,8">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <!-- Status Icon -->
                                                                <TextBlock Grid.Column="0"
                                                                          Text="{Binding StatusIcon}"
                                                                          FontSize="20"
                                                                          Margin="0,0,12,0"
                                                                          VerticalAlignment="Center"/>
                                                                
                                                                <!-- Jadwal Info -->
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="{Binding Rute}"
                                                                              FontWeight="SemiBold"
                                                                              FontSize="13"
                                                                              Foreground="#042769"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                                        <TextBlock Text="ðŸš¢"
                                                                                  FontSize="11"
                                                                                  Margin="0,0,4,0"/>
                                                                        <TextBlock Text="{Binding NamaKapal}"
                                                                                  FontSize="11"
                                                                                  Foreground="#6C757D"
                                                                                  Margin="0,0,12,0"/>
                                                                        <TextBlock Text="ðŸ•’"
                                                                                  FontSize="11"
                                                                                  Margin="0,0,4,0"/>
                                                                        <TextBlock Text="{Binding WaktuBerangkat}"
                                                                                  FontSize="11"
                                                                                  Foreground="#6C757D"
                                                                                  Margin="0,0,12,0"/>
                                                                        <TextBlock Text="ðŸ‘¥"
                                                                                  FontSize="11"
                                                                                  Margin="0,0,4,0"/>
                                                                        <TextBlock FontSize="11" Foreground="#00658D" FontWeight="SemiBold">
                                                                            <Run Text="{Binding JumlahPenumpang}"/>
                                                                            <Run Text=" penumpang"/>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                                
                                                                <!-- Remove Button -->
                                                                <Button Grid.Column="2"
                                                                       Content="âœ•"
                                                                       FontSize="16"
                                                                       FontWeight="Bold"
                                                                       Foreground="#DC3545"
                                                                       Background="Transparent"
                                                                       BorderThickness="0"
                                                                       Padding="8"
                                                                       Cursor="Hand"
                                                                       ToolTip="Hapus dari pilihan"
                                                                       Click="BtnRemoveJadwal_Click"
                                                                       Tag="{Binding JadwalId}">
                                                                    <Button.Style>
                                                                        <Style TargetType="Button">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="Button">
                                                                                        <Border Background="{TemplateBinding Background}"
                                                                                               CornerRadius="4"
                                                                                               Padding="{TemplateBinding Padding}">
                                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                                            VerticalAlignment="Center"/>
                                                                                        </Border>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#FFE7E9"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- User Dropdown (hidden by default) -->
                                <StackPanel x:Name="pnlSelectUser" Visibility="Collapsed" Margin="0,0,0,16">
                                    <TextBlock Text="Pilih Pengguna" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cmbUser" 
                                             Style="{StaticResource InputComboBox}"
                                             DisplayMemberPath="DisplayText"/>
                                </StackPanel>

                                <!-- Jenis Notifikasi dengan Icon -->
                                <TextBlock Text="Jenis Notifikasi" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbJenisNotifikasi" 
                                         Style="{StaticResource InputComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Tag="pembayaran">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Views/Assets/Icons/iconPaymentNotif.png" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Pembayaran" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem Tag="pemberitahuan" IsSelected="True">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Views/Assets/Icons/iconDangerNotif.png" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Pemberitahuan" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem Tag="pengingat">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Views/Assets/Icons/iconTimerNotif.png" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Pengingat" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem Tag="pembatalan">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Views/Assets/Icons/iconGagalNotif.png" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Pembatalan" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem Tag="umum">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Views/Assets/Icons/iconTaskNotif.png" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Umum" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                </ComboBox>

                                <!-- Judul -->
                                <TextBlock Text="Judul Notifikasi" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtJudul" 
                                        Style="{StaticResource InputTextBox}"
                                        Margin="0,0,0,16"
                                        MaxLength="100"/>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="2">
                                <!-- Pesan -->
                                <TextBlock Text="Isi Pesan" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtPesan" 
                                        Style="{StaticResource InputTextBox}"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        Height="250"
                                        VerticalScrollBarVisibility="Auto"
                                        Margin="0,0,0,16"/>

                                <!-- Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Bersihkan" 
                                           Style="{StaticResource DangerButton}"
                                           Click="BtnClear_Click"
                                           Margin="0,0,12,0"/>
                                    <Button Content="âœ‰ï¸  Kirim Notifikasi" 
                                           Style="{StaticResource SuccessButton}"
                                           Click="BtnKirim_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Preview -->
                        <Border Background="#F8F9FA" 
                               CornerRadius="8" 
                               Padding="16" 
                               Margin="0,24,0,0"
                               BorderBrush="#DEE2E6"
                               BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Preview Notifikasi" 
                                          FontSize="14" 
                                          FontWeight="Bold" 
                                          Foreground="#011C4B"
                                          Margin="0,0,0,12"/>
