<Window x:Class="TiketLaut.Views.AdminPelabuhanFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Form Pelabuhan" 
        SizeToContent="WidthAndHeight"
        MinWidth="500"
        MaxWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="False"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="20" Padding="30">
        <StackPanel>
            <TextBlock x:Name="txtTitle" Text="Tambah Pelabuhan Baru" 
                      FontSize="22" 
                      FontWeight="Bold" 
                      Foreground="#011C4B"
                      Margin="0,0,0,20"/>

            <!-- Nama Pelabuhan -->
            <TextBlock Text="Nama Pelabuhan *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNamaPelabuhan" Style="{StaticResource InputBox}" Margin="0,0,0,15"/>

            <!-- Kota -->
            <TextBlock Text="Kota *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtKota" Style="{StaticResource InputBox}" Margin="0,0,0,15"/>

            <!-- Provinsi -->
            <TextBlock Text="Provinsi *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtProvinsi" Style="{StaticResource InputBox}" Margin="0,0,0,15"/>

            <!-- Fasilitas -->
            <TextBlock Text="Fasilitas *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFasilitas" 
                    Style="{StaticResource InputBox}" 
                    MinHeight="60"
                    MaxHeight="120"
                    VerticalContentAlignment="Top"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,15"/>

            <!-- Deskripsi -->
            <TextBlock Text="Deskripsi (Opsional)" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDeskripsi" 
                    Style="{StaticResource InputBox}"
                    MinHeight="80"
                    MaxHeight="150"
                    VerticalContentAlignment="Top"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,20"/>

            <!-- Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Content="Batal" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BtnCancel_Click"
                       Margin="0,0,10,0"/>

                <Button Grid.Column="1" 
                       x:Name="btnSave"
                       Content="Simpan" 
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnSave_Click"
                       Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
