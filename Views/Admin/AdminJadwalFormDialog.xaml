                            HeadersVisibility="Column"
                            Background="White"
                            BorderBrush="#CED4DA"
                            BorderThickness="1"
                            RowBackground="White"
                            AlternatingRowBackground="#F8F9FA"
                            MaxHeight="300"
                            MinHeight="60"
                            FontSize="13"
