<Window x:Class="TiketLaut.Views.AdminJadwalFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Form Jadwal" 
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        MaxWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- DataGrid Cell Styles -->
        <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="LeftAlignedCell" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="LeftAlignedCellReadOnly" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="20" Padding="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock x:Name="txtTitle" Text="Tambah Jadwal" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="#011C4B"
                          Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Pelabuhan Asal -->
                    <TextBlock Text="Pelabuhan Asal *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbPelabuhanAsal" 
                             Style="{StaticResource ComboBoxStyle}"
                             DisplayMemberPath="nama_pelabuhan"
                             SelectedValuePath="pelabuhan_id"
                             Margin="0,0,0,15"/>

                    <!-- Pelabuhan Tujuan -->
                    <TextBlock Text="Pelabuhan Tujuan *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbPelabuhanTujuan" 
                             Style="{StaticResource ComboBoxStyle}"
                             DisplayMemberPath="nama_pelabuhan"
                             SelectedValuePath="pelabuhan_id"
                             Margin="0,0,0,15"/>

                    <!-- Kapal -->
                    <TextBlock Text="Kapal *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbKapal" 
                             Style="{StaticResource ComboBoxStyle}"
                             DisplayMemberPath="nama_kapal"
                             SelectedValuePath="kapal_id"
                             Margin="0,0,0,15"/>

                    <!-- Kelas Layanan -->
                    <TextBlock Text="Kelas Layanan *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbKelasLayanan" 
                             Style="{StaticResource ComboBoxStyle}"
                             Margin="0,0,0,15">
                        <ComboBoxItem Content="Reguler" IsSelected="True"/>
                        <ComboBoxItem Content="Ekspress"/>
                    </ComboBox>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Status -->
                    <TextBlock Text="Status *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbStatus" 
                             Style="{StaticResource ComboBoxStyle}"
                             Margin="0,0,0,15">
                        <ComboBoxItem Content="Active" IsSelected="True"/>
                        <ComboBoxItem Content="Inactive"/>
                    </ComboBox>

                    <!-- Tanggal & Waktu Berangkat -->
                    <TextBlock Text="Tanggal &amp; Waktu Berangkat *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpTanggalBerangkat"
                               Style="{StaticResource DatePickerStyle}"
                               Margin="0,0,0,5"
                               SelectedDateChanged="OnWaktuBerangkatChanged"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtJamBerangkat" 
                                Grid.Column="0"
                                Style="{StaticResource InputBox}"
                                MaxLength="2"
                                Tag="Jam (00-23)"
                                TextChanged="OnWaktuBerangkatChanged"/>
                        <TextBox x:Name="txtMenitBerangkat" 
                                Grid.Column="2"
                                Style="{StaticResource InputBox}"
                                MaxLength="2"
                                Tag="Menit (00-59)"
                                TextChanged="OnWaktuBerangkatChanged"/>
                    </Grid>

                    <!-- Interval Perjalanan -->
                    <TextBlock Text="Durasi Perjalanan *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtDurasiJam" 
                                Grid.Column="0"
                                Style="{StaticResource InputBox}"
                                MaxLength="2"
                                Tag="Jam"
                                TextChanged="OnDurasiChanged"/>
                        <TextBox x:Name="txtDurasiMenit" 
                                Grid.Column="2"
                                Style="{StaticResource InputBox}"
                                MaxLength="2"
                                Tag="Menit"
                                TextChanged="OnDurasiChanged"/>
                    </Grid>

                    <!-- Waktu Tiba (Auto-calculated) -->
                    <TextBlock Text="Waktu Tiba (Otomatis)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtWaktuTiba" 
                            Style="{StaticResource InputBox}"
                            IsReadOnly="True"
                            Background="#F5F5F5"
                            Margin="0,0,0,15"/>
                </StackPanel>
            </Grid>
            
            <!-- Multiple Dates Selection with Calendar -->
            <Border Background="#E7F3FF" 
                   BorderBrush="#00658D" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Padding="15" 
                   Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Calendar Multi-Select -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ“… Pilih Tanggal (klik untuk pilih/batal)" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#011C4B"
                                  Margin="0,0,0,10"/>
                        
                        <Calendar x:Name="calendarMultiSelect"
                                 SelectionMode="None"
                                 Background="White"
                                 BorderBrush="#00658D"
                                 BorderThickness="1"
                                 Loaded="CalendarMultiSelect_Loaded"/>
                        
                        <TextBlock Text="ðŸ’¡ Klik/drag untuk pilih, double-click untuk toggle" 
                                  FontSize="11" 
                                  Foreground="#6C757D"
                                  TextWrapping="Wrap"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- Selected Dates Display -->
                    <StackPanel Grid.Column="1">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Tanggal yang dipilih:" 
                                      Grid.Column="0"
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="#011C4B"
                                      VerticalAlignment="Center"/>
                            
                            <Button x:Name="btnClearDates"
                                   Grid.Column="1"
                                   Content="ðŸ—‘ï¸ Hapus Semua"
                                   Background="#DC3545"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="10,5"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   Click="BtnClearDates_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#DC3545"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C82333"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <Border Background="White"
                               BorderBrush="#CED4DA"
                               BorderThickness="1"
                               CornerRadius="5"
                               Padding="10"
                               MinHeight="200"
                               MaxHeight="250">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="icSelectedDates">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#E7F3FF" 
                                                   BorderBrush="#00658D" 
                                                   BorderThickness="1" 
                                                   CornerRadius="5" 
                                                   Padding="10,6" 
                                                   Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Text="ðŸ“…" 
                                                              Grid.Column="0"
                                                              FontSize="14"
                                                              Margin="0,0,8,0"
                                                              VerticalAlignment="Center"/>
                                                    
                                                    <TextBlock Text="{Binding StringFormat='dd MMMM yyyy (dddd)'}" 
                                                              Grid.Column="1"
                                                              FontSize="13"
                                                              FontWeight="SemiBold"
                                                              Foreground="#011C4B"
                                                              VerticalAlignment="Center"/>
                                                    
                                                    <Button Content="Ã—" 
                                                           Grid.Column="2"
                                                           Foreground="#DC3545"
                                                           Background="Transparent"
                                                           BorderThickness="0"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Padding="8,0"
                                                           Cursor="Hand"
                                                           Click="BtnHapusTanggal_Click"
                                                           Tag="{Binding}"
                                                           ToolTip="Hapus tanggal ini"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        
                        <TextBlock x:Name="txtSelectedCount"
                                  Text="Belum ada tanggal dipilih" 
                                  FontSize="12" 
                                  Foreground="#6C757D"
                                  FontStyle="Italic"
                                  Margin="0,8,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Info Helper Box -->
            <Border Background="#FFF3CD" 
                   BorderBrush="#FFC107" 
                   BorderThickness="1" 
                   CornerRadius="6" 
                   Padding="12" 
                   Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock FontWeight="SemiBold" Foreground="#856404" Margin="0,0,0,5">
                        ðŸ’¡ Petunjuk Pengisian:
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="#856404" TextWrapping="Wrap" Margin="0,0,0,3">
                        â€¢ <Bold>Pilih Tanggal:</Bold> Tambahkan tanggal yang diinginkan (bisa lebih dari 1)
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="#856404" TextWrapping="Wrap" Margin="0,0,0,3">
                        â€¢ <Bold>Single Waktu:</Bold> Isi form di atas, klik "Simpan" (akan dibuat untuk semua tanggal yang dipilih)
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="#856404" TextWrapping="Wrap">
                        â€¢ <Bold>Bulk Waktu:</Bold> Gunakan tabel di bawah, tambah baris, isi jam berangkat â†’ otomatis hitung jam tiba, klik "ðŸ’¾ Bulk Save"
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Bulk Time Input Section - New Design with DataGrid -->
            <Border Background="#E7F3F8" 
                   CornerRadius="8" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ“‹ Bulk Create - Tambah Multiple Waktu Sekaligus" 
                                  Grid.Column="0"
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Foreground="#011C4B"
                                  VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btnAddRow" 
                                   Content="+ Tambah Baris" 
                                   Background="#28A745" 
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="12,6"
                                   Margin="0,0,5,0"
                                   Cursor="Hand"
                                   Click="BtnAddRow_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#28A745"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#218838"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnClearRows" 
                                   Content="ðŸ—‘ï¸ Hapus Semua" 
                                   Background="#DC3545" 
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="12,6"
                                   Cursor="Hand"
                                   Click="BtnClearRows_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#DC3545"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C82333"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Isi jam berangkat, jam tiba akan dihitung otomatis berdasarkan durasi perjalanan di atas" 
                              FontSize="12" 
                              Foreground="#6C757D"
                              TextWrapping="Wrap"
                              Margin="0,0,0,10"/>
                    
                    <DataGrid x:Name="dgBulkWaktu" 
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="True"
                            CanUserReorderColumns="False"
                            CanUserSortColumns="False"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            Background="White"
                            BorderBrush="#CED4DA"
                            BorderThickness="1"
                            RowBackground="White"
                            AlternatingRowBackground="#F8F9FA"
                            MaxHeight="300"
                            MinHeight="60"
                            FontSize="13"
                            CellEditEnding="DgBulkWaktu_CellEditEnding"
                            VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <!-- Column No -->
                            <DataGridTextColumn Header="No" 
                                              Binding="{Binding No}" 
                                              Width="50" 
                                              IsReadOnly="True"
                                              ElementStyle="{StaticResource CenterAlignedCell}"/>
                            
                            <!-- Column Jam Berangkat (Editable) -->
                            <DataGridTextColumn Header="ðŸ• Jam Berangkat (HH:mm)" 
                                              Binding="{Binding JamBerangkat, UpdateSourceTrigger=PropertyChanged}" 
                                              Width="2*"
                                              ElementStyle="{StaticResource LeftAlignedCell}"/>
                            
                            <!-- Column Jam Tiba (Auto-calculated, Read-only) -->
                            <DataGridTextColumn Header="ðŸ•‘ Jam Tiba (Otomatis)" 
                                              Binding="{Binding JamTiba}" 
                                              Width="2*"
                                              IsReadOnly="True"
                                              ElementStyle="{StaticResource LeftAlignedCellReadOnly}"/>
                            
                            <!-- Column Action (Delete Button) -->
                            <DataGridTemplateColumn Header="Aksi" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ—‘ï¸" 
                                               Background="#DC3545" 
                                               Foreground="White"
                                               BorderThickness="0"
                                               Padding="8,4"
                                               Cursor="Hand"
                                               Click="BtnDeleteRow_Click"
                                               ToolTip="Hapus baris ini">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           CornerRadius="4" 
                                                           Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock Text="ðŸ’¡ Tip: Klik 'Tambah Baris' untuk menambah lebih banyak waktu. Jam tiba akan otomatis dihitung berdasarkan durasi perjalanan." 
                              FontSize="11" 
                              Foreground="#DC3545"
                              FontStyle="Italic"
                              TextWrapping="Wrap"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Content="Batal" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BtnCancel_Click"
                       Margin="0,0,5,0"/>

                <Button Grid.Column="1" 
                       x:Name="btnSave"
                       Content="Simpan" 
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnSave_Click"
                       Margin="5,0,5,0"/>

                <Button Grid.Column="2" 
                       x:Name="btnBulkSave"
                       Content="ðŸ’¾ Bulk Save" 
                       Style="{StaticResource SuccessButton}"
                       Click="BtnBulkSave_Click"
                       Margin="5,0,0,0"/>
            </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
