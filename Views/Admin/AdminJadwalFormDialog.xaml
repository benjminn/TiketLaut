                                              IsReadOnly="True"
                                              ElementStyle="{StaticResource CenterAlignedCell}"/>
                            
                            <!-- Column Jam Berangkat (Editable) -->
                            <DataGridTextColumn Header="ðŸ• Jam Berangkat (HH:mm)" 
                                              Binding="{Binding JamBerangkat, UpdateSourceTrigger=PropertyChanged}" 
