                            <DataGridTemplateColumn Header="Aksi" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Background="#DC3545" 
                                               Foreground="White"
                                               BorderThickness="0"
                                               Padding="8,4"
                                               Cursor="Hand"
