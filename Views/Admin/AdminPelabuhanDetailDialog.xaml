<Window x:Class="TiketLaut.Views.AdminPelabuhanDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail Pelabuhan" 
        SizeToContent="WidthAndHeight"
        MinWidth="700"
        MaxWidth="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="20" Padding="30">
        <StackPanel>
            <TextBlock Text="Detail Pelabuhan" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#011C4B"
                      Margin="0,0,0,20"/>

            <!-- Pelabuhan Info Card -->
            <Border Style="{StaticResource CardStyle}" Background="#F8F9FA">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nama Pelabuhan -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nama Pelabuhan" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtNamaPelabuhan" Text="-" Margin="0,0,0,10"/>

                    <!-- Kota -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Kota" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtKota" Text="-" Margin="0,0,0,10"/>

                    <!-- Provinsi -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Provinsi" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtProvinsi" Text="-" Margin="0,0,0,10"/>

                    <!-- Fasilitas -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Fasilitas" FontWeight="SemiBold" Margin="0,0,0,10" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtFasilitas" Text="-" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <!-- Deskripsi -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Deskripsi" FontWeight="SemiBold" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtDeskripsi" Text="-" TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <!-- Statistik Card -->
            <Border Style="{StaticResource CardStyle}" Background="#E7F3F8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Jadwal -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Total Jadwal" 
                                  FontSize="14" 
                                  Foreground="#6C757D"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtTotalJadwal" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#00658D"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Jadwal Keberangkatan -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Jadwal Keberangkatan" 
                                  FontSize="14" 
                                  Foreground="#6C757D"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtJadwalKeberangkatan" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#28A745"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Jadwal Kedatangan -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Jadwal Kedatangan" 
                                  FontSize="14" 
                                  Foreground="#6C757D"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtJadwalKedatangan" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#FFC107"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Jadwal List -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Daftar Jadwal Terkait" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#011C4B"
                              Margin="0,0,0,15"/>

                    <!-- Jadwal ScrollViewer -->
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- No Jadwal Message -->
                            <TextBlock x:Name="txtNoJadwal" 
                                      Text="Belum ada jadwal untuk pelabuhan ini" 
                                      FontSize="14"
                                      Foreground="#6C757D"
                                      HorizontalAlignment="Center"
                                      Margin="0,20,0,20"
                                      Visibility="Collapsed"/>

                            <!-- Jadwal Items -->
                            <ItemsControl x:Name="jadwalList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                               CornerRadius="8" 
                                               Padding="15" 
                                               Margin="0,0,0,10"
                                               MouseEnter="JadwalCard_MouseEnter"
                                               MouseLeave="JadwalCard_MouseLeave"
                                               Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontWeight="Bold" FontSize="14" Foreground="#011C4B">
                                                        <Run Text="{Binding pelabuhan_asal}"/>
                                                        <Run Text="â†’"/>
                                                        <Run Text="{Binding pelabuhan_tujuan}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="#6C757D" Margin="0,5,0,0">
                                                        <Run Text="Berangkat:"/>
                                                        <Run Text="{Binding jam_keberangkatan}"/>
                                                        <Run Text=" | Tiba:"/>
                                                        <Run Text="{Binding jam_tiba}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="#6C757D" Margin="0,3,0,0">
                                                        <Run Text="Kapal:"/>
                                                        <Run Text="{Binding nama_kapal}"/>
                                                        <Run Text=" | Kelas:"/>
                                                        <Run Text="{Binding kelas_layanan}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="#6C757D" Margin="0,3,0,0">
                                                        <Run Text="Tipe:"/>
                                                        <Run Text="{Binding tipe_rute}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <!-- Active Status -->
                                                    <Border Background="#28A745" 
                                                           CornerRadius="4" 
                                                           Padding="8,4"
                                                           Visibility="{Binding StatusVisibility}">
                                                        <TextBlock Text="{Binding status}" 
                                                                  Foreground="White" 
                                                                  FontSize="12" 
                                                                  FontWeight="SemiBold"/>
                                                    </Border>
                                                    <!-- Non-Active Status -->
                                                    <Border Background="#6C757D" 
                                                           CornerRadius="4" 
                                                           Padding="8,4"
                                                           Visibility="{Binding InactiveStatusVisibility}">
                                                        <TextBlock Text="{Binding status}" 
                                                                  Foreground="White" 
                                                                  FontSize="12" 
                                                                  FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button Content="Tutup" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnClose_Click"
                   HorizontalAlignment="Center"
                   MinWidth="150"/>
        </StackPanel>
    </Border>
</Window>
