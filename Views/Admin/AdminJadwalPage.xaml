<UserControl x:Class="TiketLaut.Views.AdminJadwalPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Plus Jakarta Sans">

    <UserControl.Resources>
        <!-- Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="#000"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0A800"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Header Style - Bold & Centered -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
        </Style>

        <!-- DataGrid Cell Style - Centered -->
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E7F3F8"/>
                    <Setter Property="Foreground" Value="#011C4B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <!-- Action Bar -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnAddJadwal_Click"
                       HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Views/Assets/Icons/iconTambah.png" 
                               Width="13" 
                               Height="13" 
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Tambah Jadwal" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                       Style="{StaticResource DangerButton}"
                       Click="BtnBulkDelete_Click"
                       HorizontalAlignment="Right"
                       IsEnabled="{Binding ElementName=dgJadwal, Path=SelectedItems.Count}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Views/Assets/Icons/iconBin.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Hapus Terpilih" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Filter Section -->
            <Border Style="{StaticResource CardStyle}" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Filter Pencarian" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#011C4B"
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1 -->
                        <!-- Search Box -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Pencarian Cepat" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtSearch" 
                                    Padding="10"
                                    FontSize="13"
                                    BorderBrush="#CED4DA"
                                    BorderThickness="1"
                                    TextChanged="TxtSearch_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#00658D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Pelabuhan Asal -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Pelabuhan Asal" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbPelabuhanAsal"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     SelectionChanged="CmbPelabuhanAsal_SelectionChanged"/>
                        </StackPanel>

                        <!-- Pelabuhan Tujuan -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,0">
                            <TextBlock Text="Pelabuhan Tujuan" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbPelabuhanTujuan"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     SelectionChanged="CmbPelabuhanTujuan_SelectionChanged"/>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel Grid.Row="0" Grid.Column="3">
                            <TextBlock Text="Status" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbStatus"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"
                                     SelectionChanged="CmbStatus_SelectionChanged">
                                <ComboBoxItem Content="-- Semua Status --" Tag="" IsSelected="True"/>
                                <ComboBoxItem Content="Active" Tag="Active"/>
                                <ComboBoxItem Content="Inactive" Tag="Inactive"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Row 2 -->
                        <!-- Kapal -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,10,0">
                            <TextBlock Text="Kapal" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbKapal"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     SelectionChanged="CmbKapal_SelectionChanged"/>
                        </StackPanel>

                        <!-- Kelas Layanan -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,15,10,0">
                            <TextBlock Text="Kelas Layanan" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbKelasLayanan"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"
                                     SelectionChanged="CmbKelasLayanan_SelectionChanged">
                                <ComboBoxItem Content="-- Semua Kelas --" Tag="" IsSelected="True"/>
                                <ComboBoxItem Content="Reguler" Tag="Reguler"/>
                                <ComboBoxItem Content="Express" Tag="Express"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Tanggal Dari -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,15,10,0">
                            <TextBlock Text="Tanggal Dari" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dpTanggalDari"
                                       Padding="10"
                                       FontSize="13"
                                       BorderBrush="#CED4DA"
                                       BorderThickness="1"
                                       SelectedDateChanged="DateFilter_Changed"/>
                        </StackPanel>

                        <!-- Tanggal Sampai -->
                        <StackPanel Grid.Row="1" Grid.Column="3" Margin="0,15,0,0">
                            <TextBlock Text="Tanggal Sampai" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dpTanggalSampai"
                                       Padding="10"
                                       FontSize="13"
                                       BorderBrush="#CED4DA"
                                       BorderThickness="1"
                                       SelectedDateChanged="DateFilter_Changed"/>
                        </StackPanel>

                        <!-- Row 3 - Reset Button -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="0,15,0,0">
                            <Button Click="BtnResetFilter_Click"
                                   Background="#6C757D"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="15,8"
                                   FontSize="13"
                                   Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Views/Assets/Icons/iconRefresh.png" 
                                           Width="16" 
                                           Height="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="Reset Filter" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           CornerRadius="6"
                                                           Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5A6268"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Jadwal List -->
            <Border Style="{StaticResource CardStyle}">
            <DataGrid x:Name="dgJadwal"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     IsReadOnly="True"
                     SelectionMode="Extended"
                     HeadersVisibility="Column"
                     GridLinesVisibility="None"
                     Background="Transparent"
                     BorderThickness="0"
                     RowHeight="50">
                
                <DataGrid.Columns>
                    <!-- Checkbox Column -->
                    <DataGridCheckBoxColumn Width="50" 
                                          Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}">
                        <DataGridCheckBoxColumn.Header>
                            <CheckBox x:Name="chkSelectAll" 
                                    Click="ChkSelectAll_Click"
                                    HorizontalAlignment="Center"/>
                        </DataGridCheckBoxColumn.Header>
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <!-- ID Column -->
                    <DataGridTextColumn Header="ID" Binding="{Binding jadwal_id}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Rute -->
                    <DataGridTextColumn Header="Rute" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="12,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} â†’ {1}">
                                <Binding Path="pelabuhan_asal.nama_pelabuhan"/>
                                <Binding Path="pelabuhan_tujuan.nama_pelabuhan"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    
                    <!-- Kapal -->
                    <DataGridTextColumn Header="Kapal" Binding="{Binding kapal.nama_kapal}" Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Tanggal -->
                    <DataGridTextColumn Header="Tanggal" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.Binding>
                            <Binding Path="waktu_berangkat" StringFormat="dd/MM/yyyy"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    
                    <!-- Waktu Berangkat -->
                    <DataGridTextColumn Header="Jam Berangkat" Width="140">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.Binding>
                            <Binding Path="waktu_berangkat" StringFormat="HH:mm"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    
                    <!-- Waktu Tiba -->
                    <DataGridTextColumn Header="Jam Tiba" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.Binding>
                            <Binding Path="waktu_tiba" StringFormat="HH:mm"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    
                    <!-- Kelas -->
                    <DataGridTextColumn Header="Kelas" Binding="{Binding kelas_layanan}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Status -->
                    <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding status}" Value="Active">
                                        <Setter Property="Foreground" Value="#28A745"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding status}" Value="Inactive">
                                        <Setter Property="Foreground" Value="#DC3545"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Aksi" Width="260">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                    <!-- Detail Button -->
                                    <Button Style="{StaticResource PrimaryButton}"
                                           Content="Detail"
                                           Tag="{Binding jadwal_id}"
                                           Click="BtnDetailJadwal_Click"
                                           Margin="0,0,6,0"
                                           Padding="12,6"
                                           MinWidth="60"/>
                                    <!-- Edit Button -->
                                    <Button Style="{StaticResource WarningButton}"
                                           Content="Edit"
                                           Tag="{Binding jadwal_id}"
                                           Click="BtnEditJadwal_Click"
                                           Margin="0,0,6,0"
                                           Padding="12,6"
                                           MinWidth="60"/>
                                    <!-- Delete Button -->
                                    <Button Style="{StaticResource DangerButton}"
                                           Content="Hapus"
                                           Tag="{Binding jadwal_id}"
                                           Click="BtnDeleteJadwal_Click"
                                           Padding="12,6"
                                           MinWidth="60"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
