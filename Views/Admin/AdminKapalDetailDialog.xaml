<Window x:Class="TiketLaut.Views.AdminKapalDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail Kapal" 
        SizeToContent="WidthAndHeight"
        MinWidth="700"
        MaxWidth="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="20" Padding="30">
        <StackPanel>
            <!-- Header -->
            <TextBlock x:Name="txtTitle" 
                      Text="Detail Kapal" 
                      FontSize="22" 
                      FontWeight="Bold" 
                      Foreground="#011C4B"
                      Margin="0,0,0,20"/>

            <!-- Kapal Info Card -->
            <Border Style="{StaticResource CardStyle}" Background="#F8F9FA">
                <StackPanel>
                    <TextBlock Text="Informasi Kapal" FontWeight="Bold" FontSize="16" Foreground="#011C4B" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nama Kapal:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtNamaKapal" Text="-" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Kapasitas Penumpang:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtKapasitasPenumpang" Text="-" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Kapasitas Kendaraan:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtKapasitasKendaraan" Text="-" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Fasilitas:" FontWeight="SemiBold" Margin="0,0,0,10" VerticalAlignment="Top"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtFasilitas" Text="-" TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Deskripsi:" FontWeight="SemiBold" Margin="0,0,0,10" VerticalAlignment="Top"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtDeskripsi" Text="-" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Statistics Card -->
            <Border Style="{StaticResource CardStyle}" Background="#E7F3F8">
                <StackPanel>
                    <TextBlock Text="Statistik Penggunaan" FontWeight="Bold" FontSize="16" Foreground="#011C4B" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Total Jadwal Terhubung" FontWeight="SemiBold" Foreground="#6C757D" FontSize="12"/>
                            <TextBlock x:Name="txtTotalJadwal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#00658D" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Jadwal Aktif" FontWeight="SemiBold" Foreground="#6C757D" FontSize="12"/>
                            <TextBlock x:Name="txtJadwalAktif" Text="0" FontSize="32" FontWeight="Bold" Foreground="#28A745" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Jadwal List -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Daftar Jadwal yang Menggunakan Kapal Ini" 
                              FontWeight="Bold" 
                              FontSize="16" 
                              Foreground="#011C4B" 
                              Margin="0,0,0,15"/>

                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="icJadwalList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" 
                                           CornerRadius="8" 
                                           Padding="15" 
                                           Margin="0,0,0,10"
                                           Cursor="Hand"
                                           MouseEnter="JadwalCard_MouseEnter"
                                           MouseLeave="JadwalCard_MouseLeave">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock FontWeight="Bold" FontSize="14" Foreground="#011C4B">
                                                    <Run Text="{Binding pelabuhan_asal}"/>
                                                    <Run Text="â†’"/>
                                                    <Run Text="{Binding pelabuhan_tujuan}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="12" Foreground="#6C757D" Margin="0,5,0,0">
                                                    <Run Text="Berangkat:"/>
                                                    <Run Text="{Binding jam_keberangkatan}"/>
                                                    <Run Text=" | Tiba:"/>
                                                    <Run Text="{Binding jam_tiba}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="12" Foreground="#6C757D" Margin="0,3,0,0">
                                                    <Run Text="Kelas:"/>
                                                    <Run Text="{Binding kelas_layanan}"/>
                                                    <Run Text=" | Sisa Kapasitas:"/>
                                                    <Run Text="{Binding sisa_kapasitas}"/>
                                                    <Run Text=" penumpang"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <Border Background="#28A745" 
                                                       CornerRadius="4" 
                                                       Padding="8,4"
                                                       Visibility="{Binding StatusVisibility}">
                                                    <TextBlock Text="{Binding status}" 
                                                              Foreground="White" 
                                                              FontSize="11" 
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Background="#6C757D" 
                                                       CornerRadius="4" 
                                                       Padding="8,4"
                                                       Visibility="{Binding InactiveStatusVisibility}">
                                                    <TextBlock Text="{Binding status}" 
                                                              Foreground="White" 
                                                              FontSize="11" 
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <TextBlock x:Name="txtNoJadwal" 
                              Text="Belum ada jadwal yang menggunakan kapal ini" 
                              Foreground="#6C757D" 
                              FontStyle="Italic"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button Content="Tutup" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnClose_Click"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>
