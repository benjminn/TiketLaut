<Window x:Class="TiketLaut.Views.Admin.AdminFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Form Admin" 
        Width="550"
        Height="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         VerticalAlignment="Center"
                                         Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         VerticalAlignment="Center"
                                         Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="42"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="30">
            <StackPanel>
                <!-- Form Content in One Card -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                    </Border.Effect>

                    <StackPanel>
                        <!-- Header -->
                        <TextBlock x:Name="txtTitle"
                                  Text="Tambah Admin"
                                  FontSize="22"
                                  FontWeight="Bold"
                                  Foreground="#011C4B"
                                  Margin="0,0,0,5"/>
                        <Rectangle Height="3" 
                                  Fill="#00658D" 
                                  Margin="0,0,0,20"
                                  Width="80"
                                  HorizontalAlignment="Left"/>

                        <!-- Edit Info Panel -->
                        <Border x:Name="pnlEditInfo"
                               Background="#FFF3CD"
                               BorderBrush="#FFC107"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="15"
                               Margin="0,0,0,20"
                               Visibility="Collapsed">
                            <TextBlock Text="ℹ️ Kosongkan field password jika tidak ingin mengubah password"
                                      FontSize="13"
                                      Foreground="#856404"
                                      TextWrapping="Wrap"/>
                        </Border>

                        <!-- Nama Admin -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Nama Admin *" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Foreground="#495057"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="txtNama" 
                                    Style="{StaticResource InputBox}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email *" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Foreground="#495057"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="txtEmail" 
                                    Style="{StaticResource InputBox}"/>
                            <TextBlock Text="Email harus unik dan valid"
                                      FontSize="11"
                                      Foreground="#6C757D"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel x:Name="pnlPassword" Margin="0,0,0,15">
                            <TextBlock Text="Password *" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Foreground="#495057"
                                      Margin="0,0,0,8"/>
                            <PasswordBox x:Name="txtPassword" 
                                        Style="{StaticResource InputPasswordBox}"/>
                            <TextBlock Text="Minimal 6 karakter"
                                      FontSize="11"
                                      Foreground="#6C757D"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Confirm Password -->
                        <StackPanel x:Name="pnlConfirmPassword" Margin="0,0,0,15">
                            <TextBlock Text="Konfirmasi Password *" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Foreground="#495057"
                                      Margin="0,0,0,8"/>
                            <PasswordBox x:Name="txtConfirmPassword" 
                                        Style="{StaticResource InputPasswordBox}"/>
                        </StackPanel>

                        <!-- Role -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Role Admin *" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Foreground="#495057"
                                      Margin="0,0,0,8"/>
                            <ComboBox x:Name="cmbRole" 
                                     Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Admin Operasional" Tag="1" IsSelected="True"/>
                                <ComboBoxItem Content="Super Admin" Tag="0"/>
                            </ComboBox>
                            <TextBlock Text="Super Admin dapat mengelola admin lainnya"
                                      FontSize="11"
                                      Foreground="#6C757D"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnSave"
                                   Grid.Column="0"
                                   Style="{StaticResource PrimaryButton}"
                                   Click="BtnSave_Click"
                                   Height="45"
                                   Content="Simpan"/>

                            <Button Grid.Column="2"
                                   Style="{StaticResource SecondaryButton}"
                                   Click="BtnCancel_Click"
                                   Height="45"
                                   Content="Batal"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
