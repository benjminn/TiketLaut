<Window x:Class="TiketLaut.Views.AdminPembayaranDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TiketLaut.Views"
        Title="Detail Pembayaran"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="Plus Jakarta Sans"
        Background="#F8F9FA">

    <Window.Resources>
        <local:RowNumberConverter x:Key="RowNumberConverter"/>
        
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#011C4B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00658D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#267DAE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Header -->
                <TextBlock Text="Detail Pembayaran" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#011C4B"
                          Margin="0,0,0,20"/>

                <!-- Informasi Pembayaran -->
                <Border Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’³ Informasi Pembayaran" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ID Pembayaran" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtPembayaranId" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Metode Pembayaran" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtMetode" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Jumlah Bayar" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtJumlah" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Tanggal Pembayaran" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtTanggal" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Status Pembayaran" Style="{StaticResource LabelStyle}"/>
                                <Border x:Name="borderStatus" 
                                       CornerRadius="8" 
                                       Padding="10,5"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,15">
                                    <TextBlock x:Name="txtStatus" 
                                              FontSize="14"
                                              FontWeight="Bold"/>
                                </Border>

                                <TextBlock Text="Status Tiket" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtStatusTiket" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Informasi Tiket -->
                <Border Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ« Informasi Tiket" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Kode Tiket" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtKodeTiket" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Jumlah Penumpang" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtJumlahPenumpang" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Total Harga Tiket" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtTotalHarga" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Tanggal Pemesanan" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtTanggalPesan" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Jenis Kendaraan" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtJenisKendaraan" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Plat Nomor" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtPlatNomor" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Informasi Pengguna -->
                <Border Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¤ Informasi Pengguna" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Nama" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtNamaPengguna" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtEmail" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="No. Telepon" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtTelepon" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Alamat" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtAlamat" 
                                          Style="{StaticResource ValueStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Informasi Jadwal -->
                <Border Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸš¢ Informasi Jadwal" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Pelabuhan Asal" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtPelabuhanAsal" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Waktu Berangkat" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtWaktuBerangkat" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Kapal" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtKapal" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Pelabuhan Tujuan" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtPelabuhanTujuan" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Waktu Tiba" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtWaktuTiba" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Kelas Layanan" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtKelasLayanan" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Daftar Penumpang -->
                <Border Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥ Daftar Penumpang" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#011C4B"
                                  Margin="0,0,0,15"/>

                        <DataGrid x:Name="dgPenumpang"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 CanUserAddRows="False"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="Horizontal"
                                 Background="White"
                                 BorderBrush="#DEE2E6"
                                 BorderThickness="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No" Width="50">
                                    <DataGridTextColumn.Binding>
                                        <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}"
                                                Converter="{StaticResource RowNumberConverter}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Nama Lengkap" 
                                                   Binding="{Binding nama_lengkap}" 
                                                   Width="200"/>
                                <DataGridTextColumn Header="NIK" 
                                                   Binding="{Binding nik}" 
                                                   Width="150"/>
                                <DataGridTextColumn Header="Jenis Kelamin" 
                                                   Binding="{Binding jenis_kelamin}" 
                                                   Width="120"/>
                                <DataGridTextColumn Header="Umur" 
                                                   Binding="{Binding umur}" 
                                                   Width="80"/>
                                <DataGridTextColumn Header="Kategori" 
                                                   Binding="{Binding kategori_penumpang}" 
                                                   Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           x:Name="btnLihatTiket"
                           Style="{StaticResource PrimaryButton}"
                           Click="BtnLihatTiket_Click"
                           Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ«" Margin="0,0,8,0"/>
                            <TextBlock Text="Lihat Detail Tiket"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2"
                           Content="Tutup"
                           Style="{StaticResource PrimaryButton}"
                           Background="#6C757D"
                           Click="BtnClose_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
