<Window x:Class="TiketLaut.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TiketLaut - Login" 
        Height="1080" 
        Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Background dengan gradient seperti gambar -->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Views/Assets/Images/background.png"/>
    </Window.Background>

    <Grid>
        <!-- Grid dengan 2 kolom: kiri untuk logo, kanan untuk form login -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="961*"/>
            <ColumnDefinition Width="959*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Kiri - Logo dan Deskripsi -->
        <Grid HorizontalAlignment="Left" Width="960" Height="1080" VerticalAlignment="Center" Margin="0,0,0,0">
            <!-- Background putih dengan rounded corner -->
            <Border Background="White"
                        CornerRadius="90"
                        HorizontalAlignment="Left"
                        Width="500"
                        Height="850"
                        
                        >
                <Border.Effect>
                    <DropShadowEffect 
                        Direction="0" 
                        ShadowDepth="0"
                        BlurRadius="68.5"
                        Color="#000000" 
                        Opacity="0.36"/>
                </Border.Effect>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Logo -->
                    <Viewbox Width="300" Height="250" Margin="0,0,0,30">
                        <Image Source="pack://application:,,,/Views/Assets/Images/logo.png"
                         Stretch="Uniform"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
                    </Viewbox>

                    <!-- Deskripsi -->
                    <TextBlock 
                               FontSize="20"
                               FontFamily="Plus Jakarta Sans"
                               FontWeight="Bold"
                               Foreground="#042769"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="40,0,40,5">
                        <Run Text="Pesan tiket kapal ferry ke berbagai pelabuhan"/>
                        <LineBreak/>
                        <Run Text="tujuan hanya dengan sekali klik!"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Panel Kanan - Form Login -->
        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="650" Width="450">
            <!-- Background form login -->
            <Border Background="White" 
                    CornerRadius="36" 
                    Width="450" 
                    Height="650"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel Margin="32,48,32,48">
                    <!-- Header Form -->
                    <TextBlock Text="Masuk" 
                               FontSize="45" 
                               Foreground="#352555" 
                               FontFamily="Plus Jakarta Sans"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock FontSize="16"
                               FontFamily="Plus Jakarta Sans"
                               FontWeight="Medium"
                               Foreground="#3E4958"
                               TextAlignment="Center"
                               Width="380"
                               Height="40"
                               Margin="0,8,0,32">
                        <Run Text="Untuk mendapatkan segala akses dan fasilitas"/>
                        <LineBreak/>
                        <Run Text="Tiket Laut, harap login terlebih dahulu"/>
                    </TextBlock>

                    <!-- Input Email -->
                    <TextBlock Text="Email atau Nomor Handphone" 
                               FontSize="16"
                               FontFamily="Plus Jakarta Sans"
                               Foreground="#011C4B"
                               Margin="0,0,0,5.25"/>

                    <TextBox x:Name="txtEmail"
                             Height="40"
                             Padding="15,10"
                             FontSize="14"
                             BorderBrush="#A2A2A2"
                             BorderThickness="0.5"
                             Background="#F3F3F3"
                             Margin="0,0,0,17.63">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              VerticalAlignment="Center"
                                                              Margin="10,0"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Input Password -->
                    <TextBlock Text="Password" 
                               FontSize="16"
                               FontFamily="Plus Jakarta Sans"
                               Foreground="#011C4B"
                               Margin="0,0,0,5.25"/>

                    <PasswordBox x:Name="txtPassword"
                                 Height="40"
                                 Padding="15,10"
                                 FontSize="14"
                                 BorderBrush="#A2A2A2"
                                 BorderThickness="0.5"
                                 Background="#F3F3F3"
                                 Margin="0,0,0,5.38">
                        <PasswordBox.Style>
                            <Style TargetType="{x:Type PasswordBox}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type PasswordBox}">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              VerticalAlignment="Center"
                                                              Margin="10,0"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Lupa Kata Sandi -->
                    <TextBlock Text="Lupa Kata Sandi" 
                               FontSize="16" 
                               FontFamily="Plus Jakarta Sans"
                               Foreground="#0041B3"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,26.5"
                               Cursor="Hand"/>

                    <TextBlock Text="atau" 
                               FontSize="16"
                               FontFamily="Plus Jakarta Sans" 
                               Foreground="#717182"
                               HorizontalAlignment="Center"
                               FontStyle="Italic"
                               Margin="0,0,0,23"/>

                    <!-- Tombol Social Login -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tombol Facebook -->
                        <Button Grid.Column="0" 
                                x:Name="btnFacebook"
                                Height="47.26"
                                Background="#144AE9"
                                Foreground="White"
                                FontSize="12"
                                Click="BtnFacebook_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="26">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="f" FontSize="16" FontWeight="Bold" Margin="0,0,5,0" Width="15"/>
                                <TextBlock Text="Facebook" FontSize="16" FontFamily="Plus Jakarta Sans"/>
                            </StackPanel>
                        </Button>

                        <!-- Tombol Google -->
                        <Button Grid.Column="2" 
                                x:Name="btnGoogle"
                                Height="47.26"
                                Background="White"
                                BorderBrush="#352555"
                                BorderThickness="0.88"
                                Foreground="#001B4A"
                                Click="BtnGoogle_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="26">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="G" FontSize="16" FontWeight="Bold" Margin="0,0,5,0" Width="15"/>
                                <TextBlock Text="Google" FontSize="16" FontFamily="Plus Jakarta Sans"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Tombol Masuk -->
                    <Button x:Name="btnLogin"
                            Height="50"
                            Width="380"
                            Background="#D9A494"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Plus Jakarta Sans"
                            FontWeight="SemiBold"
                            Content="Masuk"
                            Margin="0,0,0,15"
                            Click="BtnLogin_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="25">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Link Daftar -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Belum punya akun? " 
                                   FontSize="14"
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#011C4B"/>
                        <TextBlock Text="Buat Akun" 
                                   FontSize="14"
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#0041B3"
                                   Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
