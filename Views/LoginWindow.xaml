<Window x:Class="TiketLaut.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TiketLaut - Login" 
        MinHeight="800" 
        MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize" 
        ShowInTaskbar="True">

    <!-- Background dengan gradient seperti gambar -->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Views/Assets/Images/background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <!-- Grid dengan 2 kolom: kiri untuk logo, kanan untuk form login -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" MinWidth="600"/>
            <ColumnDefinition Width="5*" MinWidth="500"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Kiri - Logo dan Deskripsi -->
        <Grid Grid.Column="0">

            <!-- Background putih dengan rounded corner -->
            <Border Background="White"
            CornerRadius="0,90,90,0"
            MaxWidth="1000"
            Margin="0,0,0,0">
                <Border.Effect>
                    <DropShadowEffect 
                Direction="0" 
                ShadowDepth="0"
                BlurRadius="68.5"
                Color="#000000" 
                Opacity="0.36"/>
                </Border.Effect>

                <Grid>
                    <!-- Back Button di kiri atas -->
                    <Button Click="BtnKembali_Click"
                   Background="Transparent" 
                   BorderThickness="0" 
                   Cursor="Hand"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="30,30,0,0"
                   Padding="8"
                   Width="Auto"
                   Height="Auto">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Views/Assets/Icons/back.png" 
                           Width="24" 
                           Height="24" 
                           Margin="0,0,10,0"/>
                            <TextBlock Text="Kembali" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="#042769"
                              VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Logo dan Deskripsi (tetap di center) -->
                    <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="40">
                        <!-- Logo -->
                        <Viewbox MaxWidth="300" 
                         MaxHeight="250" 
                         MinWidth="200"
                         MinHeight="150"
                         Margin="0,0,0,10">
                            <Image Source="pack://application:,,,/Views/Assets/Images/logo.png"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                        </Viewbox>

                        <!-- Tulisan "Tiket Laut" dengan Gradient -->
                        <TextBlock FontSize="48"
                           FontFamily="Plus Jakarta Sans"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,-20,0,10">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#042769" Offset="0.0"/>
                                    <GradientStop Color="#00658D" Offset="0.5"/>
                                    <GradientStop Color="#00B4B5" Offset="1.0"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                            <Run Text="Tiket Laut"/>
                        </TextBlock>

                        <!-- Deskripsi -->
                        <TextBlock FontSize="20"
                           FontFamily="Plus Jakarta Sans"
                           FontWeight="Bold"
                           Foreground="#042769"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="20,0,20,5"
                           TextWrapping="Wrap">
                    <Run Text="Pesan tiket kapal ferry ke berbagai pelabuhan"/>
                    <LineBreak/>
                    <Run Text="tujuan hanya dengan sekali klik!"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>


        <!-- Panel Kanan - Form Login -->
        <Grid Grid.Column="1" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Stretch"
              Margin="20">

            <!-- Background form login -->
            <Border Background="White"
                    BorderBrush="#042769"
                    BorderThickness="2"
                    CornerRadius="36" 
                    MaxWidth="500"
                    MinWidth="400"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">

                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Padding="0">
                    <StackPanel Margin="32,40,32,40">
                        <!-- Header Form -->
                        <TextBlock Text="Masuk" 
                                   FontSize="45"
                                   Foreground="#352555" 
                                   FontFamily="Plus Jakarta Sans"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>

                        <TextBlock FontSize="16"
                                   FontFamily="Plus Jakarta Sans"
                                   FontWeight="Medium"
                                   Foreground="#3E4958"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,25">
                            <Run Text="Untuk mendapatkan segala akses dan fasilitas"/>
                            <LineBreak/>
                            <Run Text="Tiket Laut, harap login terlebih dahulu"/>
                        </TextBlock>

                        <!-- Input Email -->
                        <TextBlock Text="Email" 
                                   FontSize="16"
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#011C4B"
                                   Margin="0,0,0,5"/>

                        <TextBox x:Name="txtEmail"
                                 Height="40"
                                 Padding="15,10"
                                 FontSize="14"
                                 BorderBrush="#A2A2A2"
                                 BorderThickness="0.5"
                                 Background="#F3F3F3"
                                 Margin="0,0,0,15"
                                 HorizontalAlignment="Stretch" TextChanged="txtEmail_TextChanged_1">
                            <TextBox.Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Input Password -->
                        <TextBlock Text="Password" 
                                   FontSize="16"
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#011C4B"
                                   Margin="0,0,0,5"/>

                        <PasswordBox x:Name="txtPassword"
                                     Height="40"
                                     Padding="15,10"
                                     FontSize="14"
                                     BorderBrush="#A2A2A2"
                                     BorderThickness="0.5"
                                     Background="#F3F3F3"
                                     Margin="0,0,0,5"
                                     HorizontalAlignment="Stretch">
                            <PasswordBox.Style>
                                <Style TargetType="{x:Type PasswordBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type PasswordBox}">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Lupa Kata Sandi -->
                        <TextBlock Text="Lupa Kata Sandi" 
                                   FontSize="16" 
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#0041B3"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,20"
                                   Cursor="Hand"/>

                        <TextBlock Text="atau" 
                                   FontSize="16"
                                   FontFamily="Plus Jakarta Sans" 
                                   Foreground="#717182"
                                   HorizontalAlignment="Center"
                                   FontStyle="Italic"
                                   Margin="0,0,0,20"/>

                        <!-- Tombol Google Login -->
                        <Button x:Name="btnGoogle"
                                Height="47"
                                Background="White"
                                BorderBrush="#352555"
                                BorderThickness="0.88"
                                Foreground="#001B4A"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,20"
                                Click="BtnGoogle_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="26">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Views/Assets/Icons/icongoogle.png"
                                       Width="20"
                                       Height="18"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Masuk dengan Google" 
                                           FontSize="14" 
                                           FontFamily="Plus Jakarta Sans"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- Tombol Masuk -->
                        <Button x:Name="btnLogin"
                            Height="50"
                            Background="#D9A494"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Plus Jakarta Sans"
                            FontWeight="SemiBold"
                            Content="Masuk"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            Click="BtnLogin_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="25">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Link Daftar -->
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,20">
                             <TextBlock Text="Belum punya akun? " 
                                   FontSize="14"
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#011C4B"/>
                             <TextBlock Text="Buat Akun" 
                                   FontSize="14"
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="#0041B3"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="TxtBuatAkun_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
