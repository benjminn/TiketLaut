<Window x:Class="TiketLaut.Views.TiketDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TiketLaut.Views.Components"
        Title="Detail Tiket - Tiket Laut"
        MinHeight="600"
        MinWidth="800"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F2F5FC"
        FontFamily="Plus Jakarta Sans">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                         BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.15" 
                         Color="#000000"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar Component -->
        <components:NavbarPostLogin Grid.Row="0"
                                    x:Name="navbarPostLogin"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="999"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20,40,20,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" MaxWidth="700" MinWidth="300">
                    <!-- Header -->
                    <TextBlock Text="E-Tiket Anda"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#042769"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Simpan tiket ini untuk keperluan check-in"
                               FontSize="16"
                               Foreground="#6B7280"
                               TextAlignment="Center"
                               Margin="0,0,0,40"/>

                    <!-- Ticket Card -->
                    <Border x:Name="ticketCard"
                            Background="White"
                            CornerRadius="20"
                            Effect="{StaticResource CardShadow}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header Tiket -->
                            <Border Grid.Row="0"
                                    Background="#00658D"
                                    CornerRadius="20,20,0,0"
                                    Padding="30,25">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="ðŸŽ« BOARDING PASS"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               Opacity="0.8"
                                               Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="1"
                                               x:Name="txtKodeTiket"
                                               Text="TKT20241109000001"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextWrapping="Wrap"/>
                                    
                                    <TextBlock Grid.Row="2"
                                               x:Name="txtStatus"
                                               Text="âœ“ SUDAH DIBAYAR"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#6AC936"
                                               Margin="0,10,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Detail Content -->
                            <Border Grid.Row="1" Padding="30,25">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Rute Perjalanan -->
                                    <TextBlock Grid.Row="0"
                                               Text="Rute Perjalanan"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#6B7280"
                                               Margin="0,0,0,15"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,30">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Asal -->
                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0"
                                                       x:Name="txtPelabuhanAsal"
                                                       Text="Ketapang"
                                                       FontSize="24"
                                                       FontWeight="Bold"
                                                       Foreground="#042769"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Grid.Row="1"
                                                       x:Name="txtWaktuBerangkat"
                                                       Text="07:00"
                                                       FontSize="18"
                                                       Foreground="#00658D"
                                                       Margin="0,5,0,0"/>
                                        </Grid>

                                        <!-- Arrow -->
                                        <Grid Grid.Column="1" 
                                              Margin="20,0"
                                              VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0"
                                                       Text="â†’"
                                                       FontSize="32"
                                                       Foreground="#00B4B5"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Row="1"
                                                       x:Name="txtDurasi"
                                                       Text="1j 30m"
                                                       FontSize="12"
                                                       Foreground="#6B7280"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </Grid>

                                        <!-- Tujuan -->
                                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0"
                                                       x:Name="txtPelabuhanTujuan"
                                                       Text="Gilimanuk"
                                                       FontSize="24"
                                                       FontWeight="Bold"
                                                       Foreground="#042769"
                                                       TextAlignment="Right"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Grid.Row="1"
                                                       x:Name="txtWaktuTiba"
                                                       Text="08:30"
                                                       FontSize="18"
                                                       Foreground="#00658D"
                                                       Margin="0,5,0,0"
                                                       TextAlignment="Right"/>
                                        </Grid>
                                    </Grid>

                                    <!-- Separator -->
                                    <Rectangle Grid.Row="2" Fill="#E5E7EB" Height="1" Margin="0,0,0,30"/>

                                    <!-- Info Perjalanan -->
                                    <Grid Grid.Row="3" Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0"
                                                       Text="Tanggal Keberangkatan"
                                                       FontSize="12"
                                                       Foreground="#6B7280"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Grid.Row="1"
                                                       x:Name="txtTanggalBerangkat"
                                                       Text="Jumat, 07 November 2025"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#042769"
                                                       TextWrapping="Wrap"/>
                                        </Grid>

                                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0"
                                                       Text="Nama Kapal"
                                                       FontSize="12"
                                                       Foreground="#6B7280"
                                                       Margin="0,0,0,5"
                                                       TextAlignment="Right"/>
                                            <TextBlock Grid.Row="1"
                                                       x:Name="txtNamaKapal"
                                                       Text="KMP Dharma Ferry I"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#042769"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Right"/>
                                        </Grid>
                                    </Grid>

                                    <!-- Separator -->
                                    <Rectangle Grid.Row="4" Fill="#E5E7EB" Height="1" Margin="0,0,0,30"/>

                                    <!-- Detail Penumpang -->
                                    <TextBlock Grid.Row="5"
                                               Text="Detail Penumpang"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#6B7280"
                                               Margin="0,0,0,15"/>

                                    <StackPanel Grid.Row="6" x:Name="panelPenumpang" Margin="0,0,0,20">
                                        <!-- Will be populated dynamically -->
                                    </StackPanel>

                                    <!-- Detail Kendaraan (if any) -->
                                    <StackPanel Grid.Row="7" x:Name="panelKendaraan" Visibility="Collapsed">
                                        <TextBlock Text="Detail Kendaraan"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,15"/>

                                        <Border Background="#F9FAFB"
                                                CornerRadius="10"
                                                Padding="20"
                                                Margin="0,0,0,20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0"
                                                               Text="Jenis Kendaraan"
                                                               FontSize="12"
                                                               Foreground="#6B7280"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Grid.Row="1"
                                                               x:Name="txtJenisKendaraan"
                                                               Text="-"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#042769"
                                                               TextWrapping="Wrap"/>
                                                </Grid>

                                                <Grid Grid.Column="1" HorizontalAlignment="Right">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0"
                                                               Text="Plat Nomor"
                                                               FontSize="12"
                                                               Foreground="#6B7280"
                                                               Margin="0,0,0,5"
                                                               TextAlignment="Right"/>
                                                    <TextBlock Grid.Row="1"
                                                               x:Name="txtPlatNomor"
                                                               Text="-"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#042769"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Right"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- Separator -->
                                    <Rectangle Grid.Row="8" Fill="#E5E7EB" Height="1" Margin="0,0,0,30"/>
                                </Grid>
                            </Border>

                            <!-- Total & Warning Footer -->
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Total Pembayaran -->
                                <Border Grid.Row="0" Padding="30,0,30,25">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="Total Pembayaran"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#042769"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1"
                                                   x:Name="txtTotalHarga"
                                                   Text="Rp 125.000"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#00658D"/>
                                    </Grid>
                                </Border>

                                <!-- Footer Warning -->
                                <Border Grid.Row="1"
                                        Background="#FEF3C7"
                                        CornerRadius="0,0,20,20"
                                        Padding="30,20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="âš ï¸"
                                                   FontSize="20"
                                                   Margin="0,0,15,0"
                                                   VerticalAlignment="Center"/>
                                        
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0"
                                                       Text="Penting!"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="#92400E"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Grid.Row="1"
                                                       x:Name="txtCheckInTime"
                                                       Text="Harap tiba di pelabuhan minimal 30 menit sebelum keberangkatan untuk proses check-in."
                                                       FontSize="13"
                                                       Foreground="#92400E"
                                                       TextWrapping="Wrap"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid Margin="0,30,0,0" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Download Button -->
                        <Button Grid.Column="0"
                                x:Name="btnDownload"
                                Background="#00658D"
                                Foreground="White"
                                Padding="30,15"
                                Margin="0,0,15,0"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="BtnDownload_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="{TemplateBinding Padding}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0"
                                                                   Text="ðŸ“¥ "
                                                                   FontSize="16"
                                                                   Margin="0,0,10,0"/>
                                                        <ContentPresenter Grid.Column="1"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#004D6A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            Download E-Tiket
                        </Button>

                        <!-- Kembali Button -->
                        <Button Grid.Column="1"
                                x:Name="btnKembali"
                                Background="#E5E7EB"
                                Foreground="#042769"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="BtnKembali_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D1D5DB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            Kembali
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
